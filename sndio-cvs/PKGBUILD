# Maintainer: Christian Neukirchen <chneukirchen@gmail.com>
pkgname=sndio-cvs
pkgver=20121105
pkgrel=1
pkgdesc="small audio and MIDI framework part of the OpenBSD project"
arch=('i686' 'x86_64')
url="http://www.sndio.org/"
license=('custom:ISC')
groups=()
depends=('alsa-lib')
makedepends=('cvs')
provides=('sndio')
conflicts=('sndio')
replaces=()
backup=()
options=()
install=sndio.install
source=()
noextract=()
md5sums=() #generate with 'makepkg -g'

_cvsroot=anoncvs@moule.caoua.org:/sndio
_cvsmod=sndio

build() {
  cd "$srcdir"
  msg "Connecting to $_cvsmod CVS server...."

  if [[ -d "$_cvsmod/CVS" ]]; then
    cd "$_cvsmod"
    cvs -z3 update -d
  else
    cvs -z3 -d "$_cvsroot" co -D "$pkgver" -f "$_cvsmod"
    cd "$_cvsmod"
  fi

  msg "CVS checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_cvsmod-build"
  cp -r "$srcdir/$_cvsmod" "$srcdir/$_cvsmod-build"
  cd "$srcdir/$_cvsmod-build"

  #
  # BUILD HERE
  #
  ./configure --prefix=/usr
  make clean
  make
}

package() {
  cd "$srcdir/$_cvsmod-build"
  make DESTDIR="$pkgdir/" install
  install -D -m644 <(sed -n '/Copyright/,/PERFORMANCE/p' <sndiod/sndiod.c) "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

# vim:set ts=2 sw=2 et:
