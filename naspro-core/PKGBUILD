# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=(naspro-core)
pkgver=0.2.0
pkgrel=1
pkgdesc="NASPRO (recursive acronym for NASPRO Architecture for Sound PROcessing). NASPRO Core: a tiny convenience library containing useful code to implement LV2 dynamic manifest plugins and especially bridges from other APIs to LV2."
arch=('i686' 'x86_64')
url="http://naspro.atheme.org/"
license=('GPL')
groups=('naspro')
depends=('lv2core')
makedepends=('cmake' 'pkg-config')
source=("http://download.sourceforge.net/project/naspro/naspro/0.2.0/$pkgname-$pkgver.tar.gz")
md5sums=('b62f439ffee3585eb6c75b5ce3f034c6')

build() {
  cd $srcdir/$pkgname-$pkgver
  
  cmake -DCMAKE_INSTALL_PREFIX=/usr || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}

