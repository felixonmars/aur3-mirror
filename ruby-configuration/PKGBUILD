pkgname=ruby-configuration
_gemname=configuration
pkgver=1.2.0
pkgrel=1
pkgdesc="Pure Ruby scoped configuration files"
arch=(any)
url="http://github.com/ahoward/configuration"
license=('RUBY')
depends=(ruby) # Full dependency information is available in the yaml specification
makedepends=(rubygems)
source=(http://rubygems.org/downloads/${_gemname}-${pkgver}.gem)
noextract=(${_gemname}-${pkgver}.gem)
md5sums=('e317c671b49ae2ff01d610e3aa1c5daa')

package(){
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" ${_gemname}-$pkgver.gem
}
