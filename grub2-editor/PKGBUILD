# Maintainer: Jekyll Wu <adaptee [at] gmail [dot] com>

pkgname=grub2-editor
_pkgname=kcm-grub2
pkgver=0.4.5
pkgdesc="A KDE4 control module for configuring the GRUB2 bootloader."
pkgrel=1
arch=(i686 x86_64)
_kdeapps=139643
url="http://kde-apps.org/content/show.php?content=${_kdeapps}"
license=(GPLv3)
makedepends=('cmake' 'automoc4')
depends=('kdelibs' )
source=("http://kde-apps.org/CONTENT/content-files/${_kdeapps}-${_pkgname}-${pkgver}.tar.gz")
md5sums=('886e149f91c4f69b182047dfc57bf19b')

build(){
  cd ${srcdir}/${_pkgname}-${pkgver}

  if [ -d build ] ; then
      true
  else
      mkdir build
  fi

  cd build

  cmake -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_BUILD_TYPE=Release  \
        ..
  make
}

package(){
  cd ${srcdir}/${_pkgname}-${pkgver}/build
  make DESTDIR="${pkgdir}" install
}
md5sums=('0426295f167b1bba007be48e80330894')
