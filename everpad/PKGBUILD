# Maintainer: Jameson Pugh <imntreal@gmail.com>

pkgname=everpad
pkgver=2.3
pkgrel=2
pkgdesc="An Evernote client"
arch=('i686' 'x86_64')
url=http://launchpad.net/~nvbn-rm
license=('MIT')
depends=('python2-pyside' 'python2-magic' 'python2-httplib2' 'python2-oauth2' 'python-sqlalchemy')
install=everpad.install
source=("https://launchpad.net/~nvbn-rm/+archive/ppa/+files/${pkgname}_${pkgver}.orig.tar.xz")
sha256sums=('70094011985d63c5d78cc231fe88d038906b0b66c9e7595c9ea740ac6d84ede5')

build() {
  cd "$srcdir/$pkgname"

  python2 setup.py build
}

package() {
  cd "$srcdir/$pkgname"

  python2 setup.py install --root=$pkgdir

  mkdir -p $pkgdir/usr/share/licenses/$pkgname
  cp debian/everpad/usr/share/doc/everpad/copyright $pkgdir/usr/share/licenses/$pkgname/
}

# vim:set ts=2 sw=2 et:
