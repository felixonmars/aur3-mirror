# Contributor: Jameson Pugh <imntreal@gmail.com>
# Maintainer: Jameson Pugh <imntreal@gmail.com>

pkgname=everpad
pkgver=2.5.2
pkgrel=2
pkgdesc="An Evernote client"
arch=('i686' 'x86_64')
url="http://github.com/nvbn/everpad"
license=('MIT')
depends=('python2-pyside' 'python2-magic' 'python2-oauth2' 'python2-sqlalchemy' 'python2-beautifulsoup3' 'qtwebkit' 'python2-html2text' 'shiboken' 'python2-dbus' 'python2-pysqlite' 'python-magic' 'python2-keyring' 'python2-regex')
makedepends=('python2-distribute')
install=everpad.install
source=("https://launchpad.net/~nvbn-rm/+archive/ppa/+files/${pkgname}_${pkgver}.orig.tar.xz")
sha256sums=('d3084e03aa4738d3121ce0753256f8d82895c2ed05d4295cc2b7c35874b02c45')

build() {
  cd "$srcdir/$pkgname"

  python2 setup.py build
}

package() {
  cd "$srcdir/$pkgname"

  python2 setup.py install --root=$pkgdir

  sed -i 's/usr/\/usr/g' $pkgdir/usr/lib/python2.7/site-packages/everpad/tools.py

  mkdir -p $pkgdir/usr/share/licenses/$pkgname
  cp debian/copyright $pkgdir/usr/share/licenses/$pkgname/
}

# vim:set ts=2 sw=2 et:
