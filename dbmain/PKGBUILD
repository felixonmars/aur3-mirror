# Maintainer: Eric Engestrom <aur [at] engestrom [dot] ch>

pkgname=dbmain
pkgver=9.1.6
pkgrel=5
pkgdesc="A free data-modeling and data-architecture tool"
arch=(i686 x86_64)
url=http://www.db-main.eu/
license=(custom)
depends=(java-environment)
if test "$CARCH" == 'i686'; then
  depends+=(sdl)
  depends+=(libjpeg6)
  depends+=(gtk2)
  depends+=(libpng12)
  depends+=(libsm)
  depends+=(alsa-lib)
  depends+=(libtiff4)
  depends+=(libxtst)
fi
if test "$CARCH" == 'x86_64'; then
  depends+=(lib32-sdl)
  depends+=(lib32-libjpeg6)
  depends+=(lib32-gtk2)
  depends+=(lib32-libpng12)
  depends+=(lib32-libsm)
  depends+=(lib32-alsa-lib)
  depends+=(lib32-libtiff4)
  depends+=(lib32-libxtst)
fi
provides=(dbmain)
source=('http://www.rever.eu/DISTRIBUTION/DB-MAIN/dbm-916-linux-setup.tar.gz'
        'dbmain.sh')
md5sums=('d1845933346ff8a53871a362d16d52e2'
         '17778032d374637229573212738042d5')

package(){
  cd "${srcdir}"

  # Actual program
  install -d ${pkgdir}/opt/dbmain/
  cp -r bin doc examples java plugins License.txt readme.html ${pkgdir}/opt/dbmain/

  # Launch script
  install -d ${pkgdir}/usr/bin/
  install -m 755 dbmain.sh ${pkgdir}/usr/bin/dbmain

  # LICENSE file
  install -D -m644 License.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
