#Contributor: Julien MISCHKOWITZ <wain@archlinux.fr>
#Contributor: Panagiotis Papadopoulos pano_90 (AT) gmx (DOT) net

pkgname=languagetool
pkgver=1.7
pkgrel=1
pkgdesc="An open source language checker"
arch=(any)
url="http://www.languagetool.org" 
license=("GPL")
depends=('java-runtime>=6')
makedepends=('unzip' 'java-environment>=6')
optdepends=(
    'libreoffice-extension-languagetool: for LibreOffice support'
    'vim-languagetool: for Vi Improved support'
)
install=languagetool.install
source=(http://www.languagetool.org/download/LanguageTool-$pkgver.oxt languagetool.sh)
noextract=(LanguageTool-$pkgver.oxt)
md5sums=('5ec6c084757e408f4464ddfbf4341b7b'
         'dba78ff4f035ba079ba062924a7e121e')

build() { 
    cd "$srcdir"
    install -d "$pkgdir"/usr/{bin,share/languagetool}
    unzip -q LanguageTool-$pkgver.oxt -d "$pkgdir"/usr/share/languagetool/
    install -m755 languagetool.sh "$pkgdir"/usr/bin/languagetool
}

