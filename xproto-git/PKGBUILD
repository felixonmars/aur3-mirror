# Maintainer: Det <nimetonmaili at gmail a-dot com>
# Contributor: Matt Parnell/ilikenwf <parwok@gmail.com>
# Based on [extra]'s xproto

pkgname=xproto-git
pkgver=20110329
pkgrel=1
pkgdesc="X11 core wire protocol and auxiliary headers (Git version)"
arch=(any)
license=('custom')
url="http://xorg.freedesktop.org/"
makedepends=('git')
provides=('xproto=7.0.22')
conflicts=('xproto')
groups=('xorg')

_gitroot=git://git.freedesktop.org/git/xorg/proto/${pkgname/-*}
_gitname=${pkgname/-*}

build() {
  msg "Connecting to git.freedesktop.org GIT server...."

  if [ -d ${_gitname} ] ; then
     cd ${_gitname} && git pull origin && cd ..
     msg "The local files are updated."
  else
     git clone ${_gitroot}
  fi

  msg "GIT checkout done or server timeout"

  msg "Creating build directory"
  [ -d ${_gitname}-build ] && rm -rf ${_gitname}-build
  cp -R ${_gitname} ${_gitname}-build

  msg "Starting make..."
  cd ${_gitname-build}
  ./autogen.sh --prefix=/usr --disable-specs
  make
}

package(){
  cd ${_gitname-build}
  make DESTDIR="${pkgdir}" install
  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgname/-*}/COPYING"
}