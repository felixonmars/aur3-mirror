# Contributor: Johannes Dewender   arch at JonnyJD dot net
pkgname=python2-apt
_pkgname=python-apt
_python=python2
pkgver=0.8.8.1
pkgrel=1
pkgdesc="Python binding of libapt-pkg"
arch=('i686' 'x86_64')
url="http://packages.debian.org/sid/python-apt"
license=('GPL2')
depends=('python2' 'apt')
makedepends=()
conflicts=()
options=(!emptydirs)
source=(http://ftp.de.debian.org/debian/pool/main/p/python-apt/python-apt_0.8.8.1.tar.gz)
md5sums=('d4c54189b2d1082dc68276864178dc9d')

build() {
  cd "$srcdir/$_pkgname-$pkgver"
  $_python setup.py build
  sed -i -e '1s|/usr/bin/env python$|/usr/bin/env python2|' apt/auth.py
  sed -i -e '1s|/usr/bin/env python$|/usr/bin/env python2|' apt/progress/gtk2.py
}
package() {
  cd "$srcdir/$_pkgname-$pkgver"
  $_python setup.py install --root="$pkgdir/" --optimize=1
}

