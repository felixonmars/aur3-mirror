# Maintainer: Bartek Piotrowski <barthalion@gmail.com>

pkgname=pentadactyl
pkgver=1.0b6.1
_fxver=$(firefox -v | sed 's/^.*\([0-9]\+\.[0-9]\+\).*$/\1/g' -)
_emid=pentadactyl@dactyl.googlecode.com #TODO: Extract from install.rdf with sed or awk
pkgrel=1
pkgdesc="Firefox for Vim and Links addicts. The next generation of Vimperator by its primary developers."
arch=('any')
url="http://dactyl.sourceforge.net/"
license=('MIT')
depends=('firefox>=3.5')
source=(http://dactyl.googlecode.com/files/$pkgname-$pkgver.xpi)

package() {
    cd "$srcdir"
    local dstdir="$pkgdir/usr/lib/firefox-$_fxver/extensions/$_emid"
    install -d "$dstdir"
    cp -R * "$dstdir"
    rm "$dstdir/$pkgname-$pkgver.xpi"
}

md5sums=('40aeb4a28229fcfdc4a993b846ab5a9c')
