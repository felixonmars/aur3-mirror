# Maintainer: Alex Brick <alex@alexrbrick.com>
pkgname=pymazon
pkgver=0.9.1
pkgrel=2
pkgdesc="A Python-based downloader for the Amazon MP3 store."
arch=(any)
url="http://code.google.com/p/pymazon/"
license=('GPL3')
depends=('python2' 'python2-crypto')
optdepends=('pygtk: Gtk2 interface' 'pyqt: Qt interface')
source=(Pymazon-0.9.1.tar.gz::http://pymazon.googlecode.com/files/Pymazon-0.9.1.tar.gz)
noextract=()
md5sums=('e5cfd1a011ad2baa86576bdae1e64f96')

build() {
  cd "$srcdir/$pkgname"
  python2 setup.py build
}

check() {
  cd "$srcdir/$pkgname"
  python2 setup.py check
}

package() {
  cd "$srcdir/$pkgname"
  python2 setup.py install --prefix=$pkgdir/usr/
}

