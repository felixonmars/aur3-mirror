# Maintainer: Christos Nouskas <nous at archlinux dot us>
# 29 May 2010

_pkgname=yaffs2utils
pkgname=${_pkgname}-snapshot
_pkgver=0.1
_pkgsnap=9
pkgver=${_pkgver}.${_pkgsnap}
pkgrel=1
pkgdesc="A collection of utilities to make/extract a YAFFS2/YAFFS1 image for Linux. Currently includes mkyaffs2 and unyaffs2."
arch=('i686' 'x86_64')
url=('http://code.google.com/p/yaffs2utils')
license=('GPL2')
depends=()
makedepends=('gcc')
options=('strip')
source=(http://yaffs2utils.googlecode.com/files/${_pkgname}-${_pkgver}.tar.gz)

build() {
  cd $srcdir/${_pkgname}-${_pkgver}/src
  make
}

package() {
  cd $srcdir/${_pkgname}-${_pkgver}
  mkdir -p $pkgdir/usr/bin
  install -m 0755 $srcdir/${_pkgname}-${_pkgver}/src/mkyaffs2 $pkgdir/usr/bin/
  install -m 0755 $srcdir/${_pkgname}-${_pkgver}/src/unyaffs2 $pkgdir/usr/bin/
}

# sums
sha256sums=('8a802c2ed3038fd7c6bb64ef6784df1e8f0915d273d7322fc4f2377839c9746b')
