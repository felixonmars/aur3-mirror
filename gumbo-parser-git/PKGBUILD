# Maintainer: KokaKiwi <admin@kokaelkiwi.eu>

_pkgname=gumbo-parser
_pkgver=1.0
pkgname=gumbo-parser-git
pkgver=1.0.3304d48
pkgrel=1
pkgdesc='A pure-C HTML5 parser'
url='https://github.com/google/gumbo-parser'
license=('Apache')
source=('git://github.com/google/gumbo-parser.git')
md5sums=('SKIP')
sha1sums=('SKIP')
sha256sums=('SKIP')
arch=('i686' 'x86_64')
depends=('glibc')
makedepends=('git')
provides=('gumbo-parser')

pkgver() {
  cd "${srcdir}/${_pkgname}"
  echo "${_pkgver}.$(git describe --always | sed 's|-|.|g')"
}

build() {
  cd "${srcdir}/${_pkgname}"
  chmod +x autogen.sh
  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_pkgname}"
  make DESTDIR="${pkgdir}" install
}
