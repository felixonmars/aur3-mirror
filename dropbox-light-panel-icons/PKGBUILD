# Maintainer: Limao Luo <luolimao at gmail dot com>

pkgname=dropbox-light-panel-icons
pkgver=1.0
pkgrel=4
pkgdesc="Notification icons for Dropbox for themes with bright panels."
url="http://forums.dropbox.com/topic.php?id=7818"
arch=('any')
license=('CCPL:by-3.0')
depends=('dropbox' 'hicolor-icon-theme') 
conflicts=('dropbox-dark-panel-icons' 'dropbox-humanity-icons' 'dropbox-humanity-dark-icons')
source=(dropbox-light-panel-icons.tar.gz::http://dl.dropbox.com/u/62148/Misc/Dropbox%20Light%20Panel.tar.gz)
sha256sums=('ddf634665612aa8dad6ca4a733286b4b4625e74beb71c6daa9bdd9ab15fbc39a')
_destdir=$pkgdir/usr/share/icons/hicolor/16x16/status
install=icons.INSTALL

build() {
	cd "${srcdir}/icons"
	for i in *.png; do mv "$i" "dropboxstatus-$i"; done
	mkdir -p $_destdir
	cp * $_destdir
}