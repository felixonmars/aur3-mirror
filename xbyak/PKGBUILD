pkgname=xbyak
pkgver=2.31
_date=20101208
pkgrel=1
pkgdesc='x86, x64 JIT assembler'
arch=('i686' 'x86_64')
url='http://homepage1.nifty.com/herumi/soft/xbyak_e.html'
depends=()
license=('BSD')
source=("http://homepage1.nifty.com/herumi/soft/xbyak/xbyak.${_date}.zip")
md5sums=('307f7b8409ed15597bb6ca434df18323')

build() {
  cd ${srcdir}/${pkgname}

  make PREFIX=${pkgdir}/usr install
  install -D -m644 ${srcdir}/${pkgname}/COPYRIGHT \
    ${pkgdir}/usr/share/licenses/${pkgname}/COPYRIGHT
}
