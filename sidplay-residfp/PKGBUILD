pkgname=sidplay-residfp
pkgver=0.1.1
pkgrel=1
pkgdesc="Sidplay2 fork with improved filter emulation."
arch=('i686' 'x86_64')
url="http://sidplay-residfp.sourceforge.net/"
license=('GPL')
depends=('sidplay-residfp-libs')
makedepends=('pkgconfig' 'libtool>=1.4b' 'autoconf' 'automake' 'subversion')
conflicts=('sidplay2')
source=('sidplay2.ini')
md5sums=('2e408791bc4e6a0bd26e3b08281b9e00')

_svntrunk=https://sidplay-residfp.svn.sourceforge.net/svnroot/sidplay-residfp/tags/sidplayfp/$pkgver

build() {
  msg 'Checking out...'
  svn co --non-interactive --trust-server-cert $_svntrunk $srcdir
  autoreconf -i
  ./configure --prefix=/usr --mandir=/usr/man
  make || return 1
  make DESTDIR=$pkgdir install

  mkdir -p "$startdir"/pkg/usr/share/"$pkgname"/
  install -m644 ../sidplay2.ini "$startdir"/pkg/usr/share/"$pkgname"/sidplay2.ini
}

install=${pkgname}.install
