# Maintainer: Dan Serban
# Contributor: Elijah Perrault

pkgname=umplayer
pkgver=0.xx.latest
pkgrel=1
pkgdesc="The multimedia player that fills all your needs"
arch=(i686 x86_64)
url=http://www.umplayer.com/
license=(GPL)
depends=(qt mplayer)
install=umplayer.install

build()
{
  rm umplayer.tar.gz 2>/dev/null || true
  wget -O umplayer.tar.gz "http://umplayer.svn.sourceforge.net/viewvc/umplayer/?view=tar"
  bsdtar -xf umplayer.tar.gz
  cd umplayer/umplayer/trunk
  make PREFIX=/usr
  make PREFIX=/usr DESTDIR="${pkgdir}" install
}

