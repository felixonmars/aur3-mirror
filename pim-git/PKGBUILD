# Contributor: Army [uli.armbruster (the google thing)]

_pkgname=pim
pkgname=pim-git
pkgver=0.2.0.18.g8d7cdea
pkgrel=1
pkgdesc="A Python image viewer with vim-like keybindings"
arch=('any')
url="http://github.com/Narrat/Pim"
license=('MIT')
depends=('python-gobject')
makedepends=('git')
source=('pim::git://github.com/Narrat/Pim.git')
md5sums=('SKIP')


pkgver() {
  cd $_pkgname
  git describe --tags --always | sed -e 's|-|.|g'
}

package() {
  cd ${srcdir}/${_gitname}
  install -Dm755 ${srcdir}/${_pkgname}/${_pkgname} ${pkgdir}/usr/bin/${_pkgname}
} 
