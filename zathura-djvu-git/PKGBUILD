#Contributor: karnath <karnathtorjian@gmail.com>
pkgname=zathura-djvu-git
pkgver=20111211
pkgrel=1
pkgdesc="Adds DjVu support to zathura by using the djvulibre library"
arch=('i686' 'x86_64')
url="https://pwmt.org/"
license=('custom')
#temporaly developer depends
depends=('djvulibre' 'zathura-girara-git')
makedepends=('git')
conflicts=('zathura-djvu')
provides=('zathura-djvu-git' 'zathura-djvu')

_gitroot="git://pwmt.org/zathura-djvu.git"
_gitname="zathura-djvu"

build(){
  cd ${srcdir}
  msg "Connecting to GIT server..."

  if [ -d ${srcdir}/$_gitname ]; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."
 
  if [ -d ${srcdir}/$_gitname-build ]; then
    rm -rf ${srcdir}/$_gitname-build
  fi

  git clone ${srcdir}/$_gitname ${srcdir}/$_gitname-build || return 1
  cd ${srcdir}/$_gitname-build/ || return 1

  make DESTDIR="$pkgdir" install || return 1
# No license included for now
#  install -D -m664 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

