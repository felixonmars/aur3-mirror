+/** Write function that correctly handles EINTR.
+ */
+static ssize_t xwrite(int fd, const void *buf, size_t count)
+{
+	ssize_t ret;
+	do {
+		ret = write(fd, buf, count);
+	} while(ret == -1 && errno == EINTR);
+	return(ret);
+}
