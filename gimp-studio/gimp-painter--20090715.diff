+  gdouble result = 0.0;
+
+  for (i = 0; i < INK2_DIST_SMOOTHER_BUFFER; i++)
+    result += ink->dt_buffer[i];
+
+  return (result / (gdouble) INK2_DIST_SMOOTHER_BUFFER);
