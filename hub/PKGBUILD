pkgname=hub
pkgver=1.7.0
pkgrel=1
pkgdesc="hub introduces git to GitHub"
arch=('any')
url="http://defunkt.io/hub"
depends=('git' 'ruby')
makedepends=()
license=('MIT')
groups=()
source=('http://defunkt.io/hub/standalone'
	'LICENSE')
md5sums=('01f534256b991dad24b33a935f04a432'
         'c1e5fa6106c5bb66e1140364a34deab3')

build() {
  /bin/true
}

package() {
  cd ${srcdir}
  install -D -m755 standalone ${pkgdir}/usr/bin/${pkgname}
  install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
