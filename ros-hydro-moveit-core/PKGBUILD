
pkgdesc="ROS - Core libraries used by MoveIt!."
url='http://www.ros.org/'

pkgname='ros-hydro-moveit-core'
pkgver='0.5.7'
_pkgver_patch=0
arch=('i686' 'x86_64')
pkgrel=3
license=('BSD')

ros_makedepends=(ros-hydro-srdfdom
  ros-hydro-sensor-msgs
  ros-hydro-visualization-msgs
  ros-hydro-random-numbers
  ros-hydro-shape-msgs
  ros-hydro-urdfdom-headers
  ros-hydro-octomap
  ros-hydro-moveit-msgs
  ros-hydro-geometry-msgs
  ros-hydro-roslib
  ros-hydro-actionlib-msgs
  ros-hydro-fcl
  ros-hydro-std-msgs
  ros-hydro-urdfdom
  ros-hydro-eigen-stl-containers
  ros-hydro-kdl-parser
  ros-hydro-shape-tools
  ros-hydro-rostime
  ros-hydro-console-bridge
  ros-hydro-geometric-shapes
  ros-hydro-eigen-conversions
  ros-hydro-octomap-msgs
  ros-hydro-trajectory-msgs
  ros-hydro-catkin)
makedepends=('cmake' 'git' 'ros-build-tools'
  ${ros_makedepends[@]}
  assimp
  boost
  eigen3
  pkg-config)

ros_depends=(ros-hydro-srdfdom
  ros-hydro-sensor-msgs
  ros-hydro-visualization-msgs
  ros-hydro-geometric-shapes
  ros-hydro-shape-msgs
  ros-hydro-urdfdom-headers
  ros-hydro-octomap
  ros-hydro-moveit-msgs
  ros-hydro-geometry-msgs
  ros-hydro-actionlib-msgs
  ros-hydro-fcl
  ros-hydro-std-msgs
  ros-hydro-urdfdom
  ros-hydro-eigen-stl-containers
  ros-hydro-kdl-parser
  ros-hydro-shape-tools
  ros-hydro-rostime
  ros-hydro-console-bridge
  ros-hydro-random-numbers
  ros-hydro-eigen-conversions
  ros-hydro-octomap-msgs
  ros-hydro-trajectory-msgs)
depends=(${ros_depends[@]}
  assimp
  boost
  eigen3)

_tag=release/hydro/moveit_core/${pkgver}-${_pkgver_patch}
_dir=moveit_core
source=("${_dir}"::"git+https://github.com/ros-gbp/moveit_core-release.git"#tag=${_tag}
        'catkin.patch')
md5sums=('SKIP'
         '54c61da107463ec7dc4b02a954c3689b')

build() {
  # Use ROS environment variables
  /usr/share/ros-build-tools/clear-ros-env.sh
  [ -f /opt/ros/hydro/setup.bash ] && source /opt/ros/hydro/setup.bash

  # Apply patch
  msg "Patching source code"
  cd ${srcdir}/${_dir}
  git apply ${srcdir}/catkin.patch

  # Create build directory
  [ -d ${srcdir}/build ] || mkdir ${srcdir}/build
  cd ${srcdir}/build

  # Fix Python2/Python3 conflicts
  /usr/share/ros-build-tools/fix-python-scripts.sh ${srcdir}/${_dir}

  # Build project
  cmake ${srcdir}/${_dir} \
        -DCMAKE_BUILD_TYPE=Release \
        -DCATKIN_BUILD_BINARY_PACKAGE=ON \
        -DCMAKE_INSTALL_PREFIX=/opt/ros/hydro \
        -DPYTHON_EXECUTABLE=/usr/bin/python2 \
        -DPYTHON_INCLUDE_DIR=/usr/include/python2.7 \
        -DPYTHON_LIBRARY=/usr/lib/libpython2.7.so \
        -DSETUPTOOLS_DEB_LAYOUT=OFF
  make
}

package() {
  cd "${srcdir}/build"
  make DESTDIR="${pkgdir}/" install
}
