_use_pepperflash=0

post_install() {
        update_resources
if [ "${_use_pepperflash}" = "1" ]; then
  if [[ $(cat etc/chromium-dev/default) == *ppapi* ]]; then
    : # do nothing
  else
    sed -i '/CHROMIUM_FLAGS/s|"$|--enable-greasemonkey  --enable-sync --ppapi-flash-path=/usr/lib/chromium-dev/PepperFlash/libpepflashplayer.so --ppapi-flash-version=0"|' /etc/chromium-dev/default
  fi
  instructions
fi
}

post_upgrade() {
        update_resources
[ "${_use_pepperflash}" = "1" ] && sed -i "s|ppapi-flash-version=.*[0-9]|ppapi-flash-version=0|g" /etc/chromium-dev/default
}

post_remove() {
        update_resources
}

pre_remove() {
[ "${_use_pepperflash}" = "1" ] && sed -i 's|--enable-greasemonkey  --enable-sync --ppapi-flash-path=/usr/lib/chromium-dev/PepperFlash/libpepflashplayer.so --ppapi-flash-version=1.*[0-9]||' /etc/chromium-dev/default
}

update_resources() {
        xdg-icon-resource forceupdate --theme hicolor &> /dev/null
        update-desktop-database -q
}
instructions() {
  /bin/cat << EOF

Disable all other flash plugins:
Type chrome://plugins/ in the adress bar and press Enter
Click on Details button on the top right
Click on Disable near all the Flash plugins except the first one

EOF
}
