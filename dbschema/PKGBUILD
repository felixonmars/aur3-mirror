# Maintainer: Boris Shomodjvarac <shomodj AT gmail DOT com>
pkgname=dbschema
pkgver=6.1.0.3553
pkgrel=1
pkgdesc='Relational Data Browse, Query Builder, SQL Editor, schema deployment and synchronization'
arch=('i686' 'x86_64')
url='http://www.dbschema.com/'
license='custom'
depends=('java-runtime')
source=("http://www.dbschema.com/DbSchema.zip" "dbschema" "dbschema.desktop")
 
build(){
  install -Dm644 "dbschema.desktop" "${pkgdir}/usr/share/applications/dbschema.desktop"
  install -Dm644 "DbSchema/config/icons/icon.png" "${pkgdir}/usr/share/icons/hicolor/64x64/apps/dbschema.png"

  install -dm755 ${pkgdir}/opt
  cp -r DbSchema ${pkgdir}/opt/${pkgname}
  
  chmod 755 ${pkgdir}/opt/${pkgname}/DbSchema.sh
  install -Dm755 dbschema ${pkgdir}/usr/bin/dbschema
}

md5sums=('579fd34202b5961ae15e9612e2aec89e'
         '6c73b1b14f18a5ec67665da711a6b15b'
         '189bc40e4c79c7644f1927104a62104c')
