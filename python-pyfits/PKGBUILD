# Maintainer:  Mike Ressler <mike.ressler@alum.mit.edu>
pkgname=python-pyfits
pkgver=2.4.0
pkgrel=2
pkgdesc="A python language interface to FITS formatted data files"
url="http://www.stsci.edu/resources/software_hardware/pyfits"
license="BSD"
depends=('python2>=2.3' 'python2-numpy')
arch=(i686 x86_64)
source=("http://www.stsci.edu/resources/software_hardware/pyfits/pyfits-$pkgver.tar.gz")
md5sums=('f6009137c060557ddd2ed244f2cb1b12')

build() {
  cd $startdir/src/pyfits-$pkgver
  python2 setup.py install --prefix=/usr --root=$startdir/pkg
  install -D -m644 lib/LICENSE.txt $startdir/pkg/usr/share/licenses/python-pyfits/LICENSE.txt
}

