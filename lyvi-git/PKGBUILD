# Maintainer: OK100 <ok100.ok100.ok100@gmail.com>

pkgname=lyvi-git
pkgver=20120705
pkgrel=1
pkgdesc="A simple command-line lyrics viewer for various audio players."
url="https://github.com/ok100/lyvi"
arch=(any)
license=('WTFPLv2')
install=lyvi-git.install
depends=('python' 'glyr-git')
optdepends=('cmus: cmus support'
            'shell-fm: shell-fm support'
            'pianobar: pianobar support'
            'mpd: mpd support'
            'mpc: mpd support'
            'moc: moc support'
            'mplayer: mplayer support'
            'vlc: vlc support')
makedepends=('git')

_gitroot="git://github.com/ok100/lyvi.git"
_gitname="lyvi"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server..."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi
  msg "GIT checkout done or server timeout"
}

package() {
  cd "$srcdir/$_gitname"
  install -m755 -D lyvi $pkgdir/usr/bin/lyvi
}

# vim:set ts=2 sw=2 et:
