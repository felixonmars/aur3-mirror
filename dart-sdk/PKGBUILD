pkgname=dart-sdk
pkgver=0.5.0.1_r21823
pkgrel=1
pkgdesc="the Dart language SDK. (integration version as tested)"
arch=('i686' 'x86_64')
url="http://www.dartlang.org/docs/sdk/"
license=('BSD')
depends=('unzip' 'wget' 'java-runtime')
optdepends=()
makedepends=()
provides=()
conflicts=()
replaces=()
install=dart-sdk.install
changelog=dart-sdk.changelog
noextract=()

if test "$CARCH" == x86_64; then
	source=("https://storage.googleapis.com/dart-editor-archive-integration/21823/dartsdk-linux-64.tar.gz")
	md5sums=('897b2f20ff49e7fb8c9607e72c3fd6d6')
else
	source=("https://storage.googleapis.com/dart-editor-archive-integration/21823/dartsdk-linux-32.tar.gz")
	md5sums=('1195837466ce11f7459c23154eafbcf1')
fi

source+=(dart2js dartdoc pub dart_analyzer)
md5sums+=('a1a1a287f933fa3282395f690c80af45' '07c9333c61a17fdd56da1b2dd31cb48e' '06988fdc0454c24efbc92711176f4cd3' 'e7cfce0f96b33e2d690cb295bb5043af')

package(){
	mkdir -p ${pkgdir}/opt
	find ${srcdir}/dart-sdk -perm -u+x -exec chmod +x '{}' +
	find ${srcdir}/dart-sdk -perm -u+r -exec chmod +r '{}' +
	cp -r ${srcdir}/dart-sdk ${pkgdir}/opt/

	mkdir -p ${pkgdir}/usr/bin
	# copy dart binary
	chmod +x ${srcdir}/dart-sdk/bin/dart
	cp ${srcdir}/dart-sdk/bin/dart ${pkgdir}/usr/bin/

	# copy custom startup scripts
	for f in ${source[@]:1:4}; do
		chmod +x ${srcdir}/$f
		cp ${srcdir}/$f ${pkgdir}/usr/bin/
	done
}