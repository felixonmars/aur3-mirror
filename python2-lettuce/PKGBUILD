pkgname=python2-lettuce
pkgver=0.2.3
pkgrel=1
pkgdesc="Behaviour Driven Development for python."
arch=(any)
url="http://lettuce.it/"
license=('GPL3')
depends=('python2')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
source=("http://pypi.python.org/packages/source/l/lettuce/lettuce-$pkgver.tar.gz")
noextract=()
md5sums=('b444c56811423047e65777ce0290aecb')

build() {
    cd $srcdir/lettuce-$pkgver
    python2 setup.py install --root=$pkgdir/ --optimize=1
}

