# Example Config file for GRUB2 - The GNU GRand Unified Bootloader
# /usr/share/grub/grub.cfg.example .

# Load Graphical modules for (U)EFI
insmod efi_gop
insmod efi_uga

# Load Font module
insmod font


# Setup GFXTERM along with loading unifont.pf2 font file

if loadfont ${prefix}/unicode.pf2
then
	insmod gfxterm
	set gfxmode=auto
	set gfxpayload=keep
	terminal_output gfxterm
	
	# set color_normal=light-blue/black
	# set color_highlight=light-cyan/blue
	
	# insmod png
	# insmod jpeg
	# background_image ${prefix}/archlinux.png
fi

insmod part_gpt
insmod part_msdos
insmod fat
insmod ext2

# Timeout for menu
set timeout=5

# Set default boot entry as Entry 0
set default=0

# (0) Arch Linux
menuentry "Arch Linux in 1st Partition /boot of /dev/sda GPT Partition Table" {
set root=(hd0,gpt1)
linux /vmlinuz26 root=/dev/sda1 ro add_efi_memmap
initrd /kernel26.img
}

# (1) Arch Linux
menuentry "Arch Linux in 1st Partition /boot of /dev/sda MBR or msdos Partition Table" {
set root=(hd0,msdos1)
linux /vmlinuz26 root=/dev/sda1 ro add_efi_memmap
initrd /kernel26.img
}
