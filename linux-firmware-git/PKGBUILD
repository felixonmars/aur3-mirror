# Based on linux-firmware by Thomas BÃ¤chler <thomas@archlinux.org>
# Maintainer: xduugu
pkgname=linux-firmware-git
pkgver=20120502
pkgrel=1
pkgdesc="Firmware files for Linux"
arch=('any')
url="http://git.kernel.org/?p=linux/kernel/git/firmware/linux-firmware.git;a=summary"
license=('GPL2' 'GPL3' 'custom')
makedepends=('git')
conflicts=('linux-firmware'
           'kernel26-firmware'
           'carl9170-fw')
provides=("linux-firmware=$pkgver")
options=(!strip)
source=(carl9170-1.fw::http://distfiles.lesslinux.org/carl9170-1.fw-1.9.4)
md5sums=('30e2ae80c33b3008d271556d1a14e3ea')
sha256sums=('2016f0cd31f2338cdaa795d467cf0117bca225a1017368dc281caef387bcc0b7')

_gitroot="git://git.kernel.org/pub/scm/linux/kernel/git/firmware/linux-firmware.git"
_gitname="linux-firmware"

build() {
  msg "Connecting to GIT server...."

  if [[ -d $_gitname ]] ; then
    cd "$_gitname"
    git checkout master
    git pull origin
    msg "The local files are updated."
  else
    git clone --depth 1 "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
}

package() {
  cd "$srcdir/$_gitname"
  install -dm755 "$pkgdir/usr/lib/firmware" "$pkgdir/usr/share/licenses/$pkgname"
  cp -a * "$pkgdir/usr/lib/firmware/"
  install -Dm644 "$srcdir/carl9170-1.fw" "$pkgdir/usr/lib/firmware/carl9170-1.fw"

  rm -f "$pkgdir/usr/lib/firmware/GPL"*
  mv "$pkgdir/usr/lib/firmware"/{LICEN*,WHENCE} "$pkgdir/usr/share/licenses/$pkgname/"
}

# vim:set ts=2 sw=2 et:
