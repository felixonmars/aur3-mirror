pkgname="libgit2-git"
pkgver=20110309
pkgrel=1
pkgdesc="C git library"
url="https://github.com/libgit2/libgit2"
depends=('openssl')
makedepends=('git' 'openssl')
provides=('libgit2')
conflicts=('libgit2')
arch=('any')
license=('GPL2')

_gitroot="https://github.com/libgit2/libgit2.git"
_gitname="libgit2"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #

  sed -i 's/\/usr\/bin\/env python/\/usr\/bin\/env python2/g' waf

  ./waf configure --prefix=/usr/||return 1
  ./waf install --destdir=${pkgdir}||return 1
}
