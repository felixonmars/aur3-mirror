# Maintainer: boenki <boenki at gmx dot de>

pkgname=otter-browser
pkgver=0.9.01
pkgrel=2
pkgdesc="Browser aiming to recreate classic Opera (12.x) UI using Qt5."
arch=('i686' 'x86_64')
url="http://$pkgname.org"
license=('GPL3')
depends=('qt5-webkit' 'qt5-script' 'hicolor-icon-theme' 'desktop-file-utils')
makedepends=('cmake')
conflicts=('otter-browser-git')
install=otter.install
source=($pkgname-$pkgver.tar.gz::https://github.com/Emdek/otter/archive/v$pkgver.tar.gz)
md5sums=('081b62825ee2d3d1ed3eec9075c1eaad')

build() {
  cd otter-$pkgver
  rm -rf build
  mkdir build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX="/usr" ../
  make
}

package() {
  cd otter-$pkgver/build
  make DESTDIR=$pkgdir install
}