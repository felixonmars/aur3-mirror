# Maintainer: Adam Reichold <adamreichold@myopera.com>
pkgname=qpdfview
pkgver=0.3.3
pkgrel=2
pkgdesc='A tabbed PDF viewer using the poppler library.'
arch=('i686' 'x86_64')
url='https://launchpad.net/qpdfview'
license=('GPL2')
depends=('qt' 'poppler-qt' 'libcups')
source=("http://launchpad.net/$pkgname/trunk/$pkgver/+download/$pkgname-$pkgver.tar.gz" "cancel_search_before_delete_all.patch")
md5sums=('55bbdd834749cf6aea2fef1b2e312567' 'ce7b6e39d2e0a5e293f2bdda10beb5a5')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  
  patch -p0 < ../cancel_search_before_delete_all.patch

  qmake
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make INSTALL_ROOT=$pkgdir install
}

