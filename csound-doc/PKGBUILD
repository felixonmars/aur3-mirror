_pkg=csound
pkgname=csound-doc
pkgver=5.13
pkgrel=1
pkgdesc="The Canonical Csound Reference Manual"
url="http://csound.sourceforge.net/"
arch=('any')
license=('LGPL' 'GPL')
depends=('csound')
source=("http://downloads.sourceforge.net/csound/Csound${pkgver}_manual_html.zip")
md5sums=('f4b7601757d5315ac57489154c69db62')

build() {
  return 0
}

package() {
  # docs
  install -d "$pkgdir/usr/share/doc/$_pkg"
  cp -a "$srcdir/html" "$pkgdir/usr/share/doc/$_pkg"

  # Change permissions
  find "$pkgdir" -type f -exec chmod 644 {} \;
}
