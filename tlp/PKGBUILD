# Maintainer: Matthias Gabriel <gabm at live dot de>
pkgname=tlp
pkgver=0.3.5
pkgrel=1
pkgdesc="Powersaving scripts for ThinkPads(c)"
arch=('any')
url="https://github.com/linrunner/TLP/wiki/TLP-Linux-Advanced-Power-Management"
license=('GPL2')

depends=('hdparm' 'bash' 'pm-utils' 'wireless_tools' 'rfkill')
makedepends=('git')
optdepends=('ethtool: deactivate Wake on LAN' 'smartmontools: enable tlp-stat to show S.M.A.R.T. values of hard disks' 'tp_smapi: for setting battery thresholds' 'dmidecode: Provide additional information about the system.')
backup=(etc/default/tlp)
source=()
conflicts=('laptop-mode-tools')
md5sums=()

install=tlp.install

build() {
  git clone git://github.com/linrunner/TLP.git
  cd TLP/

  git checkout $pkgver

  cd ..


}

package() {
  cd "$srcdir/TLP"

  install -d "${pkgdir}"/usr/sbin
  install -m 755 tlp "${pkgdir}"/usr/sbin

  install -d "${pkgdir}"/usr/bin
  install -m 755 tlp-rf "${pkgdir}"/usr/bin/bluetooth
  ln -f "${pkgdir}"/usr/bin/bluetooth "${pkgdir}"/usr/bin/wifi
  ln -f "${pkgdir}"/usr/bin/bluetooth "${pkgdir}"/usr/bin/wwan
  install -m 755 tlp-run-on "${pkgdir}"/usr/bin/run-on-ac
  ln -f "${pkgdir}"/usr/bin/run-on-ac "${pkgdir}"/usr/bin/run-on-bat
  install -m 755 tlp-stat "${pkgdir}"/usr/bin/
  install -m 755 tlp-usblist "${pkgdir}"/usr/bin/

  install -d "${pkgdir}"/usr/lib/tlp-pm
  install -m 755 tlp-functions "${pkgdir}"/usr/lib/tlp-pm
  install -m 755 tlp-rf-func "${pkgdir}"/usr/lib/tlp-pm
  install -m 755 tlp-nop "${pkgdir}"/usr/lib/tlp-pm

  install -d "${pkgdir}"/etc/default
  install -m 644 default "${pkgdir}"/etc/default/tlp

  install -d "${pkgdir}"/etc/rc.d/
  install -m 755 tlp.init "${pkgdir}"/etc/rc.d/tlp


  install -d "${pkgdir}"/usr/lib/pm-utils/{power.d,sleep.d}
  install -m 755 zztlp "${pkgdir}"/usr/lib/pm-utils/power.d/zztlp
  install -m 755 49wwan "${pkgdir}"/usr/lib/pm-utils/sleep.d/49wwan
  install -m 755 49bay "${pkgdir}"/usr/lib/pm-utils/sleep.d/49bay

  install -d "${pkgdir}"/etc/xdg/autostart
  install -m 644 tlp.desktop "${pkgdir}"/etc/xdg/autostart/tlp.desktop

  install -d "${pkgdir}"/etc/pm/power.d

  install -d "${pkgdir}"/usr/share/licenses/tlp
  install -m 644 COPYING "${pkgdir}"/usr/share/licenses/tlp
  install -m 644 LICENSE "${pkgdir}"/usr/share/licenses/tlp

  install -d ${pkgdir}/usr/share/doc/tlp/
  install -m 644 README ${pkgdir}/usr/share/doc/tlp/

  install -d ${pkgdir}/usr/share/man/man1/
  install -m 644 man/bluetooth.1 ${pkgdir}/usr/share/man/man1/
  install -m 644 man/run-on-ac.1 ${pkgdir}/usr/share/man/man1/
  install -m 644 man/run-on-bat.1 ${pkgdir}/usr/share/man/man1/
  install -m 644 man/wifi.1 ${pkgdir}/usr/share/man/man1/
  install -m 644 man/wwan.1 ${pkgdir}/usr/share/man/man1/

  install -d ${pkgdir}/usr/share/man/man8/
  install -m 644 man/tlp.8 ${pkgdir}/usr/share/man/man8/
  install -m 644 man/tlp-stat.8 ${pkgdir}/usr/share/man/man8/


}
