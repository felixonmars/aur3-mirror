# Maintainer: Jan "heftig" Steffens <jan.steffens@gmail.com>

pkgname=libtxc_dxtn
pkgver=070518
pkgrel=2
arch=(i686 x86_64)
pkgdesc="Texture compression library for Mesa"
url="http://homepage.hispeed.ch/rscheidegger/dri_experimental/s3tc_index.html"
license=(custom:BSD)
depends=(mesa)
makedepends=()
source=(http://pkgbuild.com/~heftig/${pkgname}${pkgver}.tar.gz)
md5sums=('03beb907c13df6484cde210ce219f4b8')

build() {
  cd "$srcdir/$pkgname"
  make
}

package() {
  cd "$srcdir/$pkgname"
  make DESTDIR="$pkgdir" install

  # License
  mkdir -p "$pkgdir/usr/share/licenses/$pkgname"
  sed -n '5,22{s|^ \* \?||;p}' txc_dxtn.h \
    > "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
