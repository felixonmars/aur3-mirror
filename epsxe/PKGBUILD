# Maintainer: Alexej Magura <agm2819*gmail*>
# Contributor: Swen Simon <swsimon at gmail dot com>
#
pkgname=epsxe
pkgver=1.9.0
pkgrel=29
pkgdesc="Enhanced PSX emulator"
url="http://epsxe.com"
arch=('i686' 'x86_64')
depends=(libtinfo)
[ "$CARCH" == "i686" ] && depends+=(gtk gtk2 sdl_ttf)
[ "$CARCH" == "x86_64" ] && depends+=(lib32-gtk lib32-gtk2 lib32-ncurses lib32-libxt lib32-sdl_ttf lib32-alsa-lib)
makedepends=('unzip' 'wget') 
license=('unknown')
install=epsxe.install
options=(!strip)
source=(epsxe.desktop epsxe.png epsxe.sh)
md5sums=('087234e20ae9147f83df24b69fc93bca' 'eb0c46b8ae1355c589792f6be1835e47'
         'c3fb55197b297ced80e51f185dfba586')
_e190url='http://www.epsxe.com/files/epsxe190lin.zip'
_e190sum='3eea56cf74f9ee81a28dfd018be051da'

prepare () {
  cd "$srcdir"
  wget -N "$_e190url"
  md5sum ${_e190url/http:\/\/www.epsxe.com\/files\//} | grep "$_e190sum" -q
  unzip -qqo epsxe190lin.zip
  for exp in "s/\$pkgname/$pkgname/" "s/\$pkgver/$pkgver/" "s_\$pkgdir_/opt/\$pkgname/\$pkgver_" "s_\$cmd_\$pkgdir/\$pkgname_"; do
    sed -i $exp ${pkgname}.sh
  done
  find "$srcdir" -name '*.me' -delete
}

package () {
  install -d "$pkgdir/opt/$pkgname/"{plugins,bios,memcards,cfg,cdimages,$pkgver/{cheats,patches,sstates,snap}}
  chmod 775 "$pkgdir/opt/$pkgname/"{plugins,bios,memcards,cfg,cdimages,$pkgver/{cheats,patches,sstates,snap}} -R
  cd "$srcdir"
  install -Dm 644 "docs/${pkgname}_linux_en.txt" "$pkgdir/opt/$pkgname/$pkgver/doc/README"
  install -Dm 755 'epsxe' "$pkgdir/opt/$pkgname/$pkgver/$pkgname"
  install -Dm 644 'keycodes.lst' "$pkgdir/opt/$pkgname/$pkgver/keycodes.lst"

  for item in $(cd cheats && find . -name '*.cht'); do
    install -Dm 644 "cheats/$item" "$pkgdir/opt/$pkgname/$pkgver/cheats/$item"
  done

  for things in cfg plugins bios memcards cdimages; do
    ln -sf "/opt/$pkgname/$things" -T "$pkgdir/opt/$pkgname/$pkgver/$things"
  done

  install -Dm 755 ${pkgname}.sh "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 "$srcdir/epsxe.png" "$pkgdir/usr/share/pixmaps/${pkgname}.png"
  install -Dm 644 "$srcdir/epsxe.desktop" "$pkgdir/usr/share/applications/${pkgname}.desktop"

  ln -sf "$HOME/.epsxerc" -T "$pkgdir/opt/$pkgname/$pkgver/.epsxerc"
  chgrp -R games "$pkgdir/opt/$pkgname"
}
