# Maintainer: Alucryd <alucryd@gmail.com>
pkgname=gnome-shell-extension-move-clock
pkgver=1.0
pkgrel=1
pkgdesc="A gnome-shell extension to move the clock/calendar to the status area"
source=('http://www.fpmurphy.com/gnome-shell-extensions/moveclock.tar.gz')
md5sums=('7a61da4411a4afaf6b7af7fd51e8fc40')
arch=('any')
url="http://www.fpmurphy.com/gnome-shell-extensions/"
license=('GPL2')
depends=('gnome-shell')

package() {
    cd "$srcdir"
    mkdir -p "$pkgdir/usr/share/gnome-shell/extensions/"
    cp -R "moveclock@fpmurphy.com" "$pkgdir/usr/share/gnome-shell/extensions"
}

