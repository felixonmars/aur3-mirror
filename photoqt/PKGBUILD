# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=photoqt
pkgver=1.0
pkgrel=3
pkgdesc="PhotoQt is an image viewer, aimed at being fast, highly customisable and good looking."
arch=('i686' 'x86_64')
url="http://photoqt.org/"
license=('GPL2')
depends=('qt4>=4.7')
makedepends=('cmake')
optdepends=('exiv2' 'graphicsmagick' 'phonon')
install=$pkgname.install
source=(http://photoqt.org/pkgs/$pkgname-$pkgver.tar.gz $pkgname.install)
md5sums=('b54dc4de8c7561551f47e47738633002' '5871e8e968e0a6c68538553795ee331e')

build() {
  cd $srcdir/$pkgname-$pkgver
  
  cmake . -DCMAKE_INSTALL_PREFIX=/usr -DEXIV2=OFF -DPHONON=OFF -DGM=OFF

  # If you want to build PhotoQt with all options(exiv2, graphicsmagick and phonon included), uncomment next line and comment previous line.
  #cmake . -DCMAKE_INSTALL_PREFIX=/usr
          
}

package() {
  cd $srcdir/$pkgname-$pkgver

  make DESTDIR=$pkgdir install
}