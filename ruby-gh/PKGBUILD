# Maintainer: Francois Garillot <francois[@]garillot.net>
_gemname=gh
pkgname=ruby-$_gemname
pkgver=0.13.2
pkgrel=1
pkgdesc='Multi-layer client for the GitHub API v3'
arch=('any')
url='https://github.com/travis-ci/gh'
license=('MIT')
depends=(
  'ruby'
  'ruby-faraday>=0.8'
  'ruby-backports'
  'ruby-multi_json>=1.0'
  'ruby-addressable'
  'ruby-net-http-persistent>=2.7'
  'ruby-net-http-pipeline')
makedepends=('rubygems')
source=(http://rubygems.org/downloads/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('e13bbcd0b5260207de60f5dc98cbdad0')

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" $_gemname-$pkgver.gem
}
