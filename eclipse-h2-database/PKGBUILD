pkgname=eclipse-h2-database
pkgver=1.1.117
_pkgdate=20100519200754
_jarname="org.h2_1.1.117.v20091003-1000.jar"
pkgrel=1
pkgdesc="Support for H2 databases in Eclipse"
arch=('i686' 'x86_64')
url="http://www.h2database.com/"
license=('EPL')
depends=("eclipse")
noextract=($_jarname)
_mirror="http://www.eclipse.org/downloads/download.php?r=1&file="
source=("$_mirror/tools/orbit/downloads/drops/R$_pkgdate/bundles/$_jarname")

package() {
install -d $pkgdir/usr/share/eclipse/dropins/${pkgname#eclipse-}/eclipse/plugins || return 1
install -m644 $srcdir/$_jarname \
	$pkgdir/usr/share/eclipse/dropins/${pkgname#eclipse-}/eclipse/plugins || return 1
}

md5sums=('5428ace19611ba2a5a028e07a466212a')
