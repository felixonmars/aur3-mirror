# Contributor: rennero <rennero@bastardi.net>
pkgname=hasciicam
pkgver=1.0
pkgrel=1
pkgdesc="Renders video input as ascii (either to the terminal, to a text file, or a live webpage)."
url="http://ascii.dyne.org/"
depends=('aalib' 'libv4l')
arch=('i686' 'x86_64')
source=(ftp://ftp.dyne.org/hasciicam/releases/$pkgname-$pkgver.tar.gz)
md5sums=('f640300a17408266387510c2fd050ef6')
license=('gpl')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make prefix=$pkgdir/usr install
}
