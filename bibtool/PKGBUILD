# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>

pkgname=bibtool
pkgver=2.53
pkgrel=2
pkgdesc="Command line manipulation of BibTeX files. "
arch=('i686' 'x86_64')
url="http://www.gerd-neugebauer.de/software/TeX/BibTool/"
license=('GPL')
depends=('texlive-bin')
source=(http://www.gerd-neugebauer.de/software/TeX/BibTool/BibTool-$pkgver.tar.gz)
md5sums=('ec5c9707a45a0e5a7e33fbf4d949f5f4')

build() {
  cd "$srcdir/BibTool"

  ./configure --prefix=/usr
  make
}
package() {
  cd "$srcdir/BibTool"
  install -d ${pkgdir}/usr/{bin,lib/BibTool}
  install -Dm755 bibtool ${pkgdir}/usr/bin/bibtool
  for _lib in Lib/*.*; do
    /bin/install -c -m 644 ${_lib} ${pkgdir}/usr/lib/BibTool
  done
}
