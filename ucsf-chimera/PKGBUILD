# Maintainer: Neer Sighted (neersighted) <neersighted@myopera.com>

pkgname=ucsf-chimera
pkgver=1.7
pkgrel=4
pkgdesc='Extensible molecular modeling system'
url='https://www.cgl.ucsf.edu/chimera/'
license=('MIT')
install=ucsf-chimera.install
source=("chimera-${pkgver}-linux.bin::https://www.cgl.ucsf.edu/chimera/cgi-bin/secure/chimera-get.py?file=linux/chimera-${pkgver}-linux.bin&choice=Accept&ident=SomethingDynamic")
sha256sums=('080a4b6930980998b3ec5a362821685f101172924022911d7b3f37c756e2bf93')
sha1sums=('2afab982d898ec99573293c56ae30265b8981760')
md5sums=('f5c56fa6ad0272bfb7a6962c23883510')
arch=('i686' 'x86_64')

package() {
  cd "${srcdir}"

  # Prepare the directory structure.
  install -dm755 "${pkgdir}/opt"

  # Run the installer.
  chmod +x chimera.bin
  ./chimera.bin -d "${pkgdir}/opt/ucsf-chimera"

  cd "${pkgdir}"

  # Remove useless icon.
  rm opt/ucsf-chimera/chimeraIcon.png
}

