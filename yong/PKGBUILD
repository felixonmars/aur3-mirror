# Maintainer: osily <ly50247 at gmail dot com>

pkgname=yong
pkgver=20120419
pkgrel=1
pkgdesc="A Chinese input method"
arch=(i686 x86_64)
url="http://yong.uueasy.com/"
license=("freeware")
source=("http://ly50247.googlecode.com/files/yong-lin-${pkgver}.7z")
sha1sums=("c89ef64affb9515a3ebedbc7b302a680c2690acc")
makedepends=("p7zip")

build() {
    cd $srcdir/$pkgname
    [[ "$CARCH" = "x86_64" ]] && rm gtk-im/* && mv l64/* . 
    rm -rf l64
    mv yong.chm README.txt doc
}

package() {
    mkdir -p $pkgdir/usr/bin/
    mkdir -p $pkgdir/usr/lib/
    cd $srcdir
    mv yong $pkgdir/usr/lib
    cd $pkgdir/usr/bin
    ln -sf ../lib/yong/yong .
    ln -sf ../lib/yong/yong-config .
    cd $pkgdir/usr/lib
    ln -sf yong/libl.so .
}

# vim:set ts=4 sw=4 et:
