# Edited by: Zachary Lund <admin@computerquip.com>
pkgname=xwayland-git
pkgver=20130319
pkgrel=1
pkgdesc="Xorg Server with Wayland Support"
arch=('i686' 'x86_64')
url="http://wayland.freedesktop.org/"
license=('MIT')
depends=( 'weston' 'wayland' 'xorg-util-macros' 'fontsproto' 'videoproto' 'libxfont')
conflicts=( 'xorg-server' 'xorg-server-devel' 'xorg-server-common' )
optdepends=()
makedepends=( 'git' 'xtrans' 'xf86driproto' 'xcmiscproto' 'bigreqsproto' 'resourceproto' 'libxres' 'randrproto' 'fontsproto' 'videoproto' 'compositeproto' 'recordproto' 'libxkbfile' 'libxfont' 'mtdev' 'scrnsaverproto' )
provides=( 'xorg-server' )
backup=( )
source=( )
md5sums=( )
_gitroot="git://anongit.freedesktop.org/xorg/xserver"
_gitname="xserver"

build() {
  cd $srcdir
  echo "Fetching source from GIT"
  if ! [ -d "$_gitname" ] ; then
    git clone "$_gitroot" -b xwayland-1.12
    cd "$_gitname"
  else
    # else pull sources
    cd "$_gitname" && git pull
  fi
  # compile
  ./autogen.sh --prefix=/usr/
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  pwd
  make DESTDIR=${pkgdir} install
  rm ${pkgdir}/usr/lib/xorg/modules/extensions/libglx.so
}

