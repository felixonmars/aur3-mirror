pkgname=guayadeque
pkgver=0.3.5
pkgrel=2
pkgdesc="Full Featured Linux media player for large collections"
arch=('i686' 'x86_64')
url="http://guayadeque.org/"
license=('GPL3')
depends=('taglib' 'curl' 'glib2'  'gstreamer0.10' 'gstreamer0.10-base-plugins' 'dbus-core'
	'gstreamer0.10-good-plugins' 'libxml2' 'sqlite3' 'wxgtk' 'flac' 'wxpython' 'libgpod')
makedepends=('cmake')
optdepends=('gstreamer0.10-plugins: all Gstreamer plugins to play all kind of music files')
conflicts=('guayadeque-svn')
install=$pkgname.install
source=("http://downloads.sourceforge.net/project/$pkgname/$pkgname/$pkgver/$pkgname-$pkgver.tar.bz2")
md5sums=('984921531e4a04c578fdc99783e6068c')

build() {
  cd $pkgname-$pkgver

  ./build
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
