post_install ()
{
	echo ">"
	echo "> Updating module dependencies. Please wait ..."
	echo "> 更新模块依赖关系，请稍候 ..."

	kernel_version=$(pacman -Ql kernel26-snapshot | grep "lib/modules/.*/modules.order" | cut -d "/" -f4)
	depmod -a ${kernel_version}

	echo ">"
	echo "> Generating boot initramfs with mkinitcpio.  Please wait..."
	echo "> 用mkinitcpio创建启动内核镜像，请稍候..."
	echo ">"

	/sbin/mkinitcpio -p kernel26-snapshot

	rootdevice=$(cat /proc/cmdline | cut -d " " -f1 | cut -d "=" -f2)
	bootindex=${rootdevice#/dev/[s|h]d[a-z]}
	let bootindex-=1
	kernelname="vmlinuz26-snapshot"

	echo "> Generating boot initramfs finished: "
	echo "> The kernel name is "${kernelname}" "
	echo "> The boot initramfs is "kernel26-snapshot.img" and "kernel26-snapshot-fallback.img.img" "
	echo "> Pls. add the corresponding boot options to your boot configuration file."
	echo "> Below lines need to be added to grub.lst for reference: "
	echo "> 启动内核镜像创建完成:"
	echo "> 内核： "${kernelname}" "
	echo "> 启动内核镜像： "kernel26.img" 和 "kernel26-fallback.img" "
	echo "> 请将相应启动选项加入到启动配置文件，以下是grub.lst的仅供参考:"
	echo ""
	echo "title Arch Linux ${rootdevice} (initrd=/boot/kernel26-snapshot.img) "
	echo "root (hd0,${bootindex}) "
	echo "kernel /boot/${kernelname} root=${rootdevice} ro"
	echo "initrd /boot/kernel26-snapshot.img"
	echo " "
	echo "title Arch Linux Failsafe ${rootdevice} (initrd=/boot/kernel26-snapshot-fallback.img) "
	echo "root (hd0,${bootindex}) "
	echo "kernel /boot/${kernelname} root=${rootdevice} ro nomodeset acpi=off noapic pci=bios"
	echo "initrd /boot/kernel26-snapshot-fallback.img"
	echo " "
}

post_upgrade()
{
	post_install
}