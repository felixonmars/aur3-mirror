# Maintainer: Anthony Cornehl <accornehl[at]gmail[dot]com>
# https://github.com/twinshadow/abs-ofed
pkgname=libibcm
pkgver=1.0.5
pkgrel=2
pkgdesc="Userspace InfiniBand Communication Manager"
groups=('ofed')
url="http://www.openfabrics.org"
arch=('x86_64' 'i686')
license=('GPL2' 'custom:"Open Fabrics Alliance BSD"')
depends=('libibverbs')
source=("http://www.openfabrics.org/downloads/rdmacm/${pkgname}-${pkgver}.tar.gz")
md5sums=('7ede8d7e96d6a65f09f289767bd931ea')
sha512sums=('eeaee4062be5cda2ccf681e749aa7377967d59f987b9122ba6ee37418b199e3b2ee8f69f26174d093435bd3ec1b811a98cd9e39434feb289644135a808e83dd3')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr \
              --mandir=/usr/share/man \
              --sysconfdir=/etc \
              --localstatedir=/var
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make -j1 DESTDIR="${pkgdir}" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}
