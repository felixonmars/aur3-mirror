package() {
  install -d -m 755 "${pkgdir}/usr/share/fonts/TTF"
  install -m 644 ${srcdir}/*.{ttf,ttc} "${pkgdir}/usr/share/fonts/TTF"
  install -D -m 644 "${srcdir}/license.rtf" "${pkgdir}/usr/share/licenses/${pkgname}/license.rtf"
}

