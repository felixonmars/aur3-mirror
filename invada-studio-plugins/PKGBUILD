# Maintainer: Philipp Ãœberbacher <murks at lavabit dot com>
pkgname=invada-studio-plugins
pkgver=0.3.1
pkgrel=1
pkgdesc="A set of LADSPA audio effect plugins, ported from VST."
arch=('i686' 'x86_64')
url="http://www.invadarecords.com/Downloads.php?ID=00000263"
license=('GPL2')
depends=('glibc')
makedepends=('ladspa')
source=(http://www.invadarecords.com/downloads/${pkgname}_${pkgver}-1.tar.gz)
md5sums=('d72241f84deff5aebe13c8ff102d7b04')

build() {
cd "${srcdir}/${pkgname}-${pkgver}"
sed -i "s|usr/local|${pkgdir}/usr|" Makefile
make
}

package() {
cd "${srcdir}/${pkgname}-${pkgver}"
make install
}
