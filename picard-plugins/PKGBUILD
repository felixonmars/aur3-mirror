pkgname=picard-plugins
pkgver=0.12.1
pkgrel=3
pkgdesc="Plugins for MusicBrainz Picard"
arch=('any')
url="http://musicbrainz.org/doc/PicardPlugins"
license=('GPL')
depends=('picard>=0.12.0')
source=(http://users.musicbrainz.org/~luks/picard-qt/plugins/discnumber.py
http://users.musicbrainz.org/~luks/picard-qt/plugins/featartist.py
http://oxygene.sk/lukas/titlecase.py
http://users.musicbrainz.org/~outsidecontext/picard/plugins/coverart.py
http://users.musicbrainz.org/~luks/picard-qt/plugins/lastfm/__init__.py
http://users.musicbrainz.org/~luks/picard-qt/plugins/lastfm/ui_options_lastfm.py
http://users.musicbrainz.org/~luks/picard-qt/plugins/addrelease.py
http://users.musicbrainz.org/~luks/picard-qt/plugins/cuesheet.py
http://users.musicbrainz.org/~outsidecontext/picard/plugins/originalreleasedate.py
http://dispuutivv.nl/~jan/bonusdisc.py
http://foolip.org/mb/encoding.py)
md5sums=('4dcbf286e1facae1c03f116fe2d078d6'
         '7885928a813344a80679794c21dfd193'
         'd658d27422da5d41d6fd32fbd47b51ed'
         '5baa4d9383f51f3798a49171fac603dc'
         'b5cfbdb00a21928078d9590a91083773'
         '691cb36b7724362a9986c7a8fbb559f2'
         '64cf9fcb6212dde57aed679a02e88b31'
         'edd3f6351ddbfe8c3687895cef58536a'
         'c25c4a38046a1e9e224286975e812dfe'
         '7c9ca3c1355900761a0f697dc8de30cd'
         '7566f2b8b3ce74adccb1fecf616a207b')

build() {
  plugindir=${pkgdir}/usr/lib/python2.7/site-packages/picard/plugins
  cd "$srcdir"
  mkdir -p $plugindir
  cp discnumber.py featartist.py titlecase.py coverart.py addrelease.py cuesheet.py bonusdisc.py encoding.py originalreleasedate.py $plugindir
  mkdir -p $plugindir/lastfm
  cp __init__.py ui_options_lastfm.py $plugindir/lastfm
}

