pkgname=lightum
pkgver=1.5
pkgrel=1
pkgdesc="MacBook automatic keyboard brightness daemon"
arch=('x86_64' 'i686')
url="https://github.com/poliva/lightum"
license=(GPL)
groups=()
depends=('dbus' 'libxss' 'libx11' 'libxext')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
#source=(https://github.com/poliva/$pkgname/tarball/v$pkgver)
source=(/tarball/v$pkgver)
noextract=()

build() { 
  cd $srcdir/poliva-$pkgname-57016f2/
  make
}

package() {
  cd $srcdir/poliva-$pkgname-57016f2/
  make DESTDIR="$pkgdir" install
}

md5sums=('2cbf4fdadcb56015c1708916ec797772')
