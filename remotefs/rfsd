#! /bin/bash

. /etc/rc.conf
. /etc/rc.d/functions
. /etc/default/rfsd

PID=$(cat $RFSD_PIDFILE 2>/dev/null)

case "$1" in
	start)
		stat_busy "Starting rfsd"
		[[ -z $PID ]] && /usr/bin/rfsd -a ${RFSD_LISTEN} -p ${RFSD_PORT} -u ${RFSD_USER} -r ${RFSD_PIDFILE} ${RFSD_QUIET}
		if [[ $? -gt 0 ]]; then
			stat_fail
		else
			add_daemon rfsd
			stat_done
		fi
		;;
	stop)
		stat_busy "Stopping rfsd"
		[[ ! -z $PID ]] && kill $PID &> /dev/null
		if [[ $? -gt 0 ]]; then
			stat_fail
		else
			add_daemon rfsd
			stat_done
		fi
		;;
	restart)
		$0 stop
		$0 start
		;;
	reload)
		kill -s HUP $PID 
		$0 start
		;;
	*)
		echo "Usage: /etc/rc.d/rfsd {start|stop|restart}"
		;;
esac

exit 0
