# Maintainer: Felix Rohrbach <fxrh@gmx.de>
pkgname=tano
pkgver=0.8.0
pkgrel=1
pkgdesc="An open-source cross-platform IP TV player based on Qt and libvlc"
arch=('i686' 'x86_64')
url="http://tanoplayer.co.cc/"
license=('GPL')
groups=()
depends=('libvlc-qt>=0.5.0')
makedepends=('cmake')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(http://downloads.sourceforge.net/project/tano/Tano%20Player/${pkgver}/${pkgname}_${pkgver}_src.tar.gz)
noextract=()
md5sums=('389fdcf4032c3bd737c07906818a7429')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  mkdir -p build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr ../
  make 
}

package() {
  cd "$srcdir/$pkgname-$pkgver/build"

  make DESTDIR="$pkgdir/" install
}

