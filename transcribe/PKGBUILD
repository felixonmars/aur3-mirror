# Maintainer: Mario Kozjak (archman @ bbs.archlinux.org)
pkgname=transcribe
pkgver=8.10
pkgrel=2
pkgdesc="The software to help transcribe recorded music."
arch=('i686' 'x86_64')
url="http://www.seventhstring.com/"
license=('non-free')
provides=('transcribe')
source=("http://www.seventhstring.com/xscribe/downlinux/xscsetup.tar.gz")
md5sums=("ee7570b3c220c55400ffa5d7e4a9804b")

build() {
  cd "$srcdir/$pkgname"
  mkdir $pkgdir/{usr,usr/bin}
  cp transcribe "$pkgdir/usr/bin/"
}
