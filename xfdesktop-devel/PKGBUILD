# Original PKGBUILD (extra/xfdesktop):
# $Id: PKGBUILD 138129 2011-09-17 02:28:33Z allan $
# Maintainer: AndyRTR <andyrtr@archlinux.org>
# Contributor: tobias <tobias funnychar archlinux.org>

pkgname=xfdesktop-devel
_pkgname=xfdesktop
pkgver=4.9.2
pkgrel=2
pkgdesc="A desktop manager for Xfce (Development Version)"
arch=('i686' 'x86_64')
license=('GPL2')
url="http://www.xfce.org/"
depends=('libxfce4ui-devel>=4.9.0' 'libxfce4util-devel>=4.9.0' 'thunar>=1.2.0' 'garcon>=0.1.2' 'libwnck>=2.30.0')
makedepends=('intltool' 'xfce4-panel>=4.9.0')
optdepends=('xfce4-panel-devel: panel menu plugin')
options=('!libtool')
install=xfdesktop.install
source=(http://archive.xfce.org/src/xfce/${_pkgname}/4.9/${_pkgname}-${pkgver}.tar.bz2)
sha1sums=('6581a0953a317dd6d89291a34f76510167857a4c')

groups=('xfce4-devel')
provides=("$_pkgname=$pkgver")
conflicts=("$_pkgname" "$_pkgname-git")

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  ./configure --prefix=/usr \
	--sysconfdir=/etc \
	--libexecdir=/usr/lib \
	--localstatedir=/var \
	--disable-static \
	--enable-gio-unix \
	--enable-thunarx \
	--enable-notifications \
	--disable-debug
  make
}

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
