# Maintainer: Emiliano Vavassori <syntaxerrormmm(at)gmail.com>
pkgname=ruby-launchy
_gemname=launchy
pkgver=2.1.0
pkgrel=1
pkgdesc="An helper class for launching cross-platform applications in a fire and forget manner"
arch=(any)
url="http://copiousfreetime.rubyforge.org/launchy/"
license=('custom:ISCL')
depends=('ruby' 'ruby-addressable>=2.2.6')
makedepends=('ruby')
source=(http://rubygems.org/downloads/${_gemname}-${pkgver}.gem)
noextract=(${_gemname}-${pkgver}.gem)
md5sums=('b5f2eedbbd3c6bada4d923f693c842d7')

package() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" ${_gemname}-${pkgver}.gem
}
