# Maintainer: lilydjwg <lilydjwg@gmail.com>
pkgname=dnscrypt-proxy-git
pkgver=20121222
pkgrel=1
pkgdesc="A tool for securing communications between a client and a DNS resolver."
arch=('i686' 'x86_64')
url="http://dnscrypt.org/"
license=('custom:as is')
depends=()
makedepends=('git')
md5sums=()
backup=('etc/conf.d/dnscrypt-proxy')
provides=(dnscrypt-proxy=1.2.0)

_gitroot="git://github.com/opendns/dnscrypt-proxy.git"
_gitname="dnscrypt-proxy"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build/"

  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR=${pkgdir} install
  install -D -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
  install -D -m644 packages/opensuse/dnscrypt.service "${pkgdir}/usr/lib/systemd/system/dnscrypt.service"
}
