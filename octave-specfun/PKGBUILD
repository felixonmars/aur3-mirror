# Maintainer: Clemens Buchacher <drizzd@aon.at>
pkgname=octave-specfun
pkgver=1.0.9
pkgrel=1
pkgdesc="Special functions including ellipitic functions, etc

Special
 Ci
 Si
 cosint
 dirac
 ellipj
 ellipke
 erfcinv
 erfcx
 expint
 expint_E1
 expint_Ei
 heaviside
 laguerre
 lambertw
 psi
 sinint
 test_sncndn
 zeta
"
arch=(any)
url="http://octave.sourceforge.net/specfun/"
license=('GPL2')
depends=('octave>=2.9.7')
makedepends=()
optdepends=()
backup=()
options=()
install=octave-specfun.install
source=("http://downloads.sourceforge.net/octave/specfun-$pkgver.tar.gz")
noextract=("specfun-$pkgver.tar.gz")
md5sums=('264ab3748fa01aed0efde413b629f63d')

build() {
  cd "$srcdir"
  mkdir -p $pkgdir/usr/share/octave/packages
  mkdir -p $pkgdir/usr/lib/octave/packages
  mkdir -p builddir
  echo "pkg build -nodeps builddir specfun-$pkgver.tar.gz" | octave --silent
  cp builddir/specfun-$pkgver.tar.gz $pkgdir/usr/share/octave/specfun.tar.gz
}
