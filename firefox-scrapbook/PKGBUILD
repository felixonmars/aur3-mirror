# $Id: PKGBUILD 433 2011-06-30 20:45:50Z pupykins $
# Maintainer: Sergej Pupykin <pupykin.s+arch@gmail.com>

pkgname=firefox-scrapbook
pkgver=1.4.7
_firefox_ver=5.0
pkgrel=1
pkgdesc="plugin for firefox which can save and organize saved pages"
arch=('any')
url="http://amb.vis.ne.jp/mozilla/scrapbook/"
license=('GPL2')
depends=("firefox")
makedepends=('unzip')
_addons_file=41964
source=(scrapbook-$pkgver-fx.xpi::https://addons.mozilla.org/en-US/firefox/downloads/latest/427/)
md5sums=('6c54abfc8fefd3ed3d97773cfe0ae9fc')

build() {
    cd $srcdir
    local emid=$(sed -n -e '/<\?em:id>\?/!d; s/.*\([\"{].*[}\"]\).*/\1/; s/\"//g; p; q' install.rdf)
    local dstdir=$pkgdir/usr/lib/firefox-$_firefox_ver/extensions/${emid}
    install -d $dstdir
    sed -i 's#<em:maxVersion>.*</em:maxVersion>#<em:maxVersion>4.*</em:maxVersion>#' install.rdf
    cp -R * $dstdir
    rm $dstdir/scrapbook-$pkgver-fx.xpi
}
