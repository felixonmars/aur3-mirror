# Maintainer: Magnus Therning <magnus@therning.org>

pkgname=gtiles
pkgver=0.2.0
pkgrel=2
pkgdesc="Tiling stuff."
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/tab-tile-mutter/"
license=('GPL')
depends=('gtk2')
makedepends=('cmake' 'intltool')
source=(http://downloads.sourceforge.net/project/tab-tile-mutter/gtiles-0.2.0.tar.xz)
install=${pkgname}.install

build() {
    cd ${srcdir}/${pkgname}-${pkgver}

    ./configure.user -DCMAKE_INSTALL_PREFIX=/usr
    cd build
    make
}

package() {
    cd ${srcdir}/${pkgname}-${pkgver}

    cd build
    make install DESTDIR=${pkgdir}
}

sha256sums=('7482173ff1743d24a31644d6361a0d31131481324c5da274859d41f574f68d75')
