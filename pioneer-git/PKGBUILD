# Maintainer: Benjamin Hodgetts (Enverex) <ben@xnode.org>

pkgname=pioneer-git
pkgver=20121213
pkgrel=1
pkgdesc="Pioneer is a space adventure game set in the milkyway galaxy at the turn of the 31st century."
arch=('i686' 'x86_64')
url="http://pioneerspacesim.net/"
license=('GPL')
provides='pioneer'
install='pioneer.install'
source=('pioneer.png' 'pioneer.desktop' 'pioneer.install')
md5sums=('46e51941124eb3cf1af9233820223478' '439a24d1e24329d51dc7ddcb5d9e2f06' '7ac806190718abc1ff06114229624c55')
depends=('alsa-lib' 'assimp' 'libgl' 'libsigc++' 'libvorbis' 'lua' 'sdl' 'sdl_image' 'glew')
makedepends=('autoconf' 'automake' 'freetype2' 'freeglut' 'git' 'libtool')

_gitroot="git://github.com/pioneerspacesim/pioneer.git"
_gitname="pioneer"

build() {
	cd "${srcdir}"
	msg "Connecting to GIT repository..."

	if [ -d "${_gitname}" ] ; then
		cd "${_gitname}" && git pull origin && git reset --hard origin/master
		msg "Local GIT files have been updated."
	else
		git clone "${_gitroot}" "${_gitname}" --depth 1
	fi

	msg "GIT checkout complete or server timeout."
	msg "Starting make..."

	cd "${srcdir}/${_gitname}"

	./bootstrap
	PIONEER_DATA_DIR="/usr/games/${pkgname}" ./configure --prefix="/usr"
}

package() {
	install -Dm644 "${srcdir}/pioneer.desktop" "${pkgdir}/usr/share/applications/${pkgname}.desktop"
	install -Dm644 "${srcdir}/pioneer.png" "${pkgdir}/usr/share/pixmaps/${pkgname}.png"
	install -Dm644 "${srcdir}/${_gitname}/Quickstart.txt" "${pkgdir}/usr/share/doc/${pkgname}/quickstart.txt"
	cd "${srcdir}/${_gitname}"
	make DESTDIR="${pkgdir}" install
}
