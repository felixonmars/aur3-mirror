run_hook() {
        msg -n ":: Loading plymouth..."

        mknod /dev/fb c 29 0 &>/dev/null
        #mount devpts /dev/pts -t devpts

        # plymouth deamon
        /usr/sbin/plymouthd --mode=boot --pid-file=/run/plymouth.pid

        # plymouth frontend
        /usr/bin/plymouth --show-splash
        msg "done."
}

# vim: set ft=sh:
