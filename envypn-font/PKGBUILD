# Author: Ypnose <linuxienATlegtuxDOTorg>
# Maintainer: Ypnose <linuxienATlegtuxDOTorg>

pkgname=envypn-font
pkgver=1.3.4
pkgrel=1
pkgdesc="Readable terminal font inspired by Envy Code R"
url="https://github.com/Ypnose"
arch=('any')
license=('GPLv2')
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
install='envypn-font.install'
changelog='envypn-font.changelog'
source=("https://github.com/downloads/Ypnose/PKGBUILD/${pkgname}-${pkgver}.tar.gz")

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  
  install -d "$pkgdir/usr/share/fonts/envypn"
  install -m644 *.pcf "$pkgdir/usr/share/fonts/envypn"
  
  install -Dm644 "LICENSE" "$pkgdir/usr/share/licences/envypn/LICENSE"
  install -Dm644 "README" "$pkgdir/usr/share/doc/envypn/README"
}
md5sums=('c9e00ae348087ad80ad9c583080bb188')
sha256sums=('395578ff56291b242961e8f2ccd9250ab2409d849a3935a5a474c755d19ef55b')
