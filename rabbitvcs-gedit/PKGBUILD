# Maintainer: Alessandro Nakamuta <alessandro dot ufms at gmail dot com>

pkgname=rabbitvcs-gedit
pkgver=0.14.2.1
pkgrel=2
pkgdesc="Gedit front-end for RabbitVCS"
arch=('i686' 'x86_64')
url="http://rabbitvcs.org/"
#install=$pkgname.install
depends=('gedit' 'rabbitvcs>=0.14.2.1')
license=('GPL')
source=(http://rabbitvcs.googlecode.com/files/rabbitvcs-$pkgver.tar.gz)
md5sums=('db6f73014639d93653f3e2af2b0ed11f')

build(){
	_pluginlocation="$pkgdir/usr/lib/gedit-2/plugins"
	
	cd "$srcdir/rabbitvcs-$pkgver/clients/gedit"
	
	mkdir -p "$_pluginlocation"
	cp rabbitvcs-plugin.py "$_pluginlocation"
	cp rabbitvcs.gedit-plugin "$_pluginlocation"
}
