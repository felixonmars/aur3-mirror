pkgname=gnome-shell-theme-elegance
pkgver=20120413
pkgrel=1
pkgdesc="A clean and elegant HUD theme for Gnome Shell 3.2 & 3.4."
url="http://satya164.deviantart.com/art/Gnome-Shell-Elegance-263626995"
license=('GPL')
arch=('any')
depends=('gnome-shell')
optdepends=('gnome-shell-extension-user-theme: User Theme extension for GNOME Shell'
            'gnome-tweak-tool: A tool to customize advanced GNOME 3 options.')
source=("http://www.deviantart.com/download/263626995/gnome_shell___elegance_by_satya164-d4cyfw3.zip")
md5sums=('bf86f2b14de12102fcb1c483788ba0b5')

package() {
  mkdir -p ${pkgdir}/usr/share/themes/
  mv ${srcdir}/Elegance ${pkgdir}/usr/share/themes/

}
