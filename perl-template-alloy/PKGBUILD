options=('!emptydirs')
depends=('perl')
makedepends=()
url='http://search.cpan.org/dist/Template-Alloy'
source=('http://search.cpan.org/CPAN/authors/id/R/RH/RHANDOM/Template-Alloy-1.016.tar.gz')
md5sums=('5b897c08edaad89e424e25fbd883ddc0')
