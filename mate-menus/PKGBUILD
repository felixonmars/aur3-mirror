pkgname=mate-menus
pkgver=2011.12.16
pkgrel=1
pkgdesc="MATE menu specifications"
arch=('i686' 'x86_64')
license=('GPL')
depends=('glib2' 'python2')
makedepends=('intltool' 'gobject-introspection')
options=('!emptydirs' '!libtool')
source=(http://matsusoft.com.ar/projects/mate/files/${pkgname}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('9ea8775c6013329b64e76f462c894d945a4569a7c426980ee9062fb4d0377297')

url="http://matsusoft.com.ar/projects/mate/"
groups=('mate')

build() {
    cd "${srcdir}"
    PYTHON=/usr/bin/python2 ./autogen.sh \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var  \
        --enable-python \
        --disable-static || return 1
    make || return 1
}

package() {
    cd "${srcdir}"
    make DESTDIR="${pkgdir}" install || return 1
}
