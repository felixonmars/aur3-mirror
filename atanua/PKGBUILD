pkgname=atanua
pkgver=1.1.101120
pkgrel=2
pkgdesc="A real-time logic simulator, designed to help in learning of basic boolean logic and electronics."
arch=('i686' 'x86_64')
url="http://sol.gfxile.net/atanua/index.html"
license=('custom')
depends=('sdl_image')
source=("http://sol.gfxile.net/zip/atanua101120.tar.gz")

build()
{
	install -d "${pkgdir}/usr/bin"
	install -d "${pkgdir}/opt/"
	cp -r "${srcdir}/atanua101120" "${pkgdir}/opt/"
	echo "#!/bin/sh" > atanua
	echo "/opt/atanua101120/atanua" >> atanua
	install -m755 atanua "${pkgdir}/usr/bin/atanua"
	rm -r ${srcdir}/atanua101120
}

md5sums=('543937264d61f9ed495afc38996389de')

