#Bypass the restrictions by building multiple packages in AUR
#Real build script is in the PKGBUILD.ORIG
pkgname=mesa-cl
pkgdesc="An open-source implementation of the OpenGL specification with \
         OpenCL support."
url="http://mesa3d.sourceforge.net"
license=('custom')
pkgver=10.0
pkgrel=1
arch=('i686' 'x86_64')
provides=('ati-dri-cl' 'intel-dri-cl' 'nouveau-dri-cl' 'svga-dri-cl' 'mesa-libcl' 'mesa-libgl-cl')
depends=('python2' 'libxml2' 'libxvmc' 'glproto' 'libdrm' 'dri2proto' 'libxxf86vm' 'libxdamage'
             'libffi' 'libvdpau' 'clang' 'udev' 'opencl-headers' 'libclc-svn' 'libelf')
source=(PKGBUILD.ORIG LICENSE)
source PKGBUILD.ORIG
