# Maintainer: Jove Yu <yushijun110[AT]gmail.com>

pkgname=deepin-ui
pkgver=git20121114
_pkgver=git201211141021
pkgrel=1
pkgdesc='UI toolkit for Linux Deepin'
arch=('i686' 'x86_64')
depends=('python2' 'glib2' 'pygtk' 'python2-cairo' 'python-imaging' 'libwebkit')
makedepends=('git' 'python2-distribute')
provides=('deepin-ui')
url="http://www.linuxdeepin.com/"
license=('GPL-3')
source=('http://packages.linuxdeepin.com/deepin/pool/main/d/deepin-ui/deepin-ui_1+git201211141021.tar.gz')

build(){
	mkdir -p $pkgdir/usr/share/locale
	mkdir -p $pkgdir/usr/lib/python2.7/site-packages/dtk/theme
	cd "$srcdir"/${pkgname}-1+${_pkgver}
	python2 setup.py build
}
package() {
	cd "$srcdir"/${pkgname}-1+${_pkgver}
	python2 setup.py install --root="$pkgdir/" --optimize=1
	mv "$pkgdir/usr/dtk/locale" "$pkgdir/usr/share/"
	mv "$pkgdir/usr/dtk/theme" "$pkgdir/usr/lib/python2.7/site-packages/dtk/"
	rm -rf "$pkgdir/usr/dtk/"
}

md5sums=('a317f57f5cd396cac8354e8ce3831a1c')
