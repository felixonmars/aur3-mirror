# Maintainer: Bartlomiej Piotrowski <nospam@bpiotrowski.pl>

pkgname=llpp
pkgver=12
pkgrel=1
_commit=b43eb1924e9b0850378528d38f9cd7737a5837a2
pkgdesc='Lightweight but fast and featureful PDF viewer based on MuPDF'
arch=('i686' 'x86_64')
url='http://repo.or.cz/w/llpp.git'
license=('GPL')
conflicts=('llpp-git')
makedepends=('wget' 'unzip' 'ocaml' 'mesa')
options=('!strip')
source=($pkgname-$pkgver.tar.gz::http://repo.or.cz/w/llpp.git/snapshot/${_commit}.tar.gz)
md5sums=('685c4cfc31c21c724ad7cd7a8e46dfc1')

build() {
    cd "$srcdir"/$pkgname
    MAKEFLAGS='-j1' bash buildall.sh
}

package() {
    cd "$srcdir"/$pkgname
    install -D llpp "$pkgdir"/usr/bin/llpp
}
