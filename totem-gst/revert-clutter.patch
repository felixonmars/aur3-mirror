+    h = allocation.height;
+  }
+  width = w;
+  height = h;
+
+  /* calculate ratio for fitting video into the available space */
+  if ((gfloat) allocation.width / width >
+      (gfloat) allocation.height / height) {
+    ratio = (gfloat) allocation.height / height;
+  } else {
+    ratio = (gfloat) allocation.width / width;
