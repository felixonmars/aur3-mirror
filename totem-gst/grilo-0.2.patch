+static GdTaggedEntryTag *
+gd_tagged_entry_find_tag_by_id (GdTaggedEntry *self,
+                                const gchar *id)
+{
+  GdTaggedEntryTag *tag = NULL, *elem;
+  GList *l;
+
+  for (l = self->priv->tags; l != NULL; l = l->next)
+    {
+      elem = l->data;
+      if (g_strcmp0 (elem->id, id) == 0)
+        {
+          tag = elem;
+          break;
+        }
+    }
+
+  return tag;
+}
