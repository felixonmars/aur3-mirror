+static size_t string_length(const char *s)
+{
+	int len;
+	wchar_t *wcstr;
+
+	if(!s || s[0] == '\0') {
+		return 0;
+	}
+	/* len goes from # bytes -> # chars -> # cols */
+	len = strlen(s) + 1;
+	wcstr = calloc(len, sizeof(wchar_t));
+	len = mbstowcs(wcstr, s, len);
+	len = wcswidth(wcstr, len);
+	free(wcstr);
+
+	return len;
+}
