+				len += wcwidth(*q++);
+			}
+			if(len > (cols - cidx - 1)) {
+				/* wrap to a newline and reindent */
+				printf("\n%-*s", (int)indent, "");
+				cidx = indent;
+			} else {
+				printf(" ");
+				cidx++;
+			}
+			continue;
+		}
+		printf("%lc", (wint_t)*p);
+		cidx += wcwidth(*p);
+		p++;
+	}
+	free(wcstr);
+}
