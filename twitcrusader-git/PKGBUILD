pkgname=twitcrusader-git
pkgver=20111006
pkgrel=2
pkgdesc="A Twitter client for Linux (Nightly Release)"
arch=('i686' 'x86_64')
url="http://www.twitcrusader.org"
license=('GPL')
depends=('intltool' 'pkg-config' 'gcc' 'gtk2' 'curl' 'liboauth' 'libxml2' 'libnotify')
makedepends=('git')
provides=('twitcrusader')
conflicts=('twitcrusader')

_gitroot="git://github.com/PTKDev/ClientTwitter-TwitCrusader.git"
_gitname="twitcrusader"
_gitbranch="nightly"

build() {
  cd "${srcdir}"

  msg "Connecting to GIT server...."

  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git pull origin
    msg "The local files are updated."
  else
    git clone ${_gitroot} ${_gitname}
  fi

  cd "${srcdir}/${_gitname}"
  git checkout 9d61748c16

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "${srcdir}/${_gitname}-build"
  git clone "${srcdir}/${_gitname}" "${srcdir}/${_gitname}-build"
  cd "${srcdir}/${_gitname}-build"

  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_gitname}-build"

  make DESTDIR="${pkgdir}" install
}
