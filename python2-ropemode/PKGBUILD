pkgname=python2-ropemode
pkgver=0.1
pkgrel=1
pkgdesc="a helper for using rope refactoring library in IDEs"
arch=('any')
url="http://rope.sourceforge.net/ropevim.html"
license=('GPL')
depends=('python2-rope')
provides=('python-ropemode')
conflicts=('python-ropemode')
source=(http://pypi.python.org/packages/source/r/ropemode/ropemode-$pkgver-rc2.tar.gz)
md5sums=('005556053583a81f248828adc646924d')

build() {
  cd $srcdir/ropemode-$pkgver-rc2
  python2 ./setup.py install --root=$pkgdir/ --prefix=/usr --optimize=1
}

