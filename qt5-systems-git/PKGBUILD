# Maintainer: Oleg Shparber <trollixx+aur@gmail.com>

pkgname=qt5-systems-git
pkgver=0.0.0
pkgrel=1
pkgdesc="A cross-platform application and UI framework (QtSystems)"
groups=('qt' 'qt5')
arch=('i686' 'x86_64')
url="http://qt-project.org/"
license=('GPL3' 'LGPL')
depends=('qt5-declarative' 'gconf')
makedepends=('git')
replaces=('qt5-qtsystems-git')
provides=('qt5-systems')
conflicts=('qt5-systems')
source=('git://gitorious.org/qt/qtsystems#branch=dev')
md5sums=('SKIP')
_gitname="qtsystems"

pkgver() {
	cd ${srcdir}/${_gitname}
	git describe --always | sed 's|-|.|g'
}

build() {
	cd ${srcdir}/${_gitname}
	qmake
	make
}

package() {
	cd "${_gitname}"
	make INSTALL_ROOT="${pkgdir}" install
}
