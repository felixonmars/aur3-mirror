# Contributor: Markus Martin <markus@archwyrm.net>

pkgname=ogre-pagedgeometry
pkgver=1.1.0
pkgrel=2
pkgdesc="Paged Geometry plugin for OGRE for fast rendering of trees and grass"
arch=('i686' 'x86_64')
url="http://code.google.com/p/ogre-paged"
license=('MIT')
makedepends=('ogre' 'boost')
source=(http://ogre-paged.googlecode.com/files/pagedGeometry-1.1.0.zip)
md5sums=('089b0aefb882344c35b828a999f1918c')

build() {
    srcdir=$startdir/src/pagedGeometry-$pkgver
    cd $srcdir

    cmake . -DPAGEDGEOMETRY_BUILD_SAMPLES=0 \
        -DCMAKE_INSTALL_PREFIX=/usr || return 1
    make || return 1
    make DESTDIR=$startdir/pkg install || return 1
}
