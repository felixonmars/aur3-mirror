pkgname=slick
pkgver=274
pkgrel=1
arch=('any')
pkgdesc="2D game library based of LWJGL"
url="http://slick.cokeandcode.com"
license=('BSD')
depends=('java-runtime')
makedepends=('java-environment')
md5sums=('79d2d31fb11eeff8600a3eef6ca5a8ab')
source=("http://slick.cokeandcode.com/downloads/slick.jar")

build() {
  install -Dm644 slick.jar $pkgdir/usr/share/java/$pkgname.jar
}
