pkgname=delorean-dark
pkgver=1.20
pkgrel=1
pkgdesc="The Dark Brushed-Metal Theme for gtk3, gtk2, metacity, gnome-shell, xfwm4 & openbox"
arch=('any')
url="http://killhellokitty.deviantart.com/art/DeLorean-Dark-0-94-318612217"
license=('GPL''Creative Commons NC SA')
depends=('gtk-engines' 'gnome-themes-standard>=3.4.1' 'gtk-engine-murrine>=0.98.2' 'gtk-engine-equinox>=1.50' 'gtk-engine-unico>=1.0.2')
source=("${pkgname}-${pkgver}.zip::http://www.deviantart.com/download/318612217/delorean_dark_1_20_by_killhellokitty-d59oyrd.zip")
md5sums=('c129f73e71ea482846b0170d4b9fd162')


package() {
  # install themes
  find delorean-dark/ -type f \
      -exec install -Dm644 "{}" "$pkgdir/usr/share/themes/{}" \;
}

