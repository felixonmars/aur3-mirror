# Author: Remy Sharp (http://github.com/remy)
# Maintainer: remy <remy@remysharp.com>
_npmname=nodemon
_npmver=1.2.1
pkgname=nodejs-nodemon # All lowercase
pkgver=1.2.1
pkgrel=1
pkgdesc="Simple monitor script for use during development of a node.js app."
arch=(any)
url="http://nodemon.io"
license=(MIT)
depends=('nodejs' )
optdepends=()
options=( '!strip' )
source=(http://registry.npmjs.org/$_npmname/-/$_npmname-$_npmver.tgz)
noextract=($_npmname-$_npmver.tgz)
sha1sums=('02a288045652e92350e7d752a8054472ed2c4824')

package() {
  cd "$srcdir"
  local _npmdir="$pkgdir/usr/lib/node_modules/"
  mkdir -p "$_npmdir"
  cd "$_npmdir"
  npm install -g --user root --prefix "$pkgdir/usr" $_npmname@$_npmver
}

# vim:set ts=2 sw=2 et:
