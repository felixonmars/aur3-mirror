# Maintainer: Andrey Mikhaylenko <neithere at gmail dot com>
# Contributor: Fabien Devaux <fdev31 at gmail dot com>
_python=python
_distname=argh
pkgname=$_python-$_distname
pkgver=0.24.1
pkgrel=1       # XXX don't forget to reset on version change
pkgdesc="An unobtrusive argparse wrapper with natural syntax"
arch=(any)
url="http://github.com/neithere/argh/"
license=('LGPL3')
depends=('python>=3.2')
makedepends=('python-distribute')
optdepends=(
    'python-argcomplete: bash completion'
)
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=(http://pypi.python.org/packages/source/${_distname:0:1}/$_distname/$_distname-$pkgver.tar.gz)
md5sums=('67ef29c2a32b206228933d94cdfeda96')
echo $source

package() {
   cd "${srcdir}/$_distname-$pkgver"
   $_python setup.py install --root="${pkgdir}" --optimize=1 || exit 1
}
