# Maintainer: Det <nimetonmaili at gmail a-dot com>
# Based on [extra]'s gtk2

pkgname=gtk3
pkgver=3.0.0
_majorver=(`echo ${pkgver} | egrep -o '[0-9]+\.[0-9]*+'`)
pkgrel=1
pkgdesc="The GTK+ Toolkit v3"
arch=('i686' 'x86_64')
url="http://www.gtk.org/"
install=gtk3.install
depends=('atk>=1.30.0' 'pango>=1.28.0' 'libxcursor' 'libxinerama' 'libxrandr>=1.3.0' 'libxi>=1.3' 'libxcomposite' 'libxdamage' 'heimdal>=1.3.2' 'gnutls>=2.8.6' 'shared-mime-info' 'cairo>=1.10.0' 'libcups>=1.4.4' 'gdk-pixbuf2>=2.22.1')
makedepends=('gtk-doc' 'gobject-introspection-dev>=0.10.2' 'glib2-newest>=2.28.0')
options=('!libtool' '!docs')
backup=(etc/gtk-3.0/gtkrc)
license=('LGPL')
source=(http://ftp.gnome.org/pub/GNOME/sources/gtk+/${_majorver}/gtk+-${pkgver}.tar.bz2
	xid-collision-debug.patch)
sha256sums=(`wget ${source/.t*}.sha256sum -qO - | grep tar.bz2 | cut -d " " -f1`
	    '6754e3ae048798a31eec0d13e7b34fcb56f25566f21f171a9b696939ddff080e')

build() {
  cd gtk+-${pkgver}
  patch -Np1 -i ../xid-collision-debug.patch

  CXX=/bin/false ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
  make
}

package() {
  cd gtk+-${pkgver}
  make DESTDIR="${pkgdir}" install

  # We don't like removing gtk2 just yet so we want our "-3.0" suffix back
  mv "${pkgdir}"/usr/bin/gtk-update-icon-cache{,-3.0}

  echo 'gtk-fallback-icon-theme = "gnome"' > "${pkgdir}/etc/gtk-3.0/gtkrc"
}