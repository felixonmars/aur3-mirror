# Maintainer: Sven-Hendrik Haase <sh@lutzhaase.com>
pkgname=archiso-git
pkgver=15.3.g96499e4
pkgrel=1
pkgdesc="Arch Linux livecd/liveusb generation scripts"
arch=('any')
url="http://archlinux.org"
license=('GPL')
depends=('libisoburn' 'squashfs-tools' 'dosfstools' 'lynx' 'arch-install-scripts')
optdepends=('qemu: quickly test isos')
makedepends=('git')
provides=('archiso')
conflicts=('archiso')
source=("git://projects.archlinux.org/${pkgname%-git}.git")
md5sums=('SKIP')

pkgver() {
  cd "${pkgname%-git}"
  git --no-pager describe --tags | sed 's|-|.|g;s|^v||'
}

package() {
  cd "${pkgname%-git}"

  make DESTDIR="$pkgdir" install
}

