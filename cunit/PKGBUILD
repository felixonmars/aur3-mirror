# Contributor: Daniel Milde <daniel@milde.cz>

pkgname=cunit
pkgver=2.1.2
pkgrel=3
pkgdesc="CUnit is a lightweight system for writing, administering, and running unit tests in C"
arch=(i686 x86_64)
url="http://cunit.sourceforge.net/"
license=('LGPL2')
depends=('glibc')
options=('!libtool')
source=(http://downloads.sourceforge.net/project/cunit/CUnit/2.1-2/CUnit-2.1-2-src.tar.bz2)
md5sums=('31c62bd7a65007737ba28b7aafc44d3a')

build() {
  cd "$srcdir/CUnit-2.1-2"
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir" install
}



