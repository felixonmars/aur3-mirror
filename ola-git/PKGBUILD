pkgname=ola-git
pkgver=20120625
pkgrel=1
pkgdesc="The Open Lighting Architecture (OLA) provides a plugin framework for distributing DMX512 control signals on Mac and Linux"
arch=(i686 x86_64)
url="http://code.google.com/p/linux-lighting/"
license=('GNU Lesser GPL')
groups=
provides=('ola')
depends=('libmicrohttpd' 'cppunit' 'protobuf' 'protobuf-python' 'python2')
conflicts=('ola')

_gitroot="https://code.google.com/p/linux-lighting/"
_gitname="ola"

build() {
  cd $srcdir
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"

  rm -rf "$srcdir/$_gitname-build"
  cp -r "$srcdir/$_gitname" "$srcdir/$_gitname-build"

  cd "$srcdir/$_gitname-build"
  autoreconf -i
 
  # since protobuf isnt ported to python 3 we have to choose python 2 
  PYTHON=python2 ./configure --prefix=/usr --enable-python-libs --disable-fatal-warnings

  make || return 1
}
package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR=$pkgdir install || return 1
}
