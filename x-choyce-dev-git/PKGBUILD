# Maintainer: SanskritFritz (gmail)

pkgname=x-choyce-dev-git
_gitname="x-choyce"
pkgver=2013.11.28
pkgrel=1
pkgdesc="A light-weight, Expos√©-like window switcher for X (feat. OpenGL). Development branch."
arch=('i686' 'x86_64')
url="https://github.com/jrk-/x-choyce"
license=("GPL")
depends=('mesa' 'libxcb' 'libxft' 'xcb-util-keysyms' 'xcb-util-wm' 'xcb-util-image')
provides=('x-choyce')
conflicts=('x-choyce' 'x-choyce-git')
source=("git://github.com/jrk-/x-choyce.git#branch=develop")
md5sums=('SKIP')

pkgver() {
	cd "$_gitname"
	git log -1 --format="%cd" --date=short | sed 's|-|.|g'
}

build() {
	cd "$srcdir/$_gitname"
	make
}

package() {
	cd "$srcdir/$_gitname"
	mkdir --parents "$pkgdir/usr/bin"
	cp x:choyce "$pkgdir/usr/bin"
}
