pkgname=kmozillahelper
pkgver=0.6.3
pkgrel=4
pkgdesc="Mozilla KDE Integration"
url="http://download.opensuse.org/repositories/home:/bgmerrell:/MozillaFirefox3_5_5/openSUSE_11.2/"
arch=("i686" "x86_64")
license=("MIT License (or similar)")
depends=("kdebase-workspace")
makedepends=("cmake" "automoc4")

source=(${pkgname}-${pkgver}.tar.bz2 fix_local.patch reveal.patch)

build() {
	cd $srcdir/${pkgname}

    patch -i $srcdir/fix_local.patch -p1 || return 1
    patch -i $srcdir/reveal.patch -p1 || return 1

	mkdir -p $srcdir/${pkgname}-build
	cd $srcdir/${pkgname}-build

	cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release ../${pkgname}
	make || return 1
}

package() {
	cd $srcdir/${pkgname}-build
	make DESTDIR=$pkgdir install
}
md5sums=('99ea5e0a723ab7f8f232df7f23b0bd3b'
         '4f453db9eb44ae23c10335195bd1e4a7'
         'dcf13d898f16d400af018ec47a427983')
