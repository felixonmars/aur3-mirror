# Contributor: Brad Pitcher <bradpitcher@gmail.com>

pkgname=networkmanager-l2tp
pkgver=0.9.8
pkgrel=1
pkgdesc="L2TP support for NetworkManager"
arch=('i686' 'x86_64')
url="https://github.com/seriyps/NetworkManager-l2tp"
license=('GPL2')
depends=('gtk2' 'gconf' 'libgnome-keyring' 'intltool' 'networkmanager' 'xl2tpd')
optdepends=('openswan')
options=()
makedepends=()
provides=('networkmanager-l2tp')
conflicts=('networkmanager-l2tp')
source=()

_gitname="NetworkManager-l2tp"

build() {
  cd "$srcdir"
  msg "Downloading package...."

  rm -rf "$srcdir/$_gitname"
  curl -L "$url/archive/$pkgver.tar.gz" | tar zx
  cd "$srcdir/$_gitname-$pkgver"

  msg "Package downloaded"
  msg "Starting make..."

  sed -i 's|auth-dialog=@LIBEXECDIR@/nm-l2tp-auth-dialog|auth-dialog=nm-l2tp-auth-dialog|' \
    nm-l2tp-service.name.in

  ./autogen.sh
  ./configure --prefix=/usr --sysconfdir=/etc \
    --libexecdir=/usr/lib/networkmanager \
    --with-pppd-plugin-dir=/usr/lib/pppd/2.4.5
  make
}

package() {
  cd "$srcdir/$_gitname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
