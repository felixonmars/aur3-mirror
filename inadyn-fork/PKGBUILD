# Maintainer: kreed <kreed@kreed.org>

pkgname=inadyn-fork
pkgver=1.98.1
pkgrel=3
pkgdesc="Simple dynamic DNS client - fork of the original INADYN implementation from Narcis Ilisei"
url='http://github.com/troglobit/inadyn'
arch=('i686' 'x86_64')
license=('GPL')
backup=(etc/inadyn.conf)
conflicts=('inadyn-opendns' 'inadyn')
provides=('inadyn')
source=(https://github.com/downloads/troglobit/inadyn/inadyn-$pkgver.tar.bz2
        inadyn.rc-script
        inadyn.conf
        inadyn.service)

build() {
  cd "inadyn-$pkgver"
  make
}

package() {
  make -C "inadyn-$pkgver" prefix=/usr DESTDIR=$pkgdir install
  install -Dm755 inadyn.rc-script $pkgdir/etc/rc.d/inadyn
  install -Dm644 inadyn.service $pkgdir/usr/lib/systemd/system/inadyn.service   
  install -Dm644 inadyn.conf $pkgdir/etc/inadyn.conf  
}

sha256sums=('72a0a6500b28d9709c7b5deb7aeafcfb2a5543acb1f34659d10b33962cad7ce2'
            '175c469cd2d7a1af9a784644623b44210214db39e9c73b1678c4260e154674ee'
            '9196481a3c6875a0ead3a318608877ef49402c968f162f13a2f92d6882008c41'
            '4587f4ae2a4215f9ba67d5b3b7d0aa120a9ebd31677472fa68d8792f42d7135f')
