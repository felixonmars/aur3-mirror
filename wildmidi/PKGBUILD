# Maintainer: Panagiotis Papadopoulos

pkgname=wildmidi
pkgver=0.2.3.4
pkgrel=1
pkgdesc='Open Source MIDI Synthesizer'
arch=('i686' 'x86_64')
url='http://wildmidi.sourceforge.net/'
license=('LGPL3')
depends=('alsa-lib')
source=("http://sourceforge.net/projects/wildmidi/files/wildmidi/wildmidi-${pkgver}.tar.gz/download")
md5sums=('437e3dddf15ef9fb1b76625d0727a2e6')

build() {
	cd "$srcdir/wildmidi-${pkgver}"
        ./configure --prefix=/usr
        make || return 1

}

package() {
	cd "$srcdir/wildmidi-${pkgver}"

	make DESTDIR=$pkgdir install || return 1
}
