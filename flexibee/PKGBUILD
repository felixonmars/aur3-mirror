pkgname=flexibee

pkgver=10.16.2
pkgbasever=10.16
#pkgbasever=`echo $pkgver |cut -f1,2 -d.`

pkgrel=1
pkgdesc="Accounting economic system for person and business. Server and client in one package."
arch=('i686' 'x86_64')
url="http://www.flexibee.eu"
license=('WinStrom')
depends=('glibc')
install=flexibee.install
source=("http://download.flexibee.eu/download/$pkgbasever/flexibee-$pkgver.tar.gz"
        "flexibee")
md5sums=('1b196828a0f0a931bc8d9e6fad851d7e'
         'cac2f86b82117d63de48e48ca1dabed2')

build() {

cd ${startdir}/src/flexibee-$pkgver
rm -rf etc/init.d
mkdir etc/rc.d
cp ${startdir}/flexibee etc/rc.d/
mkdir -p ${startdir}/pkg/
mv * ${startdir}/pkg/
}
