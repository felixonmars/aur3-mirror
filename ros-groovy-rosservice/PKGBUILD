
pkgdesc="rosservice contains the rosservice command-line tool for listing
    and querying ROS <a href=\"http://www.ros.org/wiki/Services\">Services</a>. It also
    contains a Python library for retrieving information about
    Services and dynamically invoking them. The Python library is
    experimental and is for internal-use only."
url='http://www.ros.org/'

pkgname='ros-groovy-rosservice'
pkgver='1.9.33'
arch=('i686' 'x86_64')
pkgrel=1
license=('BSD')
makedepends=('ros-build-tools')

depends=(ros-groovy-catkin
  ros-groovy-rosgraph
  ros-groovy-genpy
  ros-groovy-roslib
  ros-groovy-rospy
  ros-groovy-rosmsg)

build() {
  [ -f /opt/ros/groovy/setup.bash ] && source /opt/ros/groovy/setup.bash
  if [ -d ${srcdir}/rosservice ]; then
    cd ${srcdir}/rosservice
    git fetch origin --tags
    git reset --hard release/rosservice/${pkgver}
  else
    git clone -b release/rosservice/${pkgver} git://github.com/ros-gbp/ros_comm-release.git ${srcdir}/rosservice
  fi
  [ -d ${srcdir}/build ] || mkdir ${srcdir}/build
  cd ${srcdir}/build
  /usr/share/ros-build-tools/fix-python-scripts.sh ${srcdir}/rosservice
  cmake ${srcdir}/rosservice -DCATKIN_BUILD_BINARY_PACKAGE=ON -DCMAKE_INSTALL_PREFIX=/opt/ros/groovy -DPYTHON_EXECUTABLE=/usr/bin/python2 -DPYTHON_INCLUDE_DIR=/usr/include/python2.7 -DPYTHON_LIBRARY=/usr/lib/libpython2.7.so -DSETUPTOOLS_DEB_LAYOUT=OFF
  make
}

package() {
  cd "${srcdir}/build"
  make DESTDIR="${pkgdir}/" install
}
