pkgname=desktop-privileges
pkgver=0.2
pkgrel=3
pkgdesc="A collection (under development) of polkit configuration files suitable for desktop users: - Enables users of the storage group to mount local disks - Enables users of the power group to change the cpufreq govenor - Any
suggestions and ideas are welcome"
arch=('any')
url="http://aur.archlinux.org/packages.php?ID=41664"
license=('GPL')
depends=('polkit')
conflicts=('desptop-privileges')
replaces=('desptop-privileges')
#install=
#changelog=
source=(udisks-internal.pkla cpufreqselector.pkla)
md5sums=('d606019d21171e54e729e5d147b96fea'
         '8169497e0438548ff5c8a2904b520631')

build() {
	echo "nothing to build" #nothing
}

package() {
  cd "$srcdir"
	install -dm700 ${pkgdir}/etc/polkit-1/localauthority/
	install -dm755 ${pkgdir}/etc/polkit-1/localauthority/50-local.d/
	install -Dm644 *.pkla ${pkgdir}/etc/polkit-1/localauthority/50-local.d/
}
