# Maintainer: speps <speps at aur dot archlinux dot org>

pkgname=sipclients
pkgver=0.31.1
pkgrel=1
pkgdesc="SIP SIMPLE Command Line Clients"
arch=('any')
url="http://www.icanblink.com"
license=('custom:MIT')
depends=('avahi' 'python2-application' 'python2-eventlib' 'python2-lxml'
         'python2-sipsimple' 'python2-zope-interface' 'twisted')
source=("http://download.ag-projects.com/SipClient/$pkgname-$pkgver.tar.gz")
md5sums=('2ec3d45219573728fb0ed8ab6b2125c0')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py build
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py install --root="$pkgdir/"

  # license
  install -Dm644 LICENSE \
    "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
