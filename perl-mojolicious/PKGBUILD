# Contributor: Christian Sturm <reezer@reezer.org>
pkgname=perl-mojolicious
pkgver=1.42
pkgrel=1
pkgdesc="next generation web framework for perl"
arch=(any)
url="http://search.cpan.org/dist/Mojolicious/"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0')
options=(!emptydirs)
install=
source=(http://search.cpan.org/CPAN/authors/id/K/KR/KRAIH/Mojolicious-$pkgver.tar.gz)
md5sums=('5432fa78163e8726d7655292e2d8c4b2')

build() {
  cd "$srcdir/Mojolicious-$pkgver"

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
  make install DESTDIR="$pkgdir/" || return 1
}

# vim:set ts=2 sw=2 et:
