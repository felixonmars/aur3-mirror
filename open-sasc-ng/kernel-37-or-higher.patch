diff -ru sc/contrib/sasc-ng/Makefile sc-build/contrib/sasc-ng/Makefile
--- sc/contrib/sasc-ng/Makefile
+++ sc-build/contrib/sasc-ng/Makefile
@@ -12,7 +12,7 @@ CXXFLAGS ?= -Wall -D__user=
