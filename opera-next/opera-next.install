available()
{
	which "$1" >/dev/null 2>&1
}

niceinfo() {
cat <<EOF
>>
>> WARNING THIS CAN LEAD TO DATA LOSS
>> 
>> If installed with a next suffix (the default) the 
>> ~/.opera-next profile will be used. For people who 
>> want to use the same profile for opera-next as they 
>> use for opera (stable), start opera-next as follows:
>>
>> \$ opera-next -pd ~/.opera
>>
>> You can make this more permenant by editing 
>> /usr/bin/opera-next and un-setting 
>> \$OPERA_PERSONALDIR
>>
>> WARNING THIS CAN LEAD TO DATA LOSS
>> 
EOF
}

updatemimeandall() {

	# Setup Menus
	if available update-desktop-database
	then
		update-desktop-database -q /usr/share/applications
	fi

	# Setup MIME types
	if available update-mime-database
	then
		update-mime-database /usr/share/mime >/dev/null
	fi

	# Setup Icons
	touch -c /usr/share/icons/hicolor
	if available gtk-update-icon-cache
	then
		gtk-update-icon-cache -tq /usr/share/icons/hicolor
	fi

}

post_install() {
	niceinfo
	updatemimeandall
}

post_upgrade() {
	niceinfo
	updatemimeandall
}

post_remove() {
	updatemimeandall
}
