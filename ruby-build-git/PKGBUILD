# Contributor: Guten Ye <ywzhaifei [at] gmail [dot] com>

pkgname=ruby-build-git # NAME-git
pkgver=20110813  # svn auto added
pkgrel=1
pkgdesc="Compile and install Ruby"
arch=("i686" "x86_64")
url="https://github.com/sstephenson/ruby-build"
license=("the MIT Licence")
groups=()
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=()
md5sums=() # generate with 'makepkg -g'

_gitroot="git://github.com/sstephenson/ruby-build.git"
_gitname="ruby-build"

build() {
  cd ${srcdir}
  msg "Connecting to GIT server...."

  if [ -d ${_gitname}/.git ] ; then
    cd ${_gitname}

    # Change remote url to anongit
    if [ -z $( git branch -v | grep anongit ) ] ; then
        git remote set-url origin ${_gitroot}
    fi
    
    git pull origin
    msg "The local files are updated."
  else
    git clone ${_gitroot} ${_gitname}
  fi
  msg "GIT checkout done or server timeout"

  # msg "Starting make..."
	# make
}

package() {
  cd ${srcdir}/${_gitname}

  mkdir -p $pkgdir/usr/bin
  mkdir -p $pkgdir/usr/share/ruby-build

  cp bin/* $pkgdir/usr/bin
  cp share/ruby-build/* $pkgdir/usr/share/ruby-build
}

# vim:set ts=2 sw=2 et:
