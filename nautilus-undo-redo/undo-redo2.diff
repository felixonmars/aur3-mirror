+stack_scroll_left (NautilusUndoStackManagerPrivate * priv)
+{
+  gpointer data = NULL;
+
+  if (!can_redo (priv))
+    return NULL;
+
+  priv->index--;
+  data = g_queue_peek_nth (priv->stack, priv->index);
+
+  return data;
