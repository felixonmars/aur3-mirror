pkgname=touche
pkgver=0.1
pkgrel=2
pkgdesc="Touché is an application that brings full support on GNU/Linux desktops to your input devices: keyboard, mices, even IR remote receivers"
arch=('i686' 'x86_64')
url="http://rockman81.blogspot.it/p/touche.html"
license=('GPL')
groups=()
depends=('qt' 'qjson' )
makedepends=()
optdepends=('kdelibs')
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=( http://rockman81.github.com/Touche/files/Touch%C3%A9-$pkgver.tar.gz )
noextract=()

build() {
  cd "${srcdir}/Touché"
  DESTDIR="${pkgdir}/" QMAKE_APPEND_CFG=TMP_INSTALL_DIR=$PWD/static_libs_install ./scripts/compile --no-kde
}

md5sums=('356557b4fa98726f2f5730b362b1c3da')
