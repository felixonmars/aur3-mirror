# Maintainer: TDY <tdy@gmx.com>

pkgname=rachota
pkgver=2.4
pkgrel=1
pkgdesc="A portable timetracker for personal projects"
arch=('any')
url="http://rachota.sourceforge.net/en/"
license=('CDDL')
depends=('java-runtime')
source=(http://downloads.sourceforge.net/rachota/rachota_${pkgver/.}.jar
        rachota.desktop rachota.launcher)
md5sums=('18e56e2406277d9ea83dce1de98a216a'
         '8f10dc0dc9f6f71838b5109c24bf9c6b'
         'bcbf041aa83d064a1d753da5b8439c29')

build() {
  cd "$srcdir"
  install -Dm644 rachota_${pkgver/.}.jar \
    "$pkgdir/usr/share/java/rachota/rachota.jar"
  install -Dm755 rachota.launcher "$pkgdir/usr/bin/rachota"
  install -Dm644 org/cesilko/rachota/gui/images/logo_48.png \
    "$pkgdir/usr/share/pixmaps/rachota.png"
  install -Dm644 rachota.desktop \
    "$pkgdir/usr/share/applications/rachota.desktop"
}
