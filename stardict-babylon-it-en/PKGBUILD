# Contributor: Marco Curreli <marcocurreli@tiscali.it>

pkgname=stardict-babylon-it-en
pkgver=2.4.2
pkgrel=5
pkgdesc="Italian English dictionary for Stardict"
license=('freeware')
url="http://stardict.sourceforge.net"
source=(http://yeelou.com/huzheng/stardict-dic/babylon/bidirectional/stardict-babylon-Babylon_Italian_English_dictio-$pkgver.tar.bz2)
md5sums=('f3ead860b5feec864b1de3a37718e776')
arch=('any')
build() {
	cd $startdir/src/stardict-babylon-Babylon_Italian_English_dictio-$pkgver
	mkdir -p $startdir/pkg/usr/share/stardict/dic/
	install -m 644 Babylon_Italian_English_dictio.dict.dz  Babylon_Italian_English_dictio.idx  Babylon_Italian_English_dictio.ifo $startdir/pkg/usr/share/stardict/dic/
}
