# Libguestfs: Installer: Arch
# Maintainer: Thomas S Hatch <thatch45 (at) Gmail.com>

pkgname=libguestfs
pkgver=1.8.2
pkgrel=3
pkgdesc="Manages virtual machine images"
arch=("i686" "x86_64")
url="http://libguestfs.org"
license=("GPL2" "LGPL2")
install=libguestfs.install
depends=("qemu"
         "febootstrap"
         "augeas")
makedepends=("perl-io-stringy"
             "perl-test-simple"
             "ocaml-findlib"
             "java-environment=6"
             "hivex"
             "python2"
             "ocaml"
             "php"
             "perl"
             "pcre"
             "fuse"
             "libvirt"
             "cdrkit"
             "libxml2"
             "zfs-fuse"
             "gperf")
optdepends=("python2: Python bindings"
            "ocaml: Ocaml libs"
            "php: PHP bindings"
            "perl: Perl Bindings"
            "java-environment: Java Bindings")
options=(!emptydirs)
sha1sums=('d343e78aa1feedea53e7a97a00e0e8cd7005dfde')
source=("http://libguestfs.org/download/1.8-stable/${pkgname}-${pkgver}.tar.gz")
BUILDENV=(!fakeroot !distcc color !ccache)

build() {
    cd ${srcdir}/${pkgname}-${pkgver}
    ./configure \
        PYTHON=python2 \
        --prefix=/usr --libdir=/usr/lib \
        --mandir=/usr/share/man \
        --sysconfdir=/etc \
        --with-qemu="qemu-kvm qemu" \
        --with-drive-if=virtio \
        --disable-ruby --disable-haskell
    make
}

package() {
    cd ${srcdir}/${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install
}
