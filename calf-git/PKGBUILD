# Maintainer: Philipp Ãœberbacher <murks at lavabit dot com>
pkgname=calf-git
pkgver=20101206
pkgrel=1
pkgdesc="LV2/DSSI/JACK/LADSPA audio plug-ins for musicians"
arch=('i686' 'x86_64')
url="http://calf.sourceforge.net/"
license=('GPL')
depends=('fluidsynth' 'libglade')
makedepends=('ladspa' 'dssi' 'lv2core' 'git')
optdepend=('lash>=0.6.0')
provides=('calf')
options=(!libtool)
install=${pkgname}.install
md5sums=()

_gitroot="git://repo.or.cz/calf.git"
_gitname="calf"

build() {
  cd "${srcdir}"
  msg "Connecting to GIT server...."

  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git pull origin
    msg "The local files are updated."
  else
    git clone ${_gitroot}
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "${srcdir}/{$_gitname-build}"
  cp -r "${srcdir}/${_gitname}" "${srcdir}/${_gitname}-build"
  cd "${srcdir}/${_gitname-build}"

  ./autogen.sh --prefix="/usr" --enable-experimental \
  --enable-debug
  make DESTDIR=${pkgdir}
}

package(){
  cd "${srcdir}/${_gitname-build}"
  make DESTDIR=${pkgdir} install
}
