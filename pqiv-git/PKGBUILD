# Maintainer: Sietse van der Molen <sietse@vdmolen.eu> 
pkgname=pqiv-git
pkgver=20120913
pkgrel=1
pkgdesc="Modern rewrite of Quick Image Viewer"
arch=(any)
url="http://www.pberndt.com/Programme/Linux/pqiv/index.html#"
license=('GPL')
groups=()
depends=('gtk2')
makedepends=('git')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=(mktemp.patch)
noextract=()
md5sums=('e0d471fc866eea97ba569a0822b5884c')

_gitroot=git://github.com/phillipberndt/pqiv.git
_gitname=pqiv

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname" --branch c
  fi

  msg "GIT checkout done or server timeout"


  msg "Starting build..."
  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  msg "Applying patches"
  patch -i $srcdir/mktemp.patch

  #
  # BUILD HERE
  #
  ./configure
  make
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
