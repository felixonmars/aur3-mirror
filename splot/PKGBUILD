# custom variables
_hkgname=splot
_licensefile=LICENSE

# PKGBUILD options/directives
pkgname=splot
pkgver=0.2.3
pkgrel=2
pkgdesc="A tool for visualizing the lifecycle of many concurrent multi-staged processes."
url="http://www.haskell.org/haskellwiki/Splot"
license=("BSD3")
arch=('i686' 'x86_64')
makedepends=("ghc=7.0.3-2"
             "haskell-chart=0.14"
             "haskell-bytestring=0.9.1.10"
             "haskell-bytestring-lexing=0.2.1"
             "haskell-cairo=0.12.1"
             "haskell-colour=2.3.1"
             "haskell-containers=0.4.0.0"
             "haskell-haskell98=1.1.0.1"
             "haskell-mtl=2.0.1.0"
             "haskell-strptime=1.0.2"
             "haskell-time=1.2.0.3")
depends=()
options=('strip')
source=("http://hackage.haskell.org/packages/archive/${_hkgname}/${pkgver}/${_hkgname}-${pkgver}.tar.gz")

sha256sums=("b444a59725599b4d40578a857754545bdeeb8a1ca8ceca4fdc2ab2476cc05250")

# PKGBUILD functions
build() {
    cd ${srcdir}/${_hkgname}-${pkgver}
    runhaskell Setup configure -O --prefix=/usr --docdir=/usr/share/doc/${pkgname}
    runhaskell Setup build
}

package() {
    cd ${srcdir}/${_hkgname}-${pkgver}
    runhaskell Setup copy --destdir=${pkgdir}
}
