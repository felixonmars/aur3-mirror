# Maintainer: Remy Marquis <remy dot marquis at gmail dot com>

pkgname=pacaur
pkgver=3.2.9
pkgrel=2
pkgdesc="A fast workflow AUR wrapper using cower as backend"
arch=('any')
url="https://github.com/Spyhawk/pacaur"
license=('GPL')
depends=('cower' 'expac' 'sudo')
optdepends=('pacman-color: colorized output')
makedepends=('perl')
backup=('etc/xdg/pacaur/pacaur.conf')
source=("https://github.com/Spyhawk/$pkgname/archive/$pkgver.tar.gz")
md5sums=('d106b58ed5b797bf2851086f7f57d8c6')

build() {

  mkdir -p "$pkgdir/etc/xdg/pacaur"
  install -D -m644 ./$pkgname-$pkgver/$pkgname.conf $pkgdir/etc/xdg/pacaur/$pkgname.conf || return 1
  install -D -m755 ./$pkgname-$pkgver/$pkgname $pkgdir/usr/bin/$pkgname || return 1
  install -D -m755 ./$pkgname-$pkgver/$pkgname.bash.complete\
        $pkgdir/usr/share/bash-completion/completions/$pkgname || return 1
  mkdir -p "$pkgdir/usr/share/man/man8/"
  pod2man --section=8 --center="Pacaur Manual" --name="PACAUR" --release="$pkgname $pkgver" ./$pkgname-$pkgver/README.pod > ./$pkgname-$pkgver/pacaur.8
  install -m 644 ./$pkgname-$pkgver/pacaur.8 $pkgdir/usr/share/man/man8/pacaur.8 
}

