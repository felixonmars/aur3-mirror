pkgname=lewm
pkgver=0.76
pkgrel=1
pkgdesc="Lua script that brings tiling to EWMH-compliant Window Managers"
url="http://github.com/cdede/lewm/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('dmenu'  'archlinux-xdg-menu' 'luaposix')
source=(http://github.com/downloads/cdede/lewm/lewm.${pkgver}.tar.bz2)
sha1sums=('d2ea405cde7e9d3c017584d361b467bfdf78da92')
makedepends=('gcc')

build() {
    cd ${srcdir}/${pkgname}
     autoreconf -i
  ./configure --prefix=/
  make || return 1
  make DESTDIR=$pkgdir install
}
