+/***********************************************************************
+ *           L_rt_remove_pthread
+ */
+void L_rt_remove_pthread(pthread_t thread)
+{
+    LPTHREADMAP prev;
+    LPTHREADMAP pobj;
+
+    RtlEnterCriticalSection(&csThreadMap);
+    prev = 0;
+    for (pobj = s_threadMap; pobj; pobj = pobj->m_next) {
+        if (pthread_equal(pobj->m_thread, thread)) {
+            if (prev)
