+            else
+                s_threadMap = pobj->m_next;
+            break;
+        }
+        prev = pobj;
+    }
+    RtlLeaveCriticalSection(&csThreadMap);
+
+    if (pobj)
+        RtlFreeHeap(GetProcessHeap(), 0, pobj);
+    else
+        ERR("Thread not found %x\n", (int)thread);
+}
