# Contributor: lp76 <l.peduto@gmail.com>
pkgname=termit
pkgver=2.9.0
pkgrel=1
pkgdesc="A terminal emulator based on the vte library. It includes tabs, bookmarks, and the ability to switch encodings"
arch=('i686' 'x86_64')
url="https://github.com/nonstop/termit/wiki/"
license=('GPL')
depends=('vte' 'lua')
makedepends=('cmake>=2.6.1')
source=(cmake.patch http://cloud.github.com/downloads/nonstop/termit/$pkgname-$pkgver.tar.bz2)
md5sums=('9a3d02839de20c649796370f0beeea99'
         '8a612c035d4e8a2a48d9f12eb0d47874')

build() {
  cd $srcdir/$pkgname-$pkgver
  patch -Np1 < ../cmake.patch || return 1
  cmake -DCMAKE_INSTALL_PREFIX=/usr || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}
