# Contributor: Matias De la Puente <mfpuente.ar@gmail.com>
pkgname=i4uc
pkgver=0.6.0
pkgrel=1
pkgdesc="IDE for microcontrollers"
arch=('i686' 'x86_64')
url="http://trac.usla.org.ar/i4uc"
license=('GPLv3')
depends=('gtksourceview2' 'libgee' 'hicolor-icon-theme')
makedepends=('intltool' 'pkg-config' 'make')
optdepends=('sdcc' 'picp' 'pk2cmd' 'cross-arm-elf-gcc' 'lpc21isp' 'gcc-avr' 'gcc-msp430' 'srecord' 'cross-arm-none-eabi-gcc' 'avrdude' 'jalv2')
install=$pkgname.install
source=(http://trac.usla.org.ar/i4uc/raw-attachment/wiki/Descargas/$pkgname-$pkgver.tar.bz2)
sha256sums=('717451fbf944e5e824571c855b5e32d2c9f4abb25891803337ea4cd4b1126b3c')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
