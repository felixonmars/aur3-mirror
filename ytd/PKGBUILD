# Contributor: Filip <fila pruda.com>
pkgname=ytd
pkgver=0.95
pkgrel=1
pkgdesc="an utility for downloading multimedia contentfrom YouTube and other online streaming services."
arch=(any)
url="http://www.pepak.net/download/youtube-downloader/"
license=('GPL')
depends=(wine)
makedepends=(unzip)
source=(ytd ytd.desktop ytd.xml http://www.pepak.net/files/youtube/ytd-$pkgver.zip)
md5sums=(
	'a9d5d5e43b6bf9d5581b927750a61ba5' 'e10bfe126777f969da9eaf35edd0ba65'
	'bbb88620ca36a9c43b36347430c2c82f' '2dfc5173aa97f09fc1acf7cce55278cc')
noextract=(ytd-$pkgver.zip)
options=(!strip)

build() {
  
  install -d -m755 ${pkgdir}/usr/share/ytd
  unzip ${srcdir}/ytd-$pkgver.zip -d ${pkgdir}/usr/share/ytd

  find ${pkgdir}/usr/share -type f -exec chmod 644 "{}" \;
  find ${pkgdir}/usr/share -type d -exec chmod 755 "{}" \;
  
  install -m644 ${srcdir}/ytd.xml ${pkgdir}/usr/share/ytd

  install -d -m755 ${pkgdir}/usr/share/applications
  install -m644 ${srcdir}/ytd.desktop ${pkgdir}/usr/share/applications/ytd.desktop

  install -d -m755 ${pkgdir}/usr/bin
  install -m755 ${srcdir}/ytd ${pkgdir}/usr/bin
  
}