pkgdesc="ROS - A simple viewer for ROS image topics."
url='http://www.ros.org/wiki/image_view'

pkgname='ros-hydro-image-view'
pkgver='1.11.9'
_pkgver_patch=0
arch=('any')
pkgrel=1
license=('BSD')

ros_makedepends=(ros-hydro-message-filters
  ros-hydro-rosconsole
  ros-hydro-cv-bridge
  ros-hydro-sensor-msgs
  ros-hydro-nodelet
  ros-hydro-camera-calibration-parsers
  ros-hydro-image-transport
  ros-hydro-roscpp
  ros-hydro-opencv2
  ros-hydro-std-srvs
  ros-hydro-catkin
  ros-hydro-stereo-msgs)
makedepends=('cmake' 'git' 'ros-build-tools'
  ${ros_makedepends[@]})

ros_depends=(ros-hydro-message-filters
  ros-hydro-rosconsole
  ros-hydro-cv-bridge
  ros-hydro-nodelet
  ros-hydro-camera-calibration-parsers
  ros-hydro-image-transport
  ros-hydro-roscpp
  ros-hydro-opencv2
  ros-hydro-std-srvs)
depends=(${ros_depends[@]})

_tag=release/hydro/image_view/${pkgver}-${_pkgver_patch}
_dir=image_view
source=("${_dir}"::"git+https://github.com/ros-gbp/image_pipeline-release.git"#tag=${_tag})
md5sums=('SKIP')

build() {
  # Use ROS environment variables
  /usr/share/ros-build-tools/clear-ros-env.sh
  [ -f /opt/ros/hydro/setup.bash ] && source /opt/ros/hydro/setup.bash

  # Create build directory
  [ -d ${srcdir}/build ] || mkdir ${srcdir}/build
  cd ${srcdir}/build

  # Fix Python2/Python3 conflicts
  /usr/share/ros-build-tools/fix-python-scripts.sh ${srcdir}/${_dir}

  # Build project
  cmake ${srcdir}/${_dir} \
        -DCMAKE_BUILD_TYPE=Release \
        -DCATKIN_BUILD_BINARY_PACKAGE=ON \
        -DCMAKE_INSTALL_PREFIX=/opt/ros/hydro \
        -DPYTHON_EXECUTABLE=/usr/bin/python2 \
        -DPYTHON_INCLUDE_DIR=/usr/include/python2.7 \
        -DPYTHON_LIBRARY=/usr/lib/libpython2.7.so \
        -DSETUPTOOLS_DEB_LAYOUT=OFF
  make
}

package() {
  cd "${srcdir}/build"
  make DESTDIR="${pkgdir}/" install
}
