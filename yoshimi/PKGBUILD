# Contributor: SpepS <dreamspepser at yahoo dot it>

pkgname=yoshimi
pkgver=0.060.1
pkgrel=3
pkgdesc="Experimental ZynAddSubFX with improved JACK audio & MIDI IO"
arch=('i686' 'x86_64')
url="http://www.graggrag.com/?q=node/19"
license=('GPL')
depends=('jack' 'fltk' 'fftw-threads')
makedepends=('cmake' 'boost' 'mxml')
source=("http://www.graggrag.com/$pkgname/$pkgname-$pkgver.tar.bz2")
md5sums=('77068d98c6306ae7d704c88aa3997f42')

build() {
  cd "$srcdir/$pkgname-$pkgver/src" 

  [[ $CARCH == 'i686' ]] && _ARCH_OPT="OFF" || _ARCH_OPT="ON"

  cmake \
	-DCMAKE_INSTALL_PREFIX="$pkgdir/usr" \
	-DBuildForAMD_X86_64=$_ARCH_OPT .

  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver/src" 

  make install
}
