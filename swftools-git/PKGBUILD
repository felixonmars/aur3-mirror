# Maintainer: Bastien Dejean <baskerville@lavabit.com>

pkgname=swftools-git
pkgver=20121003
pkgrel=1
pkgdesc="A collection of SWF manipulation and creation utilities, Git version"
arch=('i686' 'x86_64')
url="http://www.swftools.org/"
license=('GPL')
depends=('freetype2' 'libjpeg')
makedepends=('git')
provides=('swftools')
conflicts=('swftools')
_gitroot='git://git.swftools.org/swftools'
_gitname='swftools'

build() {
    cd "$srcdir"

    if [ -d "$_gitname" ] ; then
        cd "$_gitname" && git pull origin
    else
        git clone "$_gitroot" "$_gitname"
    fi

    cd "$srcdir/$_gitname"

    ./configure
    make
}

package() {
    cd "$srcdir/$_gitname"

    make prefix="${pkgdir}/usr" install
    install -D -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
}
