+
+	if (sony_gsensor->handle == 0x0134) {
+		if (sony_call_snc_handle(sony_gsensor->handle, 0x0200,
+					&result))
+			return -EIO;
+
+		result = !!(result & 0x04);
+	} else {
+		if (sony_call_snc_handle(sony_gsensor->handle, 0x0400,
+					&result))
+			return -EIO;
+
+		result &= 0x01;
+	}
