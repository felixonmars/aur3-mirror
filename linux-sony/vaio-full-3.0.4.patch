+			goto attrserror;
+	}
+
+	return 0;
+
+attrserror:
+	for (; i > 0; i--)
+		device_remove_file(&pd->dev, &sony_gsensor->attrs[i]);
+
+	kfree(sony_gsensor->attrs);
