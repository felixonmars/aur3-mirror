# Maintainer: josephgbr <rafael.f.f1@gmail.com>

_pkgbase=libatasmart
pkgname=lib32-$_pkgbase
pkgver=0.19
pkgrel=1
pkgdesc="ATA S.M.A.R.T. Reading and Parsing Library (32 bit)"
arch=('x86_64')
license=('LGPL')
depends=('lib32-udev' "$_pkgbase")
url="http://0pointer.de/blog/projects/being-smart.html"
options=('!libtool')
source=("http://0pointer.de/public/${_pkgbase}-${pkgver}.tar.xz")
md5sums=('53afe2b155c36f658e121fe6def33e77')

build() {
  export CC='gcc -m32'
  export PKG_CONFIG_PATH='/usr/lib32/pkgconfig'
  
  cd ${_pkgbase}-${pkgver}
  ./configure --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --disable-static \
    --libdir=/usr/lib32
    
  make
}

package() {
  cd ${_pkgbase}-${pkgver}
  make DESTDIR="${pkgdir}" install
  rm -rf ${pkgdir}/usr/{include,sbin,share}
}
