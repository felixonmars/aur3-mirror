pkgname=lib32-glitz
pkgver=0.5.6
pkgrel32=5
pkgrel=5
pkgdesc="OpenGL image compositing library"
arch=('x86_64')
url="http://cairographics.org/"
depends=('lib32-libgl' 'lib32-glibc')
license=('BSD')
groups=lib32
source=(http://mirror.js-webcoding.de/pub/archlinux/community/os/i686/${pkgname/lib32-/}-${pkgver}-${pkgrel32}-i686.pkg.tar.xz)
sha256sums=('828551e0c01e7749462361d778c7965c46b4958ee4e57db1d66903ab401a0de3')

package() {
	mkdir -p ${pkgdir}/usr/lib32
	cp -rPf ${srcdir}/usr/lib/*.so* ${pkgdir}/usr/lib32
}

