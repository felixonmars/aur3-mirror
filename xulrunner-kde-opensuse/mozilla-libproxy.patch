+    if (mProxyFactory)
+      px_proxy_factory_free(mProxyFactory);
+  }
+
+  pxProxyFactory *mProxyFactory;
+};
+
+NS_IMPL_ISUPPORTS1(nsUnixSystemProxySettings, nsISystemProxySettings)
