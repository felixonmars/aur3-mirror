# Maintainer: max.bra <max.bra at alice dot it>
# Contributor: max.bra <max.bra at alice dot it>

pkgname=ooo-thumbnailer
pkgver=0.2
pkgrel=2
pkgdesc="ooo-thumbnailer is a lightweight OpenOffice.org document thumbnailer that can be used by Nautilus to create thumbnails for your documents"
arch=('any')
url="http://packages.debian.org/sid/ooo-thumbnailer"
license=('GPL')
depends=('gconf' 'imagemagick' 'unzip')
makedepends=()
optdepends=()
conflicts=('ooo-thumbnailer-unofficial')
install=$pkgname.install
source=(http://ftp.de.debian.org/debian/pool/main/o/${pkgname}/${pkgname}_${pkgver}.orig.tar.gz)
md5sums=('441b3280fdb69be029f81d2b3036b6d0')

build() {
    #arch stuff
    sed -i 's/openofficeorg3-//' "${srcdir}"/${pkgname}-${pkgver}/$pkgname

    #BUG: no thumbs for paths with spaces
    sed -i 's/`dirname "$ifile"`/"`dirname "$ifile"`"/' "${srcdir}"/${pkgname}-${pkgver}/$pkgname

    install -D -m644 "${srcdir}"/${pkgname}-${pkgver}/$pkgname.schemas "${pkgdir}"/usr/share/gconf/schemas/$pkgname.schemas
    install -D -m755 "${srcdir}"/${pkgname}-${pkgver}/$pkgname "${pkgdir}"/usr/bin/$pkgname
}
