pkgname=poezio
pkgrel=1
pkgver=0.7.5
pkgdesc="A full-featured command-line irc-like jabber client"
arch=('any')
url="http://poezio.eu"
license=('zlib')
replaces=('poezio-hg' 'poezio-git')
provides=('poezio-hg' 'poezio-git')
depends=('python' 'python-sleekxmpp-poezio')
makedepends=('setuptools')
optdepends=('python-dnspython-hg: SRV records support (also, gmail)'
            'asciidoc: Generating HTML documentation')
source=("http://dev.louiz.org/project/$pkgname/download/file/$pkgname-$pkgver.tar.gz")

sha512sums=('63d1f621a0587196986947a447f16ee1533f6823e7ef445affce633250f23827286da30f9bd8e3b49e715ce103eaed98be0e9ed2b8a6bc9aadc1701f9a4d0891')

build() {
    cd $srcdir/$pkgname-$pkgver
    make DESTDIR=$pkgdir prefix=/usr install
}
