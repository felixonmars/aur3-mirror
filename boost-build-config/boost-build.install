post_install() {
/bin/true
/bin/cat << EOF
===>
===> To generate a new configuration file for boost-build automatically,
===> do "/etc/rc.d/boost-build-config -s"
===> 
===> do "/etc/rc.d/boost-build-config --help" for more information.
===>
EOF
/etc/rc.d/boost-build-config -s
/bin/true
}

post_upgrade() {
/etc/rc.d/boost-build-config -s
/bin/true
}

post_remove() {
/bin/true
}
