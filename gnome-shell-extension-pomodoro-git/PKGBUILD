# Maintainer: Max Gonzih <iam@gonzih.org>

pkgname=gnome-shell-extension-pomodoro-git
pkgver=20111017
pkgrel=1
pkgdesc="GNOME Shell extension for pomodoro technique."
arch=('any')
url="https://github.com/Gonzih/pomodoro-gnome-shell"
license=('MIT')
depends=('gnome-shell')
makedepends=('git')
optdepends=('gnome-tweak-tool: A tool to customize advanced GNOME 3 options.')
_gitroot="https://github.com/Gonzih/pomodoro-gnome-shell.git"
_gitname="pomodoro-gnome-shell"
_extensionname="pomodoro@iam.gonzih.org"

package() {
  cd ${srcdir}
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  mkdir -p ${pkgdir}/usr/share/gnome-shell/extensions/${_extensionname}
  mv ${srcdir}/${_gitname}/* ${pkgdir}/usr/share/gnome-shell/extensions/${_extensionname}/
}
