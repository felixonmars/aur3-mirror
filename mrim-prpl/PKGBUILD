# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: Your Name <youremail@domain.com>
pkgname=mrim-prpl
pkgver=0.1.26
pkgrel=1
pkgdesc="MRIM plugin for libpurple-based IM clients like Pidgin, Audium, etc."
arch=('i686' 'x86_64')
url="http://mrim-prpl.googlecode.com"
license=('GPLv2')
depends=('pidgin')
provides=('mrim-prpl')
source=(http://mrim-prpl.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('529cf10fc96d05e192c98f7869c4ef67')

build() {
  tar xfvz $pkgname-$pkgver.tar.gz

  cd "$srcdir/$pkgname"

  make
}

package() {
  cd "$srcdir/$pkgname"

  make DESTDIR="$pkgdir/" install
}
