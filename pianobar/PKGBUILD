# Maintainer: Patrick Palka <patrick@parcs.ath.cx>
# Development: http://closure.ath.cx/aur-dev

pkgname=pianobar
pkgver=2011.11.09
pkgrel=1
pkgdesc="console-based frontend for Pandora (official version)"
url="http://6xq.net/0017"
arch=('i686' 'x86_64')
license=('MIT')
depends=('libao' 'faad2' 'libmad')
source=(http://6xq.net/media/00/16/pianobar-$pkgver.tar.bz2)

_builddir="$srcdir/$pkgname-$pkgver"

build() {
    cd "$_builddir"

    make
}

package() {
    cd "$_builddir"

    make DESTDIR=$pkgdir PREFIX=/usr install
    install -vDm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

md5sums=('8a1c35f45a54726e8abcf31bded60ca9')
