post_install() {
	echo -n "Updating vim help tags..."
	# rebuild the vim documentation tags
	vim -e -c 'helptags /usr/share/vim/vimfiles/doc/' -c quit
	echo "done."
}

post_upgrade() {
	post_install $1
}

post_remove() {
	post_install
}

op=$1
shift

$op $*
