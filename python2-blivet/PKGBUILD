# Maintainer: Anatol Pomozov <anatol.pomozov@gmail.com>

pkgname=python2-blivet
pkgver=0.62
_tag=blivet-$pkgver-1
pkgrel=2
pkgdesc='a python module for management of a system storage configuration'
arch=(any)
license=(LGPL2.1)
url='http://fedoraproject.org/wiki/Blivet'
depends=(python2 python2-pyparted python2-pykickstart python2-pyblock python2-cryptsetup python2-pyudev multipath-tools mdadm)
source=(https://github.com/dwlehman/blivet/archive/$_tag.zip)
sha1sums=('363958c41a9877876d369a059eb5a2525c37d1a5')

check() {
  cd blivet-$_tag
  python2 setup.py check
}

package() {
  cd blivet-$_tag
  python2 setup.py install --root="$pkgdir" --optimize=1
}
