# Maintainer: Dave Reisner <d@falconindy.com>

pkgname=burp
pkgver=1.6.1
pkgrel=2
pkgdesc="A simple AUR uploader"
arch=('i686' 'x86_64')
url="http://github.com/falconindy/burp"
license=('GPL')
depends=('curl')
makedepends=('perl')
source=("https://github.com/downloads/falconindy/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('c58f4a335976934bb351d9bf089f2f0b')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make -B
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make PREFIX=/usr DESTDIR=${pkgdir} MANPREFIX=/usr/share/man install
}

# vim: ft=sh syn=sh
md5sums=('99262467651d390d8940a284b7954d71')
