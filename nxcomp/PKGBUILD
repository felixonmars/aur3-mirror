pkgname=nxcomp
pkgver=3.5.0_2
pkgrel=2
pkgdesc="NX compression library"
arch=('i686' 'x86_64')
url="http://www.nomachine.com"
license=('GPL')
depends=('libjpeg' 'libpng' 'gcc-libs')
groups=('x2go' 'alts')
source=(http://64.34.161.181/download/${pkgver%%_*}/sources/${pkgname}-${pkgver//_/-}.tar.gz)
md5sums=('cba926f2b855231a8fc3e0dabff52855')

build() {
  cd $srcdir/$pkgname

  sed -i 's/_XLIB_H_/_X11_XLIB_H_/g' NXvars.h

  ./configure --prefix=/usr
  make || return 1

  install -d $pkgdir/usr/lib
  cp -a libXcomp.so* $pkgdir/usr/lib

  install -d $pkgdir/usr/include/nxcomp
  cp -a *.h $pkgdir/usr/include/nxcomp/
}
md5sums=('ad8c0f133122c6d07732ca69c8759410')
