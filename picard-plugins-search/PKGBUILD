# Contributor: Johannes Dewender  arch at JonnyJD dot net
pkgname=picard-plugins-search
pkgver=0.12
pkgrel=2
pkgdesc="search plugins for MusicBrainz Picard"
arch=('any')
url="http://musicbrainz.org/doc/PicardPlugins"
license=('GPL')
depends=('picard>=0.9.0')
source=(http://users.musicbrainz.org/~brianfreud/SearchAMG.py
http://users.musicbrainz.org/~brianfreud/SearchAmazon3.py
http://users.musicbrainz.org/~brianfreud/SearchCastAlbums3.py
http://users.musicbrainz.org/~brianfreud/SearchDiscogs3.py
http://users.musicbrainz.org/~brianfreud/SearchFilmMusziek3.py
http://users.musicbrainz.org/~brianfreud/SearchGMR.py
http://users.musicbrainz.org/~brianfreud/SearchGoogle3.py
http://users.musicbrainz.org/~brianfreud/SearchLortelArchives3.py
http://users.musicbrainz.org/~brianfreud/SearchSoundtrackCollector3.py
http://users.musicbrainz.org/~brianfreud/SearchSoundtrackINFO3.py)
md5sums=('813073af46b3b6811e6956360b2f0ffb'
         '8d7c3c415e915da3227e08d7f0eee3e5'
         'cff4f300873360c8c8416c5210ea761e'
         '7193eb61586285d610baa527238dfe8b'
         '9181091040efa35738a64a4571b04ce6'
         'b55a3a53d3f357abf0d97b08e1dd0f4b'
         '19de98bfeeb16d74c4c53b3d0f51579c'
         'ea9b3e8687123431e89af5d75da7e15b'
         'cb2df285162a9b7732ab835ae3a45379'
         '059e2c81ba03ed605af5d3e4d02a0b23')

build() {
  plugindir=${pkgdir}/usr/lib/python2.7/site-packages/picard/plugins
  cd "$srcdir"
  mkdir -p $plugindir
  cp  SearchAMG.py SearchAmazon3.py SearchCastAlbums3.py SearchDiscogs3.py SearchFilmMusziek3.py SearchGMR.py SearchGoogle3.py SearchLortelArchives3.py SearchSoundtrackCollector3.py SearchSoundtrackINFO3.py $plugindir
}

