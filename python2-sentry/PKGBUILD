pkgname=python2-sentry
pkgver=5.0.13
pkgrel=5
pkgdesc="Python-based realtime logging and aggregation server."
arch=(any)
url="http://pypi.python.org/pypi/sentry"
license=(BSD)
depends=(
    'django-celery>=2.5.5'
    'django-crispy-forms>=1.1.4'
    'django-indexer>=0.3.0'
    'django-paging>=0.2.4'
    'django-picklefield>=0.2.0'
    'django-social-auth>=0.7.1'
    'django-social-auth-trello>=1.0.2'
    'django-templatetag-sugar>=0.1'
    'gunicorn>=0.14.6'
    python2
    'python-anyjson>=0.3.3'
    'python-simplejson>=2.1.6'
    'python2-amqplib>=1.0.2'
    'python2-beautifulsoup3>=3.2.1'
    'python2-billiard>=2.7.3.12'
    'python2-celery>=2.5.3'
    'python2-dateutil>=1.5'
    'python2-httpagentparser>=1.0.5'
    'python2-kombu>=2.4.0'
    'python2-logan>=0.5.0'
    'python2-oauth2>=1.5.167'
    'python2-openid>=2.2'
    'python2-pynliner>=0.4.0'
    'python2-raven>=2.0.6'
    'python2-south>=0.7.6'
)
makedepends=(python2-distribute)
source=("http://pypi.python.org/packages/source/s/sentry/sentry-${pkgver}.tar.gz")
md5sums=(b50f49ff3924caac06aaca1eb30c9e6d)

build () {
    
    cd "${srcdir}/sentry-${pkgver}"
    python2 setup.py install --root="${pkgdir}/" --optimize=1
}

package () {

    install -Dm0664 "${srcdir}/sentry-${pkgver}/LICENSE" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"

}