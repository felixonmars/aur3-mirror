# Maintainer: Humbert Julien <julroy67 [AT] gmail.com>

pkgname=tegaki-python
pkgver=0.3.1
pkgrel=1
pkgdesc="Base python library for Tegaki"
arch=('i686' 'x86_64')
url="http://www.tegaki.org/"
license=('GPL2')
depends=('python>=2.4' 'zinnia>=0.05')
makedepends=('python')
source=("http://www.tegaki.org/releases/$pkgver/$pkgname-$pkgver.tar.gz")
md5sums=('bd3284f56d36691710ec5b346a61f5af')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	
	python setup.py build || return 1
	python setup.py install --prefix=$pkgdir/usr || return 1
}
