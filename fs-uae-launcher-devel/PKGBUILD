# Maintainer: grimi <grimi at poczta dot fm>

_pkgname=fs-uae-launcher
_pkgver=1.3.26

pkgname=fs-uae-launcher-devel
pkgver=1.3.26
pkgrel=1
pkgdesc="FS-UAE Launcher is a graphical user interface for setting up FS-UAE (development version)."
arch=("any")
url="http://fengestad.no/fs-uae/download-beta"
license=("GPL2")
depends=("fs-uae" "xdg-utils" "wxpython" "python-pygame" "python2-distribute" "hicolor-icon-theme")
install="${pkgname}.install"
source=("http://fengestad.no/fs-uae/files/${_pkgver}/${_pkgname}-${_pkgver}.tar.gz")
provides=("fs-uae-launcher")
conflicts=("fs-uae-launcher")
md5sums=('d7fd013f3ea61c1d539df65a2b6eeede')




build() {
   cd ${_pkgname}-${_pkgver}

   sed 's/os.expanduser/os.path.expanduser/g' -i fs_uae_launcher/FSUAELauncher.py

   make -f Makefile.mk
}



package() {
   cd ${_pkgname}-${_pkgver}
   python2 setup.py install --prefix=/usr --root="${pkgdir}" --optimize=1
   make install -f Makefile.mk DESTDIR="${pkgdir}"
}


