# Contributor: Marco Curreli <marcocurreli@tiscali.it>

pkgname=stardict-babylon-en-it
pkgver=2.4.2
pkgrel=8
pkgdesc="English Italian dictionary for Stardict"
license=('freeware')
url="http://stardict.sourceforge.net"
md5sums=('e2130265243b4b28c1a7115ac3d11f77')
source=(http://yeelou.com/huzheng/stardict-dic/babylon/bidirectional//stardict-babylon-Babylon_English_Italian-$pkgver.tar.bz2)

arch=('any')
build() {
	cd $startdir/src/stardict-babylon-Babylon_English_Italian-$pkgver
	mkdir -p $startdir/pkg/usr/share/stardict/dic/
	install -m 644 Babylon_English_Italian.dict.dz  Babylon_English_Italian.idx  Babylon_English_Italian.ifo $startdir/pkg/usr/share/stardict/dic/
}
