pkgname=ogmrip-profiles
pkgver=0.2
pkgrel=3
pkgdesc='ogmrip-profiles is a collection of profiles for OGMRip'
arch=('any')
url='http://ogmrip.sourceforge.net/en/plugins.html'
license=('LGPL')
groups=('ogmrip')
depends=('ogmrip>=0.13')
source=("http://downloads.sourceforge.net/sourceforge/ogmrip/${pkgname}-${pkgver}.tar.gz"
"http://downloads.sourceforge.net/project/ogmrip/${pkgname}/${pkgver}/README")
build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
  install -Dm0644 README ${pkgdir}/usr/share/ogmrip-profiles/README
  rm -f ${pkgdir}/usr/share/locale/fr/LC_MESSAGES/\@GETTEXT_PACKAGE\@.mo || return 1 #todo: fix it
}

# vim:set ts=2 sw=2 et ft=sh:

md5sums=('20a6a8a28caa70a978652abf9263f235'
         '0c0f9e42a7ba68c2d225dc934b291596')
