pkgname=newbreeze
_name=NewBreeze
pkgver=1.0.2
pkgrel=2
pkgdesc="Fast and light-weight File Manager (QT4)"
arch=('i686' 'x86_64')
url="http://qt-apps.org/content/show.php/NewBreeze?content=154427"
license=('LGPL')
depends=('qt>=4.7' 'imagemagick')
makedepends=('make')
#install=${pkgname}.install
#changelog=$pkgname.changelog
source=("http://qt-apps.org/CONTENT/content-files/154427-$_name.tar.xz" "$pkgname.desktop")
md5sums=("2aa2d074451a674d9db4f6ff7b187d8d" "c9376de27f779834bcd931affdf2ae3d")

build() {
  cd $srcdir/$_name
  #lrelease $_name.pro
  qmake PREFIX=/usr
  make || return 1
}

package() {
   cd "${srcdir}/$_name"
	mkdir -p "${pkgdir}/usr/bin" "${pkgdir}/usr/share/applications"
	install -p -m755 "$_name" "${pkgdir}/usr/bin/$pkgname"
	install -p -m644 "${startdir}/$pkgname.desktop" "${pkgdir}/usr/share/applications/"
	install -Dm644 $srcdir/$_name/icons/$_name.png  "$pkgdir/usr/share/pixmaps/$pkgname.png"
	
}