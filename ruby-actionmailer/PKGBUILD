# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-actionmailer
pkgver=3.0.8
pkgrel=1
pkgdesc="Is the Rails framework which handles email delivery."
arch=(any)
url="http://www.rubyonrails.org/"
license=('MIT')
depends=('ruby' 'ruby-mail' 'ruby-actionpack')
source=(http://gems.rubyforge.org/gems/actionmailer-$pkgver.gem)
noextract=(actionmailer-$pkgver.gem)
md5sums=('a0e5fec31bfeff71faf17d19eed1a7b3')

build() {
  cd $srcdir
  # _gemdir is defined inside build() because if ruby[gems] is not installed on the system
  # makepkg will exit with an error when sourcing the PKGBUILD
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" actionmailer-$pkgver.gem
}
