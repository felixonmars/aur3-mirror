# Contributor: Bernardo Barros <bernardobarros@gmail.com>

pkgname=lv2file
pkgver=0.6
pkgrel=1
pkgdesc="A simple program which you can use to apply effects to your audio files without much hassle."
arch=('i686' 'x86_64')
url="http://code.google.com/p/lv2file/"
license=('GPL')
makedepends=('lv2core')
depends=('argtable')
source=(http://lv2file.googlecode.com/files/${pkgname}_${pkgver}.tar.gz)
md5sums=('303234f80345bb58f84bde02cac7b570')


build() {
  cd "$srcdir/${pkgname}"

  make all
}

package() {
  cd "$srcdir/${pkgname}"

  make DESTDIR="$pkgdir/" install
}

