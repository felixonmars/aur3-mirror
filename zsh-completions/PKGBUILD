# Maintainer: Julien Nicoulaud <julien.nicoulaud@gmail.com>
# Source: https://github.com/nicoulaj/archlinux-packages
pkgname=zsh-completions
pkgver=0.1.0
pkgrel=1
pkgdesc="Additional completion definitions for Zsh"
arch=(any)
url="https://github.com/zsh-users/zsh-completions"
license=(unknown)
depends=(zsh)
changelog=Changelog
provides=('zsh-completions-git' 'zsh-virtualbox' 'zsh-packagekit' 'zsh-yaourt')
conflicts=('zsh-completions-git' 'zsh-virtualbox' 'zsh-packagekit' 'zsh-yaourt')
source=("https://github.com/zsh-users/${pkgname}/tarball/${pkgver}")
md5sums=('5bd2e42718e19561e6bb9a863023aa70')

package() {
	cd "${srcdir}"/zsh-users-${pkgname}-*/
	install -m0755 -d "${pkgdir}/usr/share/zsh/site-functions"
	install -m0644 _* "${pkgdir}/usr/share/zsh/site-functions"
}
