# Maintainer: boenki <boenki at gmx dot de>
# Contributor: Nick B <Shirakawasuna at gmail _dot_com>

pkgname=juffed
pkgver=0.8.1
pkgrel=3
pkgdesc="A simple tabbed text editor with syntax highlighting, based on Qt4."
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/juffed"
license=('GPL2')
makedepends=('cmake')
depends=('qscintilla')
source=(http://downloads.sourceforge.net/${pkgname}/${pkgname}_${pkgver}.tar.bz2)
md5sums=('bf012e468e22e945230e5ddb8c94d740')

build() {
  cd $pkgname-$pkgver
  cmake . -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=release
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR=$pkgdir install
}