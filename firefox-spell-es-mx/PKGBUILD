# Maintaniner: OmeGa <omg@vmail.me>

pkgname=firefox-spell-es-mx
pkgver=1.1.3
_fx_ver=2.0
pkgrel=1
pkgdesc="Spanish (Mexico) spellchecking dictionary for Firefox."
arch=('any')
url="https://addons.mozilla.org/firefox/language-tools/"
license=('LGPL3')
depends=("firefox>=${_fx_ver}")
source=(http://releases.mozilla.org/pub/mozilla.org/addons/7020/diccionario_espanol_mexico-${pkgver}-fn+tb+fx+sm.xpi)
sha1sums=('8880582675a2ed9fae2a11b56487c3ff3e16d900')

build() {
  cd $srcdir
  rm $srcdir/*.xpi
  local _dir=$pkgdir/usr/lib/firefox/extensions/es-MX@dictionaries.addons.mozilla.org
  mkdir -p "${_dir}"
  cd "${_dir}"
  sed -i 's#<em:maxVersion>.*</em:maxVersion>#<em:maxVersion>20.*</em:maxVersion>#' $srcdir/install.rdf
  cp -r $srcdir/* "${_dir}"
  find ${_dir} -type f -exec chmod 0644 {} \;
  touch ${_dir}/chrome.manifest
}

