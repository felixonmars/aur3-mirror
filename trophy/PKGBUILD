# Contributor: 
# $Id $
pkgname=trophy
pkgver=1.1.5
pkgrel=4
pkgdesc="A 2D car racing action game for Linux"
url="http://trophy.sourceforge.net"
license=('GPL')
groups=
provides=(trophy)
depends=(clanlib)
makedepends=(clanlib)
conflicts=()
replaces=()
backup=()
install=()
source=(http://trophy.sourceforge.net/archives/trophy-1.1.5.tar.gz trophy.png trophy.desktop)
md5sums=('bf62269cacf794e087ac88f0e39f54c1' '970ae4002c53b955bb04d452000ede12' 'd41d5f82810335a272c37b5fdcbcc863')
arch=('i686' 'x86_64')

build()
{
    cd $startdir/src/$pkgname-$pkgver
    ./configure --prefix=/usr
    make || return 1
    make DESTDIR=$startdir/pkg install
    install -D -m644 $startdir/src/trophy.png $startdir/pkg/usr/share/icons/trophy.png
    install -D -m644 $startdir/src/trophy.desktop $startdir/pkg/usr/share/applications/trophy.desktop
}
