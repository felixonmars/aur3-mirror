# Contributor: Nathan Owe <ndowens04 at gmail>

pkgname=tramp
pkgver=2.2.1
pkgrel=3
pkgdesc="emacs extension that provides transparent remote file editing"
arch=(any)
url=http://www.gnu.org/software/tramp/
license=('GPL')
makedepends=('emacs')
source=("ftp://ftp.gnu.org/gnu/tramp/$pkgname-$pkgver.tar.gz")
options=(!docs)
DOC_DIRS+=('usr/share/info')

build() {
    cd "$pkgname-$pkgver"

    ./configure --prefix=/usr
    make
}

package() {
    cd "$pkgname-$pkgver"

    make DESTDIR="$pkgdir" install
    install -vDm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

md5sums=('0e48944c5f50aa5e1684f16f97dbf7bb')
