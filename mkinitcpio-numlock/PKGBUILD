# Maintainer: Jordi De Groof < jordi (dot) degroof (at) gmail (dot) com >
pkgname=mkinitcpio-numlock
pkgver=1.0.1
pkgrel=1
pkgdesc="Enable numlock in early userspace"
arch=('any')
url="https://bbs.archlinux.org/viewtopic.php?pid=869618"
license=('GPL')
depends=('mkinitcpio' 'kbd')
source=(numlock_hook numlock_install)
md5sums=('464be9bd3badd0fccf2445820ef4eb96'
         'a04e52b34cf73da34cdafced2d6ce653')

package() {
  install -o root -g root -m 644 -D ${srcdir}/numlock_hook ${pkgdir}/lib/initcpio/hooks/numlock
  install -o root -g root -m 644 -D ${srcdir}/numlock_install ${pkgdir}/lib/initcpio/install/numlock
}
