
KERNEL_VERSION=whatever
EXTRAMODULES=whatever


dep_extr_mod(){
if [ $EXTRAMODULES != null ]; then
    sbin/depmod $(cat /lib/modules/$EXTRAMODULES/version)
else
    sbin/depmod $KERNEL_VERSION
fi
}

post_install() {
    dep_extr_mod
}

post_upgrade() {
    dep_extr_mod
}

post_remove() {
    dep_extr_mod
}
