pkgname=vestigo
pkgver=148.18f2db7
pkgrel=1
pkgdesc="File manager in Vala and GTK3"
arch=('i686' 'x86_64')
url="https://github.com/alphaos/build"
license=('GPL')
depends=('dconf' 'desktop-file-utils' 'hicolor-icon-theme' 'gtk3' 'libgee' 'poppler-glib')
makedepends=('vala' 'git')
source=(alphaos::git+https://github.com/alphaos/build)
md5sums=('SKIP')
install=$pkgname.install

pkgver() {
  cd "$srcdir"/alphaos
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd "$srcdir"/alphaos/def-scripts/03_extra/$pkgname/$pkgname
  make DESTDIR="$pkgdir/" install
}
