# Maintainer: Anthony Cornehl <accornehl[at]gmail[dot]com>
# https://github.com/twinshadow/abs-ofed
pkgname=libsdp
pkgver=1.1.108
_subver=0.17
_commit=ga6958ef
pkgrel=1
pkgdesc="LD_PRELOAD-able library for using SDP"
groups=('ofed')
url="http://www.openfabrics.org"
arch=('x86_64' 'i686')
license=('GPL2' 'custom:"Open Fabrics Alliance BSD"')
depends=('glibc')
source=("http://www.openfabrics.org/downloads/${pkgname}/${pkgname}-${pkgver}-${_subver}.${_commit}.tar.gz")
md5sums=('badedec1a5f310247e22fb686ddaeb67')
sha512sums=('21978217b5c745e8e37c7bc21d739ad08676cd31b98848c3ad41dfa8ad12f4de6d688e14999e2258b24edd69db57be02e57d544cd11a9d97d78eb58879084847')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr \
              --mandir=/usr/share/man \
              --sysconfdir=/etc \
              --localstatedir=/var
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make -j1 DESTDIR="${pkgdir}" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
  chmod 644 "${pkgdir}/etc/libsdp.conf"
}
