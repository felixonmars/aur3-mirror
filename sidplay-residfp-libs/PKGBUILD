pkgname=sidplay-residfp-libs
pkgver=0.3.1
pkgrel=1
pkgdesc="Sidplay2 fork with improved filter emulation."
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/sidplay-residfp/"
license=('GPL')
depends=('gcc-libs')
makedepends=('pkgconfig' 'libtool>=1.4b' 'autoconf' 'automake' 'subversion')
conflicts=('sidplay2-libs')
options=('!emptydirs')
source=()
md5sums=()

_svntrunk=https://sidplay-residfp.svn.sourceforge.net/svnroot/sidplay-residfp/tags/libsidplayfp/$pkgver

build() {
  msg 'Checking out SVN repository...'
  svn co --non-interactive --trust-server-cert $_svntrunk $srcdir
  autoreconf -i
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$pkgdir install
}
