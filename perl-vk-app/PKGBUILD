# Maintaineri: Anatol Pomozov <anatol.pomozov@gmail.com>

pkgname=perl-vk-app
_cpanname=VK-App
pkgver=0.10
pkgrel=1
pkgdesc="Creation of a client application for vk.com"
arch=('any')
license=('GPL2')
url="http://search.cpan.org/dist/${_cpanname}/"
depends=('perl-lwp-protocol-https' 'perl-json')
source=("http://search.cpan.org/CPAN/authors/id/M/MA/MAG/${_cpanname}-${pkgver}.tar.gz")
sha1sums=('8ae59352f7832fa1d88fcead0650c05d7ea785f3')

build() {
  cd ${srcdir}/${_cpanname}-${pkgver}
  perl Makefile.PL -- INSTALLDIRS=vendor 
  make
}

package() {
  cd ${srcdir}/${_cpanname}-${pkgver}
  make install DESTDIR=${pkgdir} 
}
