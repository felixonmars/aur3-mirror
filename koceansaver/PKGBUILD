# Contributor: Nick B <Shirakawasuna at gmail _dot_com>

pkgname=koceansaver
pkgver=0.3
pkgrel=2
pkgdesc="A nice OpenGL KDE screensaver."
arch=('i686' 'x86_64')
url="http://www.kde-apps.org/content/show.php/KOceanSaver?content=95863"
license=('GPL2')
depends=('kdebase-workspace' 'kdelibs>=4.1.0' 'libgl')
makedepends=('cmake' 'qt')
source=(http://sourceforge.net/projects/koceansaver/files/koceansaver/koceansaver%200.3/KOceanSaver-0.3.tar.gz)
md5sums=('9f43d86f4577a44e0ec6361995c012c2')

build() {
  cd $startdir/src/KOceanSaver
  qmake KOceanSaver.pro || return 1
}

package() {
  cd $startdir/src/KOceanSaver
  export INSTALL_ROOT="$startdir/pkg"
  make install || return 1
}