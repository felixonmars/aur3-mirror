pkgrel=2
pkgdesc="Alpine Wall iptables based firewall"
arch=('any')
url="http://git.alpinelinux.org/cgit/kunkku/awall/"
license=('GPL2')
groups=()
depends=('lua>=5.1' 'luafilesystem' 'lua-alt-getopt' 'lua-stringy' 'lua-signal' 'lua-pc')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=($url/snapshot/$pkgname-$pkgver.tar.bz2)
noextract=()

build() {
  echo
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make ROOT_DIR="$pkgdir/" install
}
