# Maintainer: neolith2099

pkgname="xf86-input-egalax"
pkgver="3.02.4315"
pkgrel=1
pkgdesc="eGalaxTouch touchscreen driver"
url="http://home.eeti.com.tw/web20/eGalaxTouchDriver/linuxDriver.htm"
license=('custom:EULA')
arch=('i686' 'x86_64')
install=('xf86-input-egalax.install')

md5sums=(
    '5b85883540a4b13389a04fe2fd10cd2c'  
)

_architect='32'
[ "$CARCH" = "x86_64" ] && _architect='64'
[ "$CARCH" = "x86_64" ] && md5sums[0]='420c9c5dc613644fae468d365674d3ed'

source=("eGalaxTouch-${pkgver}-${_architect}b-k26.tar.gz::http://home.eeti.com.tw/web20/drivers/touch_driver/Linux/20100413/eGalaxTouch-${pkgver}-${_architect}b-k26.tar.gz")

depends=('xorg-server>=1.8' 'libpng12')
provides=('egalax')
conflicts=()
groups=('xorg-input-drivers')

build() {
    cd $srcdir/eGalaxTouch${_architect}

    tar -xzf eGalaxTouch.tar.gz || return 1

    cd eGalaxTouch${_architect}

    mkdir -p \
        "$pkgdir/usr/lib/xorg/modules/input" \
        "$pkgdir/usr/bin" \
        "$pkgdir/usr/share/licenses/$pkgname/" || return 1

    install -D -m755 Module/x18/egalax_drv.so $pkgdir/usr/lib/xorg/modules/input
    install -D -m755 eGalaxTouch $pkgdir/usr/bin
    install -D -m755 TKCal/TKCal $pkgdir/usr/bin
    install -D -m644 eula.pdf $pkgdir/usr/share/licenses/$pkgname
}

