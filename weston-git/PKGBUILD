pkgname=weston-git
pkgver=20120104
pkgrel=1
pkgdesc="A modern display server."
arch=(i686 x86_64)
url="http://wayland.freedesktop.org"
license=('LGPLv2')
depends=('libxkbcommon-git' 'wayland-git' 'mesa-full-wayland' 'cairo-gl-git' 'poppler-glib')
options=(!makeflags)

_gitroot="git://anongit.freedesktop.org/wayland/weston"
_gitname="weston"

build() {
	msg "Connecting to git.freedesktop.org GIT server...."

	if [ -d "$srcdir/$_gitname" ] ; then
		cd $_gitname && git pull origin
		msg "The local files are updated."
	else
		git clone $_gitroot
	fi

	msg "GIT checkout done or server timeout"
	msg "Starting make..."

	rm -rf "${srcdir}/$_gitname-build"
	cp -r "${srcdir}/$_gitname" "${srcdir}/$_gitname-build"
	cd "${srcdir}/$_gitname-build"

	./autogen.sh --prefix=/usr
	make
}

package() {
	cd ${srcdir}/$_gitname-build
	make DESTDIR="${pkgdir}" install
	install -m 755 -D compositor/wayland-compositor "${pkgdir}/usr/bin/wayland-compositor"
	install -m 755 -D clients/dnd "${pkgdir}/usr/bin/wayland-dnd"
	install -m 755 -D clients/eventdemo "${pkgdir}/usr/bin/wayland-eventdemo"
	install -m 755 -D clients/flower "${pkgdir}/usr/bin/wayland-flower"
	install -m 755 -D clients/gears "${pkgdir}/usr/bin/wayland-gears"
	install -m 755 -D clients/image "${pkgdir}/usr/bin/wayland-image"
	install -m 755 -D clients/resizor "${pkgdir}/usr/bin/wayland-resizor"
	install -m 755 -D clients/screenshot "${pkgdir}/usr/bin/wayland-screnshot"
	install -m 755 -D clients/simple-egl "${pkgdir}/usr/bin/wayland-simple-egl"
	install -m 755 -D clients/simple-shm "${pkgdir}/usr/bin/wayland-simple-shm"
	install -m 755 -D clients/smoke "${pkgdir}/usr/bin/wayland-smoke"
	install -m 755 -D clients/terminal "${pkgdir}/usr/bin/wayland-terminal"
	install -m 755 -D clients/view "${pkgdir}/usr/bin/wayland-view"
	
}
