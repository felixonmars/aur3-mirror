pkgname=python-rabbyt
pkgver=0.8.3
pkgrel=2
pkgdesc="A sprite library for python targeting game development"
arch=('i686' 'x86_64')
url="http://matthewmarshall.org/projects/rabbyt/"
license=('LGPL')
depends=('python2' 'libgl' 'mesa')
makedepends=('pyrex' 'setuptools')
source=(http://cheeseshop.python.org/packages/source/R/Rabbyt/Rabbyt-$pkgver.zip)
md5sums=('bb603a5cb02f3a8bb2e674f60e62de2c')

build() {
  cd Rabbyt-$pkgver
  python2 setup.py build 
  python2 setup.py install --root "$pkgdir" 
}
