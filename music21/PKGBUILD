pkgname=music21
pkgver=0.3.1a6
pkgrel=1 
pkgdesc="Toolkit for Computer-Aided Musicology and Musical Analysis."
url="http://code.google.com/music21/"
arch=(any)
license=('GPL')
depends=('python2')
makedepends=()
conflicts=('music21')
provides=('music21')
replaces=()
backup=()
options=()
install=
source=("http://music21.googlecode.com/files/$pkgname-$pkgver.tar.gz")
sha1sums=('b70e990c210bb97cb8203bb5cb362e6f7077ca32')

build() {
  cd $srcdir/$pkgname-$pkgver
  python2 setup.py install --root=$pkgdir/ --optimize=1
}