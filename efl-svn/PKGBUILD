# Maintainer: Scimmia <scimmia22@outlook.com>

pkgname=efl-svn
pkgver=77899
pkgrel=1
pkgdesc="Enlightenment Foundation Libraries including Eo"
arch=('i686' 'x86_64')
groups=('e17-libs-svn' 'e17-svn')
url="http://www.enlightenment.org"
license=('BSD')
depends=('libjpeg>=7' 'openssl' 'glibc')
makedepends=('subversion')
conflicts=('eet-svn' 'eet' 'eina-svn' 'eina')
provides=('eet-svn' 'eet' 'eina-svn' 'eina')
options=('!libtool' '!emptydirs')
md5sums=()
         
_svntrunk="http://svn.enlightenment.org/svn/e/trunk/efl"
_svnmod="efl"

build() {
   cd "$srcdir"

msg "Connecting to $_svntrunk SVN server...."
  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build

  ./autogen.sh --prefix=/usr \
#	--with-profile=release \
	--libexecdir=/usr/lib
  make
}

package() {
  cd "$srcdir/$_svnmod-build"
  make DESTDIR="$pkgdir" install

# install license files
  install -Dm644 "$srcdir/$_svnmod-build/COPYING" \
        "$pkgdir/usr/share/licenses/$pkgname/COPYING"

  rm -r "$srcdir/$_svnmod-build"

}
