post_install () {
  echo "You might have to add '/usr/local/lib' to your /etc/ld.so.conf and run 'ldconfig' (as root) in order to get it working (try /usr/local/bin/simple)"
}

post_remove () {
  echo "You might want to remove '/usr/local/lib' from your /etc/ld.so.conf and run 'ldconfig' (as root) if you only added it to get libsoy working (be sure you know what you do)"
}
