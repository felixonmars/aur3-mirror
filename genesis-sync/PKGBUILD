pkgname=genesis-sync
pkgver=0.6.2
pkgrel=1
pkgdesc="A graphical frontend for SyncEvolution written in PyGTK."
arch=('any')
url="https://launchpad.net/genesis-sync"
license=('GPL')
depends=("syncevolution>=1.0" 'hicolor-icon-theme')
makedepends=('python-distutils-extra')
source=(http://code.launchpad.net/$pkgname/0.6/$pkgver/+download/${pkgname}_$pkgver.tar.gz)
md5sums=('7ef6237aafe3bf769318c27555f48e4f')

build() {
  cd "${srcdir}/${pkgname}"
  python2 setup.py install --root=$pkgdir
}
