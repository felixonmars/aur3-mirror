# Contributor: Jiri Prochazka <ojirio[at] gmail[dot]com>

pkgname=qtractor-vst-svn
pkgver=r1711
pkgrel=1
pkgdesc="Audio/MIDI multitrack sequencer"
arch=('i686' 'x86_64')
url="http://qtractor.sourceforge.net"
license=('GPL2')
depends=('qt' 'jack' 'slv2' 'libmad' 'libsamplerate' 'rubberband' 'liblo')
makedepends=('subversion' 'ladspa' 'dssi' 'steinberg-vst')
conflicts=(qtractor)
_svntrunk=(https://qtractor.svn.sourceforge.net/svnroot/qtractor/trunk)

build() {
  if [ -d $srcdir/.svn ]; then
      svn up $srcdir
  else
      svn co $_svntrunk $srcdir
  fi

  make -f Makefile.svn
  ./configure --prefix=/usr --with-vst=/usr/include/vst
  make || return 1
  make DESTDIR="$pkgdir" install
}
