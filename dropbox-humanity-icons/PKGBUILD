# Maintainer: Limao Luo <luolimao at gmail dot com>

pkgname=dropbox-humanity-icons
pkgver=1.1
pkgrel=3
pkgdesc="Notification icons for Dropbox matching the Humanity theme."
url="http://forums.dropbox.com/topic.php?id=7818"
arch=('any')
license=('CCPL:by-3.0')
depends=('dropbox' 'hicolor-icon-theme') 
conflicts=('dropbox-light-panel-icons' 'dropbox-dark-panel-icons' 'dropbox-humanity-dark-icons')
source=(dropbox-humanity-notification-icons.tar.gz::http://dl.dropbox.com/u/62148/Misc/Dropbox%20Humanity%20Notification%20Icons.tar.gz)
sha256sums=('779fe2c6c3f4e426cd407c406eab844ef7cab0808e4db48b0729e94861fbb6ff')
_destdir="${pkgdir}/usr/share/icons/hicolor/16x16/status"
install=icons.INSTALL

build() {
    cd "$srcdir/Dropbox Humanity Notification Icons/Humanity/icons"
    for i in busy2.png busy.png logo.png x.png; do mv "$i" "dropboxstatus-$i"; done
    install -D * $_destdir
}
