# Maintainer: stlarch  stlarchie@gmail.com

pkgname=terminusmod
pkgver=1
pkgrel=4
pkgdesc="A modified version of terminus font, size 12 and 14. Added bold to the 12, the 14 is smaller, both have status icons"
arch=('any')
url="http://sourceforge.net/projects/terminusmod"
license=('GPL')
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
install=terminusmod.install
source=("http://sourceforge.net/projects/terminusmod/files/terminusmod-1.4.tar.gz")

build () {
  cd "$srcdir/terminusmod-1.4"

  install -d "$pkgdir/usr/share/fonts/local"

  install -m644 * "$pkgdir/usr/share/fonts/local/"
}
md5sums=('8da1512bccd012d33b3ebf78959ce58c')
