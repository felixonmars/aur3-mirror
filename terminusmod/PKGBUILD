# Maintainer: stlarch  stlarchie@gmail.com

pkgname=terminusmod
pkgver=1.6
pkgrel=6
pkgdesc="A modified version of terminus font, 12 and 14. Added bold to the 12, the 14 is smaller, both have status icons"
arch=('any')
url="http://sourceforge.net/projects/terminusmod"
license=('GPL')
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
install=terminusmod.install
source=("http://sourceforge.net/projects/terminusmod/files/$pkgname-$pkgver.tar.gz")

build () {
  cd "$srcdir/$pkgname-$pkgver"

  install -d "$pkgdir/usr/share/fonts/local"

  install -m644 * "$pkgdir/usr/share/fonts/local/"
}

md5sums=('1cb1f6fcbf6be705a804040bed05b542')
