_svc="syslog-ng"
_rlvl="default"

post_install() {
	_cmd="rc-update add ${_svc} ${_rlvl}"
	echo " ==> run '${_cmd}'"
	
	echo "Make sure you have set 'unix-dgram("/dev/log")'"
	echo "in /etc/syslog-ng/syslog-ng.conf!"
}
post_upgrade() {
	post_install "$1"
}

post_remove() {
	_cmd="rc-update del ${_svc} ${_rlvl}"
	echo " ==> run '${_cmd}'"
}
