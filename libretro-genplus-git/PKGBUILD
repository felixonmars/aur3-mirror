# Maintainer: almostalive <almostalive2003 at gmail dot com>

pkgname=libretro-genplus-git
pkgver=20120416
pkgrel=1
pkgdesc="libretro implementation of genplus gx."
arch=('i686' 'x86_64')
url="https://github.com/twinaphex/genesis-next"
license=('custom')
makedepends=('git')
conflicts=('libretro-super-git')

_gitroot="git://github.com/twinaphex/genesis-next.git"
_gitname="genesis-next"

build() 
{
   cd $srcdir

   msg "Cloning genesis-next from GIT"
   if [ -d $_gitname ]; then
      cd $_gitname
      git pull || return 1
   else
      git clone $_gitroot $_gitname || return 1
      cd $_gitname
   fi

   make -f Makefile.libretro
}

package()
{
   mkdir -p $pkgdir/usr/lib/libretro
   install -m755 $srcdir/$_gitname/libretro.so $pkgdir/usr/lib/libretro/libretro-genplus.so
}

