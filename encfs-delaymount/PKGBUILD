
pkgname=encfs-delaymount
pkgver=1.7.4
pkgrel=8
pkgdesc='EncFS with "--delaymount" option and unmounting on SIGUSR1 signal support.'
arch=('i686' 'x86_64')
url='http://code.google.com/p/encfs/issues/detail?id=122'
license=('GPL')
depends=('rlog' 'openssl' 'fuse' 'boost-libs')
makedepends=('boost')
conflicts=('encfs')
options=('!libtool')
source=("http://encfs.googlecode.com/files/encfs-${pkgver}.tgz" "delaymount.patch" "unmount_on_sigusr1.patch")
md5sums=('ac90cc10b2e9fc7e72765de88321d617' '1e01e44865f53d3be9a423bce1b756c9' '3c5cd7613dbba2e40e219227310c4f75')


build(){
  cd encfs-${pkgver}
  msg "Applying delaymount.patch"
  patch -Np1 -i ../../delaymount.patch
  msg "Applying unmount_on_sigusr1.patch"
  patch -Np1 -i ../../unmount_on_sigusr1.patch

  ./configure \
    --prefix=/usr

  make
}

package() {
  cd encfs-${pkgver}

  make DESTDIR=${pkgdir} install
}
