# Maintainer: Holden Cox <segrived@gmail.com>
pkgname=ftjerm
pkgver=0.12.1
pkgrel=2
pkgdesc="Quake-like terminal emulator, a fork of stjerm"
arch=('i686' 'x86_64')
url=('https://github.com/segrived/ftjerm')
license=('GPLv2')
depends=('vte>=0.16' 'gtk2>=2.10')
makedepends=('autoconf' 'pkg-config')
source=("https://github.com/downloads/segrived/ftjerm/$pkgname-$pkgver.tar.gz" "defaults")
md5sums=('26d54130d0d780f4d5cc82a2bb8f9176'
         '22834684bf2ed6bc9c66e2ba996a01f9')

build() {
    cd "$srcdir/$pkgname"
    make
}

package() {
    cd "$srcdir/$pkgname"
    make DESTDIR="$pkgdir/" install
    install -D -m644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
    cd "$srcdir"
    install -D -m644 defaults "${pkgdir}/usr/share/${pkgname}/defaults"
}