# Maintainer: Philipp Überbacher <murks at lavabit dot com>
pkgname=zita-resampler
pkgver=0.1.1
pkgrel=2 
pkgdesc="A C++ library for resampling audio signals. \
It is designed to be used within a real-time processing context, \
to be fast and high-quality."
url="http://kokkinizita.linuxaudio.org/linuxaudio/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('gcc-libs')
source=(http://kokkinizita.linuxaudio.org/linuxaudio/downloads/${pkgname}-${pkgver}.tar.bz2)
md5sums=('cbf0da8b7ace593082a5f01eed828109')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}/libs"
  
  sed -i "s|/usr/bin/install|/bin/install|" Makefile
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}/libs"

  make PREFIX="${pkgdir}/usr" LIBDIR=lib install
}
