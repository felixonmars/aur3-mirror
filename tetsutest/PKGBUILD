# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>

pkgname=tetsutest
pkgver=1.0.4
pkgrel=1
pkgdesc="An app for checking Xbox 360 ISOs"
arch=('i686' 'x86_64')
url="http://abgx360.net/"
license=('unknown')
depends=('curl' 'zlib')
source=(http://abgx360.x-scene.com/abgx360-$pkgver.tar.gz)
sha256sums=('0fcd53711970f6497fd84e92daa90d78a14639287a2e3b680ecf1d1619e675d6')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="${pkgdir}/" install || return 1
}
