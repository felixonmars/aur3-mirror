# Maintainer: archtux <antonio.arias99999@gmail.com>

pkgname=bino
pkgver=1.1.1
pkgrel=1
pkgdesc="Stereoscopic 3D video player with multi-display support"
arch=('i686' 'x86_64')
url="http://www.nongnu.org/bino/"
license=('GPL3')
depends=('ffmpeg' 'freealut' 'freeglut' 'glew' 'libass' 'qt')
makedepends=('pkg-config')
source=(http://download.savannah.gnu.org/releases/$pkgname/$pkgname-$pkgver.tar.xz)
md5sums=('97ba8219797ad4e40385147c59cb89b8')

build() {
  cd $srcdir/$pkgname-$pkgver

  autoreconf -i
  ./configure --prefix=/usr
  make
  make DESTDIR=$pkgdir install

  # Desktop icon
  install -Dm644 ./src/logo/bino_logo_small_64x64.png $pkgdir/usr/share/pixmaps/bino.png
  install -Dm644 $startdir/bino.desktop $pkgdir/usr/share/applications/bino.desktop
}