# Maintainer: Massimiliano Torromeo <massimiliano.torromeo@gmail.com>

pkgname=python-docopt
pkgver=0.1
pkgrel=1
pkgdesc="Pythonic option parser, that will make you smile"
arch=(any)
url="https://github.com/halst/docopt"
license=('MIT')
depends=('python')
makedepends=('python-distribute')
source=("http://pypi.python.org/packages/source/d/docopt/docopt-0.1.tar.gz" LICENSE-MIT)

build() {
	cd "$srcdir/${pkgname/python-}-$pkgver"
	python setup.py install --root="$pkgdir"
	install -Dm0644 "$srcdir/LICENSE-MIT" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

md5sums=('2068ff93c8cb37d02830c4a8de873b7a'
         '09b77fb74986791a3d4a0e746a37d88f')
