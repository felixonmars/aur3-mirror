# Maintainer: hbdee <hbdee.arch@gmail.com>

pkgname=kdeplasma-applets-steam-time
_pname=steamtime
pkgver=1.0
pkgrel=1
pkgdesc="This plasmoid provides a clock via steampunk interface."
arch=(any)
url="http://kde-apps.org/content/show.php/Steam+Time?content=159747"
license=('GPL')
depends=('kdebase-workspace')
makedepends=('unzip')
source=("http://kde-apps.org/CONTENT/content-files/159747-steamtime.plasmoid")
md5sums=('bdc835cee79270652f169c89b31712e8')

prepare() {
  unzip -o -q "$srcdir/159747-${_pname}.plasmoid" -d "$srcdir/${_pname}"
}

package() {
  sed -i 's;icon.png;steamtime.png;g' $srcdir/${_pname}/metadata.desktop
  install -Dm644 $srcdir/${_pname}/metadata.desktop ${pkgdir}/usr/share/kde4/services/${_pname}.desktop
  install -Dm644 $srcdir/${_pname}/icon.png $pkgdir/usr/share/pixmaps/steamtime.png
  mkdir -p ${pkgdir}/usr/share/apps/plasma/plasmoids/${_pname}/contents/{back,clock,kolba,porshen}
  install -Dm644 $srcdir/${_pname}/metadata.desktop ${pkgdir}/usr/share/apps/plasma/plasmoids/${_pname}/metadata.desktop
  install -Dm644 $srcdir/${_pname}/contents/main.qml ${pkgdir}/usr/share/apps/plasma/plasmoids/${_pname}/contents/main.qml
  install -Dm644 $srcdir/${_pname}/contents/back/* ${pkgdir}/usr/share/apps/plasma/plasmoids/${_pname}/contents/back/
  install -Dm644 $srcdir/${_pname}/contents/clock/* ${pkgdir}/usr/share/apps/plasma/plasmoids/${_pname}/contents/clock/
  install -Dm644 $srcdir/${_pname}/contents/kolba/* ${pkgdir}/usr/share/apps/plasma/plasmoids/${_pname}/contents/kolba/
  install -Dm644 $srcdir/${_pname}/contents/porshen/* ${pkgdir}/usr/share/apps/plasma/plasmoids/${_pname}/contents/porshen/
}