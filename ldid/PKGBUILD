# Maintainer: yetist <yetist@gmail.com>
pkgname=ldid
pkgver=1.0.613
pkgrel=1
pkgdesc="ldid is codesign tool for ios toolchain under linux"
arch=('i686' 'x86_64')
url="http://code.google.com/p/ios-toolchain-based-on-clang-for-linux"
license=('GPL')
source=("http://ios-toolchain-based-on-clang-for-linux.googlecode.com/files/$pkgname-$pkgver.tar.bz2")
sha256sums=('506ca221712ca57f49f80b8c633d483388c27ce3b27de4c9bf5d4b44e4503eca')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
sha256sums=('2b6fe74ca2b1a44ae058f3ff09027a583ddd7160eaab78b0221684a3eb344b9f')
