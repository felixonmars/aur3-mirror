# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>

pkgname=librep-git
pkgver=20130329
pkgrel=1
pkgdesc='A lisp system for sawfish - git version.'
arch=('i686' 'x86_64')
url='http://sawfish.wikia.com'
license=('GPL')
depends=('gmp' 'gdbm')
makedepends=('git')
provides=('librep=0.92.1')
conflicts=('librep')
options=('!libtool')
install=librep.install

_gitroot='git://github.com/SawfishWM/librep.git'
_gitname='librep'

build() {
  # msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    (cd $_gitname && git pull origin)
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  [ -d $_gitname-build ] && rm -rf $_gitname-build
  git clone $_gitname $_gitname-build
  cd $_gitname-build
  ./autogen.sh 
  ./configure --disable-static \
              --prefix=/usr \
              --libexecdir=/usr/lib/$pkgname  \
              --with-readline \
	      --without-ffi 
  sed -i 's#makeinfo --no-split#makeinfo --force --no-split#' man/Makefile
  make 
}
package() {
  cd $_gitname-build
  # create some directories or make install fails
  install -d $pkgdir/usr/{share/aclocal,lib/pkgconfig}
  make DESTDIR=$pkgdir install
} 
