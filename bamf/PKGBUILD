# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=bamf
pkgver=0.2.78
pkgrel=1
pkgdesc="Removes the headache of applications matching into a simple DBus daemon and c wrapper library"
arch=('i686' 'x86_64')
url="https://launchpad.net/bamf"
license=('GPL')
depends=('glib2-ubuntu' 'dbus-glib>=0.76' 'libwnck' 'libgtop')
options=(!libtool)
source=(http://launchpad.net/$pkgname/0.2/$pkgver/+download/$pkgname-$pkgver.tar.gz)
md5sums=('f7071575c492d5eee5e6ca713db233fd')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --libexecdir=/usr/lib \
              --disable-static
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
