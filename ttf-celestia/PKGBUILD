# Maintainer: StarGater93 <stargater93@gmail.com>
# This isn't the same as the old release of this font so the package version is screwed up.
pkgname=ttf-celestia
_realname=CelestiaMediumRedux
pkgver=1.51
_realver=1.5
pkgrel=4
depends=('fontconfig' 'xorg-font-utils')
pkgdesc="A font based off of the one used in My Little Pony : Friendship is Magic (MLP:FIM), originally created by Purple Tinker - Redux by Mattyhex"
arch=('any')
url="http://www.mattyhex.net/newfont/"
license=('custom')
source=(http://www.mattyhex.net/CMR/media/fonts/${_realname}${_realver}.ttf)
md5sums=('df0d10bd3e2d23014dc9ea1cc92029c2')
install=$pkgname.install

build()
{
  mkdir -p $pkgdir/usr/share/fonts/TTF
  cp $srcdir/*.ttf $pkgdir/usr/share/fonts/TTF
}
