# Contributor: Ermak <ermak@email.it>
pkgname=openvas-plugins
pkgver=1.0.7
pkgrel=1
pkgdesc="The OpenVAS plugins"
arch=('i686' 'x86_64')
url="http://www.openvas.org/"
license=('GPL')
depends=('openvas-libraries' 'openvas-libnasl' 'openvas-server')
source=(http://wald.intevation.org/frs/download.php/588/$pkgname-$pkgver.tar.gz)
md5sums=('b290e34df6198b21b4d6601c3ae80030') #generate with 'makepkg -g'

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install

}

