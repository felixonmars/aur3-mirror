pkgname=ogmrip-oggz
pkgver=0.2
pkgrel=2
pkgdesc='ogmrip-oggz is a plugin for OGMRip which adds support for the OGG container'
arch=('i686' 'x86_64')
url='http://ogmrip.sourceforge.net/en/plugins.html'
license=('LGPL')
groups=('ogmrip')
depends=('ogmrip>=0.13' 'liboggz')
source=("http://downloads.sourceforge.net/sourceforge/ogmrip/${pkgname}-${pkgver}.tar.gz"
"http://downloads.sourceforge.net/project/ogmrip/${pkgname}/${pkgver}/README")
build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
  install -Dm0644 README ${pkgdir}/usr/share/ogmrip-oggz/README
}

# vim:set ts=2 sw=2 et ft=sh:

md5sums=('c24591dfe24e2470c2a6a57e4be1c947'
         '24ac59562b0a480c0d88ec6e86095b91')
