# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=unity-lens-music
pkgver=0.1.2
pkgrel=1
pkgdesc="Music, in the dash"
arch=('i686' 'x86_64')
url="https://launchpad.net/unity-place-music"
license=('GPL')
depends=('sqlite3>=3.7.7' 'libunity>=3.6.3' 'banshee')
makedepends=('vala>=0.11.3' 'intltool>=0.40.0')
source=(http://launchpad.net/$pkgname/trunk/1.0.2/+download/$pkgname-$pkgver.tar.gz)
md5sums=('37ee8120dd527a3046fba1e06fa866e7')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --libexecdir=/usr/lib/$pkgname \
              --disable-static
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
