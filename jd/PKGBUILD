# Contributor: noonov <noonov@gmail.com>

pkgname=jd
pkgver=2.8.2
_date=110808
pkgrel=3
pkgdesc="A 2channel browser written in C++ using gtkmm"
arch=('i686' 'x86_64')
url="http://jd4linux.sourceforge.jp/"
license=('GPL2')
depends=('libsm' 'libgcrypt' 'gtkmm')
conflicts=('jd-svn')
source=(http://dl.sourceforge.jp/jd4linux/52863/${pkgname}-${pkgver}-${_date}.tgz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}-${_date}

  autoreconf -i
  ./configure --prefix=/usr
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}-${_date}

  make DESTDIR=${pkgdir} install
}

md5sums=('adf2fcaa9ce3157bbaebca8e105ff8d9')
