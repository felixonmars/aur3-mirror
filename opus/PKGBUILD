# Contributor: pumbur

pkgname=opus
pkgver=1.0.1_rc2
pkgrel=2
pkgdesc="codec designed for interactive speech and audio transmission over the Internet"
arch=('i686' 'x86_64')
url="http://www.opus-codec.org/"
license=('BSD')
source=("http://downloads.xiph.org/releases/${pkgname}/${pkgname}-${pkgver//_/-}.tar.gz")
options=('!libtool')
md5sums=('3fb85c760828aa5b189b261b051a0c66')

build(){
  cd ${srcdir}/${pkgname}-${pkgver//_/-}
  ./configure --prefix=/usr
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver//_/-}
  make DESTDIR=${pkgdir} install
}
