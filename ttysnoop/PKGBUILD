pkgname=ttysnoop
pkgver=0.12d.k26
pkgrel=2
pkgdesc="a program that allows an administrator to snoop on login terminals"
arch=(i686 x86_64)
license=('unknown')
url="http://sysd.org/stas/node/35"
backup=('etc/snooptab')
depends=('glibc')
install=('ttysnoop.install')
source=(http://sysd.org/stas/files/active/0/$pkgname-$pkgver.tar.gz ttysnoop.install)
md5sums=('a5bb3c5eb145d752aa3b1ec7b2775544' '079d2b536a6fa432e9a14571cf552697')

build() {
  root="$startdir/pkg"
  cd $startdir/src/$pkgname-$pkgver
  make
  ( mkdir -p $root/etc $root/sbin $root/usr/man/man8 && 
    install -m 755 -s ttysnoop $root/sbin/ &&
    install -m 755 -s ttysnoops $root/sbin/ &&
    install -m 644 ttysnoop.8 $root/usr/man/man8/ &&
    install -m 644 snooptab.dist $root/etc/snooptab )
}
