# Maintainer: Filip Brcic <brcha@gna.org>

pkgname=psp-cmake
pkgver=1
pkgrel=1
arch=(any)
pkgdesc="CMake wrapper for PSP (psp)"
groups=('psp')
depends=('cmake' 'psp-gcc')
license=("GPL")
url="https://github.com/aseprite/aseprite"
source=("psp-cmake"
        "toolchain-psp.cmake")
md5sums=('SKIP'
         'SKIP')

package() {
  cd "$pkgdir"

  install -d "${pkgdir}"/usr/bin
  install -m 755 "${srcdir}"/psp-cmake "${pkgdir}"/usr/bin/

  install -d "${pkgdir}"/usr/share/mingw
  install -m 644 "${srcdir}"/toolchain-psp.cmake "${pkgdir}"/usr/share/mingw/
}
