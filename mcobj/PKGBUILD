# Maintainer: Andrew Black <agwblack at gmail dot com>
pkgname=mcobj
pkgver=0.12
pkgrel=2
pkgdesc="exports minecraft worlds to .obj or .prt -- premade binaries"
arch=(i686 x86_64)
url="https://github.com/quag/mcobj/"
license=('BSD')
depends=()
makedepends=(p7zip wget)
optdepends=('minecraft')
conflicts=(mcobj-git)
options=(!strip)
source=(mcobj.1)
md5sums=('6dda728366d8fc4637541dedcdee96db')

_gitroot="https://github.com/downloads/quag/mcobj/mcobj-0.12-linux-x86.7z"
_gitname="mcobj"

build() {

	cd "$srcdir"
	wget "$_gitroot"
	7z e mcobj-0.12-linux-x86.7z
	
	mkdir -p "$pkgdir/usr/share/mcobj"	
	mkdir -p "$pkgdir/usr/bin"

	install -Dm0755 mcobj "$pkgdir/usr/share/mcobj/" 
	install -Dm0644 blocks.json "$pkgdir/usr/share/mcobj/"

	cd ../
	install -Dm0755 mcobj.1 "$pkgdir/usr/bin/mcobj"
	
}





