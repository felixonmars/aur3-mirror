# Maintainer: Micha≈Ç Walczak <michalwalczak at michalwalczak dot eu>

pkgname=stodo
pkgver=1.0
pkgrel=1
pkgdesc="a simple CLI todo application"
arch=('i686' 'x86_64')
url="http://github.com/magikmw/stodo"
license=('GPL3+')
depends=('python')
source=(http://michalwalczak.eu/stuff/stodo/stodo-$pkgver.tar.gz)
md5sums=('d6ea29fcf20ca42c92d80aa6789a34ea')

package() {
  _docs_dir="$pkgdir/usr/share/$pkgname"
  _bin_dir="$pkgdir/usr/bin"
  mkdir -p $_docs_dir
  mkdir -p $_bin_dir

  cd "$srcdir"

  install -D -m 755 stodo "$_bin_dir"
  install -D -m 644 README "$_docs_dir"
  install -D -m 644 LICENSE "$_docs_dir"
}
