# Maintainer: Moritz Hilscher <m0r13@mapcrafter.org>

pkgname=mapcrafter-git
pkgver=v.0.5.1.r124.g80523db
pkgrel=1
pkgdesc="A Fast Minecraft Map Renderer"
arch=("i686" "x86_64")
license=("GPL")
url="http://mapcrafter.org"
makedepends=("cmake")
depends=("boost-libs" "libpng" "curl" "python")
source=("$pkgname"::"git://github.com/m0r13/mapcrafter.git")
md5sums=("SKIP")

pkgver() {
    cd "$srcdir/$pkgname"
    git describe --long | sed -E 's/([^-]*-g)/r\1/;s/-/./g'    
}

build() {
    cd "$srcdir/$pkgname"
    cmake -DCMAKE_INSTALL_PREFIX="$pkgdir/usr" .
    make
}

package() {
    cd "$srcdir/$pkgname"
    VERBOSE=1 make install

    curl --output /tmp/1.7.2.jar https://s3.amazonaws.com/Minecraft.Download/versions/1.7.2/1.7.2.jar
    python "$srcdir/$pkgname/src/tools/mapcrafter_textures.py" -f /tmp/1.7.2.jar "$pkgdir/usr/share/mapcrafter/textures"
}
