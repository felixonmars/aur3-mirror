pkgname=python2-smbpasswd
pkgver=1.0.1
pkgrel=2
pkgdesc="SMB Password Hash Generator"
arch=(i686 x86_64 arm)
url="http://barryp.org/software/py-smbpasswd/"
license=('GPL')
depends=('python2')
source=(http://barryp.org/static/software/download/py-smbpasswd/1.0.1/py-smbpasswd-$pkgver.tar.gz)
md5sums=('0eab2c29588e32e77ce6e5d2faea7874')

build() {
  cd $startdir/src/py-smbpasswd-$pkgver
  python2 ./setup.py install --root=$startdir/pkg
}
