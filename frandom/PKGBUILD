# Contributor: Jeffrey Grembecki jeff _a*t mcmedia _d.ot c~om d-ot _au

pkgname=frandom
pkgver=1.0
pkgrel=1
pkgdesc="A very fast random number generator kernel module."
arch=(i686 x86_64)
url="http://frandom.sourceforge.net/"
license="GPL"
depends=('kernel26' 'kernel-headers')
install=frandom.install
source=(http://prdownloads.sourceforge.net/frandom/frandom-1.0.tar.gz frandom.rc)
md5sums=('e3f65753cdfe12209a522634b801305d' '06dad9506987a64b334207b63164a48e')

build() {
  cd $startdir/src/$pkgname-$pkgver
  make || return 1 
  install -D $pkgname.ko $startdir/pkg/lib/modules/$(uname -r)/kernel/drivers/misc/$pkgname.ko
  install -m 755 -D ../frandom.rc $startdir/pkg/etc/rc.d/frandom
}

