# Contributor: William Rea <sillywilly@gmail.com>
# Contributor: <stefanh-husmann@t-online.de>
# Maintainer: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-hpricot
pkgver=0.8.4
pkgrel=1
pkgdesc="A swift, liberal HTML parser with a fantastic library."
arch=(any)
url="http://github.com/hpricot/hpricot"
license=('GPL')
depends=('ruby')
makedepends=(rubygems)
source=(http://gems.rubyforge.org/gems/hpricot-$pkgver.gem)
noextract=(hpricot-$pkgver.gem)
md5sums=('24c342baa2426bc6c4cd01877219bab0')

build() {
  cd $srcdir
  # _gemdir is defined inside build() because if ruby[gems] is not installed on the system
  # makepkg will exit with an error when sourcing the PKGBUILD
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" hpricot-$pkgver.gem
}
