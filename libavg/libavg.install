post_install() {
    echo ">>> For multitouch support please refer to the documentation."
    echo ">>> https://www.libavg.de/site/projects/libavg/wiki/EnvironmentVariables#Multitouch-Setup"
    echo ">>> Configuration files have been installed under /etc/profile.d/libavg.sh or
    libavg.csh"
}

post_upgrade() {
  post_install "$1"
}

