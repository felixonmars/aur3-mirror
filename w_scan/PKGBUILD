pkgname=w_scan
pkgver=20111203
pkgrel=1
arch=(i686 x86_64)
pkgdesc="Scans for DVB channels without the need for initial tuning data"
url="http://wirbel.htpc-forum.de"
license="GPL"
depends=('glibc')
backup=()
source=(http://wirbel.htpc-forum.de/w_scan/$pkgname-$pkgver.tar.bz2)
md5sums=('8c6014793b5f00c152b44a18bab97ed1')

build() {
    cd $startdir/src/$pkgname-$pkgver

    mkdir -p $pkgdir/usr/bin
    mkdir -p $pkgdir/usr/share/w_scan

    ./configure --prefix=$pkgdir/usr || return 1

    make || return 1

    make install || return 1

    install -m 644 pci.ids $startdir/pkg/usr/share/w_scan
    install -m 644 pci.classes $startdir/pkg/usr/share/w_scan
    install -m 644 usb.ids $startdir/pkg/usr/share/w_scan
    install -m 644 usb.classes $startdir/pkg/usr/share/w_scan
    cp README $startdir/pkg/usr/share/w_scan
}

