# Maintainer: Jochen Schalanda <jochen+aur AT schalanda.aname>
pkgname=puppet-lint
pkgver=0.1.13
pkgrel=2
pkgdesc='Checks your Puppet manifests against the Puppetlabs style guide and alerts you to any discrepancies.'
arch=(any)
url='https://github.com/rodjek/puppet-lint/'
license=("MIT")
depends=('ruby' 'puppet')
source=(http://gems.rubyforge.org/gems/${pkgname}-${pkgver}.gem issue-98.patch)
noextract=(${pkgver}-${pkgver}.gem)

build() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --no-user-install --ignore-dependencies \
    -i "$pkgdir$_gemdir" ${pkgname}-$pkgver.gem

  cd $pkgdir
  patch -p0 -i ../issue-98.patch
}
md5sums=('307f0fdae79d19393447557622c3df00'
         '1eb09936a908c09277bd54506681005c')
