# Maintainer: Erik Johnson <palehose at gmail dot com>
pkgname=mikogo
pkgver=4.3.110804
pkgrel=2
pkgdesc="Mikogo screen-sharing server"
url="http://www.mikogo.com"
arch=('i686' 'x86_64')
license=('unknown')
if [ "$CARCH" = "x86_64" ]; then
	depends=('lib32-glibc' 'lib32-gcc-libs' 'lib32-libxtst' 'lib32-glib2' 'lib32-pcre' 'lib32-dbus-core' 'lib32-libxrender')
else
	depends=('glibc' 'gcc-libs' 'libxtst' 'glib2' 'pcre' 'dbus-core' 'libxrender')
fi
options=(!strip)
source=(http://download.mikogo4.com/mikogo.tar.gz)
md5sums=('36199ca7de2419acfed953d8054aac82')

build() {
	mkdir -p -m 0755 ${pkgdir}/usr/bin
	install -m 0755 ${srcdir}/${pkgname}${pkgver}/mikogo ${pkgdir}/usr/bin/
	install -m 0755 ${srcdir}/${pkgname}${pkgver}/sessionplayer ${pkgdir}/usr/bin/
}
