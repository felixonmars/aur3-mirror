post_install() {
cat << EOF

==> Copy /usr/lib/systemd/system/dropbox.service to /etc/systemd/system and set your user name.

==> To start dropbox: systemctl start dropbox.service

==> To enable it on boot: systemctl enable dropbox.service
EOF
}
post_upgrade() {
	post_install
}
pre_remove() {
    systemctl stop dropbox.service
}
