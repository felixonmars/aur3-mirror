# Custom properties used in PKGBUILD and auto-package creation.
_filename_exp=zk-v[#.#.#.#].sdz
_force_update=n
_category='games'

pkgname=spring-zk
pkgver=1.1.11.12
pkgrel=1
pkgdesc="A futuristic, multiplatform, open-source, Zero-K is a treat on the Spring Engine."
arch=(any)
url="http://zero-k.info/"
license=('GPL')
depends=("spring")
changelog="ChangeLog"
noextract="zk-v1.1.11.12.sdz"
source=("http://packages.springrts.com/builds/zk-v1.1.11.12.sdz")
md5sums=('b62f9505327931519ba401c3c02606c4')

package() {

    mkdir -p $pkgdir/usr/share/spring/mods

    install -Dm644 $srcdir/zk-v1.1.11.12.sdz $pkgdir/usr/share/spring/mods
}

