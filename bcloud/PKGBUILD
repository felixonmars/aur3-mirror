pkgname=bcloud
pkgver=3.4.2
pkgrel=1
pkgdesc='Baidu Pan client for Linux Desktop users'
arch=('any')
license=('GPL3')
url="https://github.com/LiuLang/bcloud"
depends=('python>=3' 'libnotify' 'python-keyring' 'python-dbus' 'python-gobject'
		'gnome-icon-theme-symbolic' 'python-lxml' 'python-cssselect' 'webkitgtk')
optdepends=('python-crypto: crypto support')
source=("https://pypi.python.org/packages/source/b/bcloud/${pkgname}-${pkgver}.tar.gz")
md5sums=('f3641a3e659d86f2649e05e5f2249e0e')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	python3 setup.py build
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	python3 setup.py install -O1 --skip-build --root="$pkgdir"
}
