# Contributor: mosra <mosra@centrum.cz>

pkgname=kdevelop-python-git
pkgver=20131122
pkgrel=1
pkgdesc="Python language plugin for KDevelop - Git build"
arch=('i686' 'x86_64')
url="http://www.kdevelop.org/"
license=('GPL')
groups=('kde' 'kdevelop-plugins')
depends=('kdevplatform-git')
optdepends=('kdevelop-git')
makedepends=('cmake' 'automoc4' 'git')
provides=('kdevelop-python')
conflicts=('kdevelop-python')
source=('asdl_c.patch')
md5sums=('71f3ddd9c9f1b270aac08901f509e5d9')

_gitroot="git://anongit.kde.org/kdev-python"
_gitname="python"

pkgver() {
    date +%Y%m%d
}

build() {
    cd "$srcdir"
    msg "Connecting to Git server..."

    if [ -d "$_gitname" ] ; then
        cd $_gitname

        # Revert asdl_c.patch
        git checkout .

        git pull origin
        msg "The local files are updated."
    else
        git clone "$_gitroot" "$_gitname"
    fi

    msg "Git checkout done."

    # Explicitly call python2
    cd "$srcdir/$_gitname"
    git apply "$srcdir/asdl_c.patch"

    msg "Starting make..."

    mkdir -p "$srcdir/build"
    cd "$srcdir/build"

    cmake ../$_gitname \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr

    make parser
    make
}

package() {
    cd "$srcdir/build"

    make DESTDIR="$pkgdir" install
}
