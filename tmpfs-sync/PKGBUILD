# Maintainer: trile7 at gmail dot com

pkgname=tmpfs-sync
pkgver=0.1
pkgrel=1
pkgdesc="Create storage for directories in tmpfs and sync them to physical disk on demand or when daemon stop"
url="http://bashscripts.googlecode.com"
arch=('i686' 'x86_64')
license=('GPL3')
depends=('bash' 'coreutils' 'rsync')
install=$pkgname.install
source=($url/files/$pkgname-$pkgver.tar.gz)

build() {
  mkdir -p "$pkgdir/usr/share/$pkgname"
  mkdir -p "$pkgdir/etc/rc.d"
  mkdir -p "$pkgdir/etc/conf.d"
  cp "$srcdir/$pkgname-$pkgver/"* "$pkgdir/usr/share/$pkgname"
  cp "$srcdir/$pkgname-$pkgver/$pkgname.rc" "$pkgdir/etc/rc.d/$pkgname"
}
md5sums=('a8f359324d83ad6688f1200e3c1f9d1b')
