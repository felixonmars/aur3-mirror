# Maintainer: Daniele Paolella <danielepaolella@email.it>
pkgname=ladish
pkgver=0.3
pkgrel=1
pkgdesc="Session management system for JACK applications"
arch=(i686 x86_64)
url="http://ladish.org"
license=('GPL2')
makedepends=(boost)
depends=(dbus e2fsprogs python2 flowcanvas laditools jackdbus)
changelog=$pkgname.changelog
source=(http://ladish.org/download/ladish-$pkgver.tar.bz2)
md5sums=('0ce4b50a6bf9a6973632cd1ef66ebd3a')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 ./waf configure --prefix=/usr
  CPATH=/usr/include/gdk-pixbuf-2.0 python2 ./waf || return 1
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 ./waf install --destdir="$pkgdir"
}

# vim:set ts=2 sw=2 et:
