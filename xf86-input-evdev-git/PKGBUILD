#Maintainer: <Eugeny Borisov flekst@gmail.com>
pkgname=xf86-input-evdev-git
pkgver=20110529
pkgrel=1
pkgdesc="X.org evdev input driver (git)"
arch=(i686 x86_64)
license=('custom')
url="http://xorg.freedesktop.org/"
depends=('glibc')
makedepends=('pkgconfig' ) # 'xorg-server-git')
options=('!libtool')
groups=('xorg' 'xorg-input-drivers')
source=()
md5sums=()
provides=('xf86-input-evdev' 'xf86-input-evdev-git')
conflicts=('xf86-input-evdev')
replaces=('xf86-input-evdev')

_gitroot="git://anongit.freedesktop.org/git/xorg/driver/xf86-input-evdev"
_gitname="xf86-input-evdev"

build() {

 msg "Connecting to git.freedesktop.org GIT server...."

  if [ -d $startdir/src/$_gitname ] ; then
  cd $_gitname && git pull origin
  msg "The local files are updated."
  else
  git clone --depth 1 $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

cd $startdir/src/$_gitname

  sh autogen.sh --prefix=/usr || return 1
  make || return 1
  make DESTDIR=${startdir}/pkg install || return 1

}
md5sums=()

