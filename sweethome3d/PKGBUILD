pkgname=sweethome3d
pkgver=4.0
pkgrel=1
pkgdesc="An interior design application"
arch=('any')
url="http://sweethome3d.com"
license=('GPL')
depends=('bash' 'java-environment')
source=($pkgname
        http://downloads.sourceforge.net/$pkgname/SweetHome3D-$pkgver.jar
        $pkgname.desktop
        $pkgname.png)
md5sums=('9d55f8bd29dfad166dfef55677c3f239'
         '655cfd9b06f21a6509b172a0f14d03f2'
         '5d5f1b5d390b71d545e09b3afc66ac38'
         '4fa1604285c1d8c474e3a914b6a4e6ce')

package() {
  cd "$srcdir"

  install -Dm644 SweetHome3D-$pkgver.jar "$pkgdir"/usr/share/java/$pkgname.jar
  install -Dm644 $pkgname.png "$pkgdir"/usr/share/pixmaps/$pkgname.png
  install -Dm644 $pkgname.desktop "$pkgdir"/usr/share/applications/$pkgname.desktop
  install -Dm755 $pkgname "$pkgdir"/usr/bin/$pkgname
}
