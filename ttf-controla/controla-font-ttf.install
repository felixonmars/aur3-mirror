post_upgrade()
{
	printf 'Updating font cache... '
	fc-cache -fs
	echo 'done!'
	_warning
}

post_remove()
{
	post_upgrade
}

post_install() {

	post_upgrade
	_warning
}

_warning() {
	cat <<'MSG'

WARNING:
	The font files have been installed into /usr/share/fonts/TTF.
	To make them available to Java applications,
	create symlinks in /opt/java/jre/lib/fonts.
MSG
}