# Contributor: Guten <ywzhaifei at gmail dot com>

pkgname=user-saber-client-daemon
pkgver=0.3
pkgrel=2
pkgdesc="a saber client user daemon"
arch=("i686" "x86_64")
url="https://github.com/GutenYe/saber"
license=("MIT")
source=("rc.saber-client")

package() {
  cd $srcdir

  install -Dm755 rc.saber-client $pkdgir/home/$USER/etc/rc.d/saber-client
  chown $USER:$USER -R $pkgdir/home/$USER
}

# vim:set ts=2 sw=2 et:
md5sums=('292ea232e340de2a6b19950e7557fe0f')
