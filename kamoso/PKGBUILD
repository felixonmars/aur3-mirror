#Contributor: said
#Contributor: Panagiotis Papadopoulos <pano_90 AT gmx DOT net>
pkgname=kamoso
pkgver=1.0.5
pkgrel=2
pkgdesc="An application to take pictures and videos out of your webcam"
arch=('i686' 'x86_64')
url="http://kde-apps.org/content/show.php/Kamoso?content=111750"
license=('GPL')
depends=('kdebase-workspace' 'vlc')
makedepends=('cmake' 'automoc4')
conflicts=('kamoso-git')
options=()
source=(http://kde-apps.org/CONTENT/content-files/111750-kamoso-$pkgver.tar.bz2 $pkgname-$pkgver.patch)
md5sums=('63fd81fca74eb105fb8c77415a69a475'
         'f49cfd84ef32b1e7e486f7667a3b8bc0')

build() {
  cd $srcdir/kamoso/src
  patch -p0 < $srcdir/$pkgname-$pkgver.patch  || return 1
  cd $srcdir/$pkgname
  cmake ../$pkgname -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix`
  make || return 1
  make DESTDIR="$pkgdir/" install
}
