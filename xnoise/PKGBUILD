# Maintainer: archtux <antonio dot arias99999 at gmail.com>

pkgname=xnoise
pkgver=0.2.0
pkgrel=1
pkgdesc="Media player with a slick GUI, great speed and lots of features."
arch=('i686' 'x86_64')
url="http://www.xnoise-media-player.com/"
license=('GPL2')
depends=('gstreamer0.10-base-plugins' 'gtk3' 'libnotify' 'libsoup' 'sqlite3' 'taglib')
makedepends=('intltool' 'pkg-config')
options=('!libtool')
source=(https://github.com/downloads/shuerhaaken/xnoise/$pkgname-$pkgver.tar.bz2)
md5sums=('d19277eee0533dc5a8a8fa4d9f1a38b8')

build() {
  cd $srcdir/$pkgname-$pkgver

  ./configure --prefix=/usr
  make
  make DESTDIR=$pkgdir install

  #Remove unneeded files
  rm -rf $pkgdir/usr/include $pkgdir/usr/share/vala
}