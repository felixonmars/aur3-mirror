# Maintainer Brad Arrington

pkgname=opensmtpd
pkgver=latest
pkgrel=3
pkgdesc="OpenSMTPD"
arch=(i686 x86_64)
url="http://www.opensmtpd.org/"
license=('BSD')
depends=('gcc')
conflicts=('sendmail' 'postfix')
source=(http://chl.be/opensmtpd/${pkgname}-${pkgver}.tar.gz)
md5sums=('43f17b6c720a4951f83de9a8eddf6c67')

build() {

  cd "$srcdir/$pkgname"

  ./bootstrap
  ./configure --prefix=/usr

  make || return 1
  make DESTDIR="$pkgdir/" install
}
