# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=python2-pyface-doc
pkgver=4.1.0
_githubtag=8e5ddfb
pkgrel=2
pkgdesc="Documentation for Pyface"
arch=('any')
url="https://github.com/enthought/pyface"
license=('BSD')
makedepends=('python2-sphinx')
conflicts=('python2-pyface-doc-git')
options=(!emptydirs)

source=("https://github.com/enthought/pyface/tarball/${pkgver}")
md5sums=('6f250acc7a301b69fabe228af1dd253a')

build() {
  cd "$srcdir/enthought-pyface-${_githubtag}"

  cd docs

  make SPHINXBUILD=sphinx-build2 html

  install -d "${pkgdir}"/usr/share/doc/enthought/pyface
  cp -r build/html/* "${pkgdir}"/usr/share/doc/enthought/pyface

  install -D "../LICENSE.txt" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

