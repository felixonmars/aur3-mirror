# Maintainer: Bernd Pruenster <bernd.pruenster[at]gmail[dot]com>
pkgname=gtk-theme-preferences-git
pkgver=20120906
pkgrel=1
pkgdesc="A tool to configure GTK theme colors. Similar to the abandoned gnome-color-chooser without all gnome dependencies. Supports Gtk3"
url="https://github.com/satya164/gtk-theme-config"
arch=('x86_64' 'i686')
license=('GPLv3')
depends=('gtk3' 'glib2')
makedepends=('gtk3' 'glib2' 'vala')

_gitroot="git://github.com/satya164"
_gitname="gtk-theme-config"

build() {
  cd "${srcdir}"
  msg2 "Connecting to GIT server..."
  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg2 "The local files are updated."
  else
    git clone "$_gitroot/$_gitname"
  fi
  msg2 "GIT checkout done or server timeout."
  
  make PREFIX=/usr
}

package() {
  cd "${srcdir}/$_gitname"
  make DESTDIR="${pkgdir}" install
}

