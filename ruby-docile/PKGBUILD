# Maintainer: Alfredo Palhares <masterkorp@masterkorp.net>

pkgname=ruby-docile
pkgver=1.1.1
pkgrel=1
pkgdesc="Docile keeps your Ruby DSLs tame and well-behaved"
arch=('any')
url="http://ms-ati.github.com/docile/"
license=("MIT")
groups=()
depends=('ruby' 'ruby-rake' 'ruby-rspec' 'ruby-yard' 'ruby-redcarpet' 'ruby-github-markup' 'ruby-coveralls')
makedepends=('ruby')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=("http://gems.rubyforge.org/gems/docile-${pkgver}.gem")
noextract=("docile-${pkgver}.gem")
md5sums=('06e2b2f825e9ee922808575c997fdb76')

package() {
  cd "${srcdir}"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "$pkgdir$_gemdir" docile-$pkgver.gem \
    -n "$pkgdir/usr/bin"
}

