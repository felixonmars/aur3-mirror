# Maintainer: Philipp Überbacher <hollunder at gmx dot at>
pkgname=ll-scope
pkgver=0.2.1
pkgrel=1 
pkgdesc="DSSI oscilloscope plugin."
url="http://www.student.nada.kth.se/~d00-llu/music_dssi.php?lang=en"
arch=('i686' 'x86_64')
license=('GPL')
depends=('liblo' 'libglademm')
makedepends=('dssi')
source=(http://www.student.nada.kth.se/~d00-llu/plugins/ll-scope/${pkgname}-${pkgver}.tar.bz2 \
ll-scope.patch)
md5sums=('2f3350423df5349528bcf6e1ef503ec0'
         'e7e932d5a62064aaf754c876a9736417')

build() {
  cd "${srcdir}"
  patch -p0 -i ../ll-scope.patch || return 1 
  
  cd "${srcdir}/${pkgname}-${pkgver}"
  make || return 1
  make PREFIX="${pkgdir}" install || return 1
}
