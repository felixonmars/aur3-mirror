pkgname=ccsm-dev
pkgver=0.9.5.0
pkgrel=1
pkgdesc="CompizConfig Settings Manager in Python"
arch=('any')
url="http://compiz.org"
install="ccsm-dev.install"
license=('GPL')
provides=('ccsm')
conflicts=('ccsm')
depends=('compizconfig-python-dev' 'pygtk')
optdepends=('xorg-xprop: grab various window properties for use in window matching rules')
source=("http://releases.compiz.org/$pkgver/ccsm-${pkgver}.tar.bz2")
sha1sums=('37d03bae24eb9bb0a9c3ec229803f7a977eab768')

build()
{
	cd "ccsm-${pkgver}"
	python2 setup.py build --prefix="/usr"
	python2 setup.py install --prefix="/usr" --root="${pkgdir}"
}
