# Maintainer: Andrew Rabert <arabert@nullsum.net>

pkgname=kid3-qt-git
pkgver=20121015
pkgrel=1
pkgdesc="An MP3, Ogg/Vorbis and FLAC tag editor (without KDE dependencies)"
arch=('i686' 'x86_64')
url="http://kid3.sourceforge.net/"
license=('GPL')
install=$pkgname.install
makedepends=('cmake' 'docbook-xsl' 'git')
depends=('id3lib' 'tunepimp' 'qt' 'chromaprint')
conflicts=('kid3-qt')

_gitroot="git://git.code.sf.net/p/kid3/code"
_gitname="kid3-qt"

build() {
    cd "$srcdir"

    msg "Connecting to the GIT server...."
    if [[ -d "$_gitname" ]]; then
        cd "$_gitname" && git pull origin && cd "$srcdir"
        msg "The local files are updated."
    else
        git clone "$_gitroot" "$_gitname"
    fi

    msg "GIT checkout done or server timeout"
    msg "Starting build..."

    rm -rf "$_gitname-build"
    git clone "$_gitname" "$_gitname-build"
    cd "$_gitname-build"

    cmake -DCMAKE_INSTALL_PREFIX=/usr \
        -DWITH_KDE=OFF \
        -DWITH_PHONON=OFF \
        -DWITH_DBUS=OFF \
        -DDOCBOOK_XSL_DIR=/usr/share/xml/docbook/xsl-stylesheets-1.75.2/
    make
}

package() {
    cd "$srcdir/$_gitname-build"

    make DESTDIR="$pkgdir" install
}
