# Contributor: Timur Antipin < kosmocap (at) gmail.com >

pkgname=vacuum
pkgver=1.1.0
pkgrel=2
pkgdesc='Cross-platform Qt-based jabber client'
arch=('i686' 'x86_64')
url='http://code.google.com/p/vacuum-im/'
license=('GPL3')
conflicts=('vacuum-svn')
depends=('qt>=4.5.2' 'openssl')
makedepends=('make' 'cmake')
source=('http://vacuum-im.googlecode.com/files/vacuum-1.1.0.tar.xz')
md5sums=('3a2b97df48b7be322d5bd96b53ec8801')

build() {
  cd "${srcdir}/vacuum-${pkgver}" || return 1
  
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release . || return 1

  msg "Starting make..."
  make || return 1  
}

package() {
  cd "${srcdir}/vacuum-${pkgver}" || return 1
  
  msg "Installing to package directory..."
  make DESTDIR="${pkgdir}" install || return 1
}