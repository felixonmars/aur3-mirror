# Maintainer: Auguste Pop <auguste [at] gmail [dot] com>

pkgname=xboard-git
pkgver=20121106
pkgrel=1
pkgdesc="A graphical user interfaces for chess"
arch=('i686' 'x86_64')
url="http://www.gnu.org/software/xboard/"
license=('GPL3')
depends=('gnuchess' 'libxaw' 'texinfo' 'xdg-utils' 'cairo' 'librsvg')
makedepends=('git')
provides=('xboard')
conflicts=('xboard')
backup=(etc/xboard/xboard.conf)
install=xboard.install

_gitroot="git://git.savannah.gnu.org/xboard.git"
_gitname="xboard"

build()
{
    cd "$srcdir"
    msg "Connecting to GIT server...."

    if [[ -d $_gitname ]]; then
        cd $_gitname && git pull origin
        msg "The local files are updated."
    else
        git clone $_gitroot $_gitname
    fi

    msg "GIT checkout done or server timeout"
    msg "Starting make..."

    rm -rf "$srcdir/$_gitname-build"
    git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
    cd "$srcdir/$_gitname-build"

    #
    # BUILD HERE
    #

    # using gnuchess, which is in repo as default chess engine
    sed -i 's/fairymax/gnuchess/' gtk/xboard.h xaw/xboard.h xboard.conf.in

    ./autogen.sh
    ./configure --prefix=/usr --mandir=/usr/share/man \
        --sysconfdir=/etc/$_gitname --disable-update-mimedb \
        --with-Xaw
    make
}

package()
{
    cd "${srcdir}/$_gitname-build"
    make DESTDIR="${pkgdir}" install
}
