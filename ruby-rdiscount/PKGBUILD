# Contributor: Massimiliano Torromeo <massimiliano.torromeo at gmail dot com>
# Maintainer: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-rdiscount
_realname=rdiscount
pkgver=1.6.8
pkgrel=1
pkgdesc="Fast Implementation of Gruber's Markdown in C."
arch=(any)
url="http://github.com/rtomayko/rdiscount"
license=('GPL')
depends=('ruby')
makedepends=(rubygems)
source=(http://gems.rubyforge.org/gems/$_realname-$pkgver.gem)
noextract=($_realname-$pkgver.gem)
md5sums=('7ec04a6c8e6e91c5bb4337717a6a8437')

build() {
  cd "$srcdir"

  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_realname-$pkgver.gem
}
