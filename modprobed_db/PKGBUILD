# Contributor: graysky <graysky AT archlinux dot us>
pkgname=modprobed_db
pkgver=2.12
pkgrel=1
pkgdesc='Keeps track of EVERY kernel module that has ever been probed. Useful for those of us who make localmodconfig :)'
arch=('any')
license=('GPL')
depends=('module-init-tools')
optdepends=('sudo')
url="https://wiki.archlinux.org/index.php/Modprobed_db"
source=("http://repo-ck.com/source/$pkgname/$pkgname-$pkgver.tar.xz")
sha256sums=('968e780834c60d5029ebda6dd0cb5fe63a207df3421de127586464003b0e6886')
install=readme.install
backup=(etc/modprobed_db.conf)

package() {
	cd "$srcdir/$pkgname-$pkgver"
	install -Dm755 $pkgname "$pkgdir/usr/bin/$pkgname"
	ln -s "$pkgname" "$pkgdir/usr/bin/mdb"
  install -Dm644 $pkgname.conf "$pkgdir/etc/$pkgname.conf"
	
	# install manpage
	gzip $pkgname.manpage
	install -Dm644 $pkgname.manpage.gz "$pkgdir/usr/share/man/man8/$pkgname.8.gz"
}
