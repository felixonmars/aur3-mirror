_npmname=node-dev
pkgname=nodejs-node-dev # All lowercase
pkgver=0.2.2
pkgrel=1
pkgdesc="Smart application reloading â™» with Growl notifications and CoffeeScript support"
arch=(any)
url="http://github.com/fgnass/node-dev"
license=()
depends=(nodejs)
source=(http://registry.npmjs.org/$_npmname/-/$_npmname-$pkgver.tgz)
noextract=($_npmname-$pkgver.tgz)
sha1sums=(edec19f2c6e950f78231424ebcc700843bdff778)
build() {
  cd $srcdir
  local _npmdir="$pkgdir/usr/lib/node_modules/"
  mkdir -p $_npmdir
  cd $_npmdir
  npm install -g --prefix "$pkgdir/usr" $_npmname@$pkgver
}
