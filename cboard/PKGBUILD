pkgname=cboard
pkgver=0.6.1
pkgrel=2
pkgdesc="CBoard is an NCurses PGN browser, editor, and front end to chess engines that use the XBoard protocol." 
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/c-board/"
license=('GPL')
depends=('ncurses' 'gnuchess')
source=(http://downloads.sourceforge.net/project/c-board/$pkgver/$pkgname-$pkgver.tar.bz2)
md5sums=('c987ae4089d7bc3e8a5b3d51482bb3ab')

build() {
  cd $srcdir/$pkgname-$pkgver
  
  ./configure --prefix=/usr
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver

  make DESTDIR=$pkgdir install
}
