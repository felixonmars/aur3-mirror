diff --git a/configure.in b/configure.in
--- a/configure.in
+++ b/configure.in
@@ -6675,16 +6675,30 @@ fi
 AC_SUBST(MOZ_CAIRO_LIBS)
 
 dnl qcms
 dnl ========================================================
 
 QCMS_LIBS='$(call EXPAND_LIBNAME_PATH,mozqcms,$(DEPTH)/gfx/qcms)'    
