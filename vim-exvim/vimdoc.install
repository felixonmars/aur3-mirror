post_install() {
    echo -n "Updating vim help tags..."
    /usr/bin/vim --noplugins -u NONE -U NONE \
        --cmd ":helptags /usr/share/vim/vimfiles/doc" --cmd ":q" > /dev/null 2>&1
    echo "done."
    echo "let \$EX_DEV='/usr/share/vim' \" Generated by exVim" >> /etc/vimrc
    echo "let g:ex_toolkit_path = \$EX_DEV.'/toolkit' \" Generated by exVim " >> /etc/vimrc
}

post_upgrade() {
  post_install $1
}

post_remove() {
  post_install
}

op=$1
shift

$op $*
