pkgname=grive
pkgver=0.1.1
pkgrel=27
pkgdesc="Open source Linux client for Google Drive"
arch=('i686' 'x86_64')
url="http://grive.github.com/grive/"
license=('GPL')
categories=('network')
depends=('gcc-libs' 'curl' 'json-c' 'openssl' 'boost')
makedepends=('cmake' 'cppunit')
options=(!emptydirs)
source=("${pkgname}-v${pkgver}-${pkgrel}-src.tar.gz::https://nodeload.github.com/Grive/grive/tarball/master")

md5sums=('db554e072c4b4dcbd865224c70d8bc73')

build() {
  cd "$srcdir/Grive-grive-55c0f4e"
 
  rm -rf build
 
  mkdir build
 
  cd build
 
  cmake .. -DCMAKE_BUILD_TYPE=Release \
           -DCMAKE_INSTALL_PREFIX=/usr 

 # sed -i '5s/-pipe/-pipe -fpermissive/' "$srcdir/Grive-grive-b0c0353/build/libgrive/CMakeFiles/unittest.dir/flags.make"
 # sed -i '5s/-pipe/-pipe -fpermissive/' "$srcdir/Grive-grive-b0c0353/build/libgrive/CMakeFiles/grive.dir/flags.make"
  make
  make DESTDIR="$pkgdir/" install
}
 
