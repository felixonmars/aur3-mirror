pkgname=minetest-git
pkgver=20110927
pkgrel=1
pkgdesc="An Infiniminer/Minecraft inspired game, git version."
arch=('i686' 'x86_64')
url="http://celeron.55.lt/~celeron55/minetest/"
license=('GPL')
makedepends=('git' 'cmake' 'irrlicht' 'mesa' 'libjpeg' 'bzip2' 'libpng' 'zlib')
depends=('libjpeg' 'bzip2' 'sqlite3' 'libgl' 'libxxf86vm')
conflicts=('minetest' 'minetest-hg')
md5sums=() #generate with 'makepkg -g'

_gitroot="https://github.com/celeron55/minetest.git"
_gitname="minetest"

build() {
	cd "$srcdir"
	msg "Connecting to GIT server...."

	if [ -d $_gitname ] ; then
		cd $_gitname && git pull origin
		msg "The local files are updated."
	else
		git clone $_gitroot $_gitname
	fi

	msg "GIT checkout done or server timeout"
	msg "Starting make..."

	cd "$srcdir/$_gitname"
	cmake . -DCMAKE_INSTALL_PREFIX=/usr
	make DESTDIR=${pkgdir} install
}
