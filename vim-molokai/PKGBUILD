pkgname=vim-molokai
pkgver=1.1
pkgrel=2
pkgdesc="A port of the monokai scheme for TextMate "
arch=(any)
url="http://www.vim.org/scripts/script.php?script_id=2340"
license=('unknown')
depends=(vim)
source=('http://www.vim.org/scripts/download_script.php?src_id=9750')
md5sums=('fea8138fa815caa399f8b4fcf56bfe0e')

package() {
  cd "$srcdir"
  _installpath="${pkgdir}/usr/share/vim/vimfiles"
  install -D -m644 download_script.php?src_id\=9750 $_installpath/colors/molokai.vim
}
