
# Maintainer: Dennis Gosnell <cdep.illabout@gmail.com>
pkgname=libdockapp
pkgver=0.6.2
pkgrel=1
pkgdesc="Library that provides a framework for developing dockapps."
arch=('i686' 'x86_64')
url="http://solfertje.student.utwente.nl/~dalroi/libdockapp/"
license=('GPL')
depends=(libxpm libxext)
source=(http://solfertje.student.utwente.nl/~dalroi/libdockapp/files/$pkgname-$pkgver.tar.bz2)
md5sums=('05a9a5f295d956397e6bb53bad3a0322')


build() {
	cd "$srcdir/$pkgname-$pkgver"
 
	./configure --prefix=/usr/ --mandir="$pkgdir/usr/share/man"
	make
}

package() {
	cd "$srcdir/$pkgname-$pkgver"

	make DESTDIR="$pkgdir/" install
}
