# Contributor: Christian Sturm <reezer@reezer.org>
pkgname=perl-hash-multivalue
pkgver=0.09
pkgrel=1
pkgdesc="Store multiple values per key"
arch=(any)
url="http://search.cpan.org/dist/Hash-MultiValue/"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0')
options=(!emptydirs)
install=
source=(http://search.cpan.org/CPAN/authors/id/M/MI/MIYAGAWA/Hash-MultiValue-$pkgver.tar.gz)
md5sums=('8256297b5df8701e3123d5053413e164')

build() {
  cd "$srcdir/Hash-MultiValue-$pkgver"

  # install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
  make install DESTDIR="$pkgdir/" || return 1

  # remove perllocal.pod and .packlist
  find "$pkgdir" -name perllocal.pod -delete
  find "$pkgdir" -name .packlist -delete
}

# vim:set ts=2 sw=2 et:
