)
validpgpkeys=('EC3CBE7F607D11E663149E811D1F0DC78F173680')

package ()
{
  for exe in moz2fs{,-{,profile-}sync}
  do
    install -Dm755 "$srcdir/$pkgname-$pkgver/$exe" "$pkgdir/usr/bin/$exe"
  done
}


