# Contributor: SiD/sidious <miste7@web.de>

pkgname=splashy-theme-darch
pkgver=0.4.1
pkgrel=3
pkgdesc="Splashy theme for ArchLinux"
license=('custom')
arch=('i686' 'x86_64')
url="https://sourceforge.net/projects/splashy-darch/"
depends=('splashy')
conflicts=('splashy-themes')
source=(http://sourceforge.net/projects/splashy-darch/files/$pkgver/$pkgname-$pkgver.tar.gz)
md5sums=('53438bbb2ebd1370d10ac01e8b5d8159')

build() {
  cd $startdir/src/$pkgname-$pkgver
  
  install -m 644 -D darch-white.png $startdir/pkg/usr/share/splashy/themes/darch-white/background.png
  install -m 644 -D theme-white.xml $startdir/pkg/usr/share/splashy/themes/darch-white/theme.xml
  install -m 644 -D FreeSans.ttf $startdir/pkg/usr/share/splashy/themes/darch-white/FreeSans.ttf
  install -m 644 -D darch-white-43.png $startdir/pkg/usr/share/splashy/themes/darch-white-43/background.png
  install -m 644 -D theme-white-43.xml $startdir/pkg/usr/share/splashy/themes/darch-white-43/theme.xml
  install -m 644 -D FreeSans.ttf $startdir/pkg/usr/share/splashy/themes/darch-white-43/FreeSans.ttf
  install -m 644 -D darch-grey.png $startdir/pkg/usr/share/splashy/themes/darch-grey/background.png
  install -m 644 -D theme-grey.xml $startdir/pkg/usr/share/splashy/themes/darch-grey/theme.xml
  install -m 644 -D FreeSans.ttf $startdir/pkg/usr/share/splashy/themes/darch-grey/FreeSans.ttf
  install -m 644 -D darch-grey-43.png $startdir/pkg/usr/share/splashy/themes/darch-grey-43/background.png
  install -m 644 -D theme-grey-43.xml $startdir/pkg/usr/share/splashy/themes/darch-grey-43/theme.xml
  install -m 644 -D FreeSans.ttf $startdir/pkg/usr/share/splashy/themes/darch-grey-43/FreeSans.ttf

  # Install the license.
  install -m 755 -d $startdir/pkg/usr/share/licenses/$pkgname
  install -m 644 -D LICENSE.txt $startdir/pkg/usr/share/licenses/$pkgname/
}
