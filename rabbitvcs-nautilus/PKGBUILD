# Maintainer: Alessandro Nakamuta <alessandro dot ufms at gmail dot com>

pkgname=rabbitvcs-nautilus
pkgver=0.14.2.1
pkgrel=1
pkgdesc="Nautilus front-end for RabbitVCS"
arch=('i686' 'x86_64')
url="http://rabbitvcs.org/"
install=$pkgname.install
depends=('nautilus>=2.22.0' 'python-nautilus>=0.7.0-2' 'dbus-python>=0.80' 'rabbitvcs>=0.14.2.1')
#makedepends=()
#backup=()
license=('GPL')
source=(http://rabbitvcs.googlecode.com/files/rabbitvcs-$pkgver.tar.gz)
md5sums=('db6f73014639d93653f3e2af2b0ed11f')

build(){
	cd "$srcdir/rabbitvcs-$pkgver/clients/nautilus"
	
	mkdir -p "$pkgdir/usr/lib/nautilus/extensions-2.0/python"
	cp RabbitVCS.py "$pkgdir/usr/lib/nautilus/extensions-2.0/python"
}
