# Maintainer: Bartosz Chmura <chmurli at gmail dot com>

pkgname=ttf-chromeos-fonts
_pkgname=croscorefonts-0.0.5
pkgver=0.0.5
pkgrel=3
depends=('fontconfig' 'xorg-font-utils')
conflicts=('ttf-google-webfonts')
pkgdesc="Chrome OS true type fonts: Arimo, Tinos and Cousine"
arch=('any')
license=('custom')
source=(http://commondatastorage.googleapis.com/chromeos-localmirror/distfiles/croscorefonts-0.0.5.tar.gz)
url="http://code.google.com/p/chromium-os/issues/detail?id=5287"
install=$pkgname.install
md5sums=('1bfe49b0f625dafc5f017689d09d0b0e')

build()
{
	cd $pkgdir
	install -d -m 755 usr/share/fonts/TTF || return 1
	install -m 644 ${srcdir}/*.ttf usr/share/fonts/TTF || return 1

}

