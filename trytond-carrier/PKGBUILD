pkgname=trytond-carrier
_pkgname=trytond_carrier
pkgver=2.4.1
_pkgdir=2.4
pkgrel=2
pkgdesc="The carrier module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=2.4' 'trytond-party>=2.4' 'trytond-product>=2.4')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("2de56391f488777930c03e75c1fc68d9")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python setup.py install --root=$pkgdir
}