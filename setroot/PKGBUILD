# Maintainer: Tim Zhou <ttzhou@uwaterloo.ca>
# Author: ttz <ttzhou@uwaterloo.ca>

_pkgname=setroot
pkgname=setroot
pkgver=v1.3
pkgrel=1
pkgdesc="simple program that sets your (X11) wallpaper. inspired by the *setroots and feh."
arch=('any')
url="https://github.com/ttzhou/setroot"
license=('GPLv3')
depends=('imlib2' 'libx11' 'libxinerama')
makedepends=('git')
optdepends=('sxiv: use its image viewer along with key-handler to call setroot')
provides=("${_pkgname}")
conflicts=("${_pkgname}")
source=("git+https://github.com/ttzhou/${_pkgname}.git#tag=v1.3")
md5sums=('SKIP')

pkgver() {
  cd $_pkgname
  echo $(git describe)
}

build() {
  cd $_pkgname
  make PREFIX="usr"
}

package() {
  cd $_pkgname
  make PREFIX="usr" DESTDIR="$pkgdir" install
}

# vim:set ts=2 sw=2 et:
