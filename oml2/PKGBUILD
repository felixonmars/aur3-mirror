# Contributor: Olivier Mehani <olivier.mehani@nicta.com.au>
pkgname=oml2
pkgver=2.8.0
pkgrel=1
pkgdesc="OML is a measurement library that allows to define measurement points inside applications"
arch=(i686 x86_64)
url="http://oml.mytestbed.net/"
license=('custom:MIT-Nicta')
depends=('libxml2' 'sqlite3' 'libpcap' 'popt' 'ruby>=1.8.7')
makedepends=('git' 'autoconf>=2.69' 'automake>=1.12.1' 'libtool>=2.4.2' 'asciidoc')
checkdepends=('check')
provides=(liboml)
conflicts=(liboml)
replaces=(liboml)
source=(http://oml.mytestbed.net/attachments/download/709/${pkgname}-${pkgver}.tar.gz)
# run `makepkg -g >> PKGBUILD' to generate md5sums after uncommenting sources 

build() {
  # OML in-repo packaging trick; Remove for AUR packaging
  (cd ${startdir}/..; git archive --prefix "${pkgname}-${pkgver}/" "v${pkgver}") | tar x -C ${srcdir}
  cd "${srcdir}/${pkgname}-${pkgver}"
	autoreconf -i

  # Normal build
  cd "${srcdir}/${pkgname}-${pkgver}"
	./configure --prefix=/usr --with-doc
	make || return 1
}

check() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make -k check
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/" install
	install -D -m 0644 ${srcdir}/${pkgname}-${pkgver}/COPYING \
		${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}
# vim:set ts=2 sw=2 et:
md5sums=('be680be07a7157f148b2f38176d90b35')
