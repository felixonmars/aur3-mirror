post_install() {
  cat << EOF
=>  To generate a KSplash theme with your current wallpaper and plasma/icon theme,
    run 'KsplashThemeGenerator' as a normal user, and apply the "MyKsplashTheme"
    theme from 'System Settings -> Appearance -> Splash Screen'.
EOF
}

post_upgrade() {
  post_install $1
}
