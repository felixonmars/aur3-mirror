# Contributer: giacomogiorgianni@gmail.com 

pkgname=belle
_name=Belle
pkgver=0.1.1
pkgrel=1
pkgdesc="Qt Graphic Editor"
arch=(686 x86_64)
url="http://opendesktop.org/content/show.php/Belle?content=155259"
license=('GPL')
depends=('qt')
source=("http://opendesktop.org/CONTENT/content-files/155259-${pkgname}-${pkgver}a.tar.gz" "${pkgname}.desktop")
md5sums=('14c02db29065078dcc4859fc462e37c3'
         '4ee8afc35b6c725e6be1e720d00ad3fc')

build() {
  cd "$srcdir/$_name"

  qmake Editor/$pkgname.pro -r -config release \
    "CONFIG+=LINUX_INTEGRATED" \
    "INSTALL_ROOT_PATH=$pkgdir/usr/" \
    "LOWERED_APPNAME=$pkgname"

  install -D -m755 $pkgname ${pkgdir}/usr/bin/$pkgname
  install -D -m644 ${srcdir}/$pkgname.desktop \
		${pkgdir}/usr/share/applications/$pkgname.desktop
  #make
  #make INSTALL_ROOT=${pkgdir} install
}