# Maintainer: Philipp Ãœberbacher <murks at lavabit dot com>
pkgname=invada-studio-plugins-lv2
pkgver=1.2.0
pkgrel=2
pkgdesc="A set of LV2 audio effect plugins, ported from VST."
arch=('i686' 'x86_64')
url="http://www.invadarecords.com/Downloads.php?ID=00000264"
license=('GPL2')
depends=('gtk2')
makedepends=('lv2core')
source=(http://www.invadarecords.com/downloads/${pkgname}_${pkgver}-0.tar.gz)
md5sums=('7268424af33c65c02e73bf2b52340108')

build() {
cd "${srcdir}/${pkgname}-${pkgver}"

sed -i "s|usr/local|/usr|" Makefile
make PREFIX="/usr"
}

package() {
cd "${srcdir}/${pkgname}-${pkgver}"

make PREFIX="/usr" DESTDIR="${pkgdir}" install-sys
}
