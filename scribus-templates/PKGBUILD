pkgname=scribus-templates
#http://sourceforge.net/projects/scribus/files/extras/templates/
#http://pkgs.fedoraproject.org/repo/pkgs/scribus-templates/scribus-temp-all-1.2.1.tar.bz2/19d102ff16c295e29bb7a051c66c2c58/
pkgver=1.2.1
pkgrel=1
pkgdesc="An extended package of document templates for Scribus."
arch=('i686' 'x86_64')
url="http://www.scribus.net/?q=node/122"
license=('GPL3')
depends=('scribus')
#source=(http://www.scribus.net/sites/default/files/scribus-temp-all-$pkgver.tar_.bz2)
md5sums=('19d102ff16c295e29bb7a051c66c2c58')

build() {
    cd $srcdir/$pkgname-$pkgver
    ./configure --prefix=/usr || return 1
    make || return 1
    make DESTDIR=$pkgdir install || return 1
}
