pkgname=plank-config
pkgver=1.1.1
pkgrel=1
pkgdesc="A tool to configure Plank Dock"
arch=('i686' 'x86_64')
url="https://github.com/ernest21/Plank-Config/"
license=('GPL')
depends=('plank' )
makedepends=('vala')
md5sums=('f4dd8172a093251e4d1f7a586d0dfadc')

source=($pkgname-$pkgver.tar.gz::https://github.com/ernest21/Plank-Config/archive/v1.1.1.tar.gz)

package() {
  cd "$srcdir/Plank-Config-$pkgver"
  ./autogen.sh
  make
  make DESTDIR="$pkgdir/" install
}


