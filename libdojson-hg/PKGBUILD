# Maintainer: Eduardo Sánchez Muñoz <eduardosanchezmunoz@gmail.com>

pkgname=libdojson-hg
pkgver=9
pkgrel=1
pkgdesc="A C library to parse and write JSON files."
arch=('i686' 'x86_64')
url="https://code.google.com/p/libdojson/"
license=('LGPL')
depends=('devnow-libs-hg')
makedepends=('gcc' 'mercurial' 'cmake' 'devnow-libs-hg')
options=()
conflicts=('libdojson')
provides=('libdojson')
source=()
md5sums=()

_hgroot="https://code.google.com/p"
_hgrepo="libdojson"

build() {
	cd "$srcdir"
	
	msg "Connecting to Mercurial server...."
	
	if [ -d "$_hgrepo" ] ; then
		cd "$_hgrepo"
		hg pull -u
		msg "The local files are updated."
	else
		hg clone "$_hgroot/$_hgrepo" "$_hgrepo"
	fi
	
	msg "Mercurial checkout done or server timeout"
	msg "Starting make..."
	
	rm -rf "$srcdir/$_hgrepo-build"
	mkdir -p "$srcdir/$_hgrepo-build"
	cd "$srcdir/$_hgrepo-build"
	
	cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr "$srcdir/$_hgrepo/libdojson"
	make
}

package() {
	cd "$srcdir/$_hgrepo-build"
	make DESTDIR="$pkgdir" install
}
