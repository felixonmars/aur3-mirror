pkgname=mpd-git
pkgver=20120709
pkgrel=1
pkgdesc='Flexible, powerful, server-side application for playing music'
url='http://mpd.wikia.com/wiki/Server'
license=('GPL')
arch=('i686' 'x86_64')
depends=('libao' 'ffmpeg' 'libmodplug' 'audiofile' 'libshout' 'libmad' 'curl' 'faad2'
'sqlite' 'jack' 'libmms' 'wavpack' 'libmpcdec' 'avahi' 'libid3tag'
'libpulse')
conflicts='mpd'
makedepends=('doxygen' 'git')
source=('tmpfiles.d' 'rc.d') 
sha256sums=('c1683ba35774c85e16c70e89f7e2ed1c09619512b1a273daabbd5e34d40439bd'
            '1d297ff30a98028dc8d8437ee8e7646339156ad39d38e84370d28e5ef703483c')
backup=('etc/mpd.conf')
install=install

_gitroot="git://git.musicpd.org/master/mpd.git"
_gitname="mpd"

build() {
	cd "$srcdir"

	msg "Connecting to Git server..."

	if [ -d "$srcdir"/$_gitname ] ; then
		cd $_gitname && git pull origin
		msg "The local files are updated."
	else
		git clone $_gitroot
	fi

	msg "Git checkout done or server timeout."
	msg "Starting make..."

	# Copy Latest files to Build Directory
	cp -r "$srcdir"/$_gitname $srcdir/$_gitname-build
	cd "$srcdir"/$_gitname-build

	# Configure Source
	./autogen.sh \
		--prefix=/usr \
		--sysconfdir=/etc \
		--enable-lastfm \
		--enable-jack \
		--enable-pulse \
		--enable-documentation \
		--disable-libwrap \
		--disable-cue \
		--disable-sidplay \
		--disable-documentation \
		--with-systemdsystemunitdir=/usr/lib/systemd/system

	make
}

package() {
	cd "$srcdir"/$_gitname-build

	make DESTDIR="$pkgdir" install

	sed \
		-e '/^#playlist_directory/c playlist_directory "/var/lib/mpd/playlists"' \
		-e '/^#db_file/c db_file "/var/lib/mpd/mpd.db"' \
		-e '/^#pid_file/c pid_file "/run/mpd/mpd.pid"' \
		-e '/^#state_file/c state_file "/var/lib/mpd/mpdstate"' \
		-e '/^#user/c user "mpd"' \
		-i doc/mpdconf.example

	install -Dm755 ../rc.d "$pkgdir"/etc/rc.d/mpd
	install -d -g 45 -o 45 "$pkgdir"/var/lib/mpd/playlists
	install -Dm644 doc/mpdconf.example "$pkgdir"/etc/mpd.conf
	install -Dm644 ../tmpfiles.d "$pkgdir"/usr/lib/tmpfiles.d/mpd.conf
}
