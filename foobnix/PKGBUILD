# Maintainer: archtux <antonio.arias99999@gmail.com>

pkgname=foobnix
pkgver=2.5.23
pkgrel=o
pkgdesc="Music Player written in Python, GTK+ and Glade"
arch=('i686' 'x86_64')
url="http://www.foobnix.com/about?lang=en"
license=('GPL3')
depends=('dbus-python' 'gstreamer0.10-ffmpeg' 'gstreamer0.10-good-plugins' 'gstreamer0.10-python' 'gstreamer0.10-ugly-plugins' 'mutagen' 'pygtk' 'python-keybinder' 'python-simplejson' 'python2-chardet' 'python2-distribute')
makedepends=('gettext')
conflicts=('foobnix-git')
source=(https://launchpad.net/~foobnix-player/+archive/foobnix/+files/foobnix_${pkgver}$pkgrel.tar.gz)
md5sums=('ef044218eb4eb40bb66fa84f54b525e9')

build() {
  cd $srcdir/${pkgname}_${pkgver}*

  python2 setup.py install --root=$pkgdir --optimize=1
}