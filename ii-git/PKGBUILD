# Contributor: Chris Brannon <cmbrannon79 (at) gmail.com>

pkgname=ii-git
_pkgname=ii
pkgver=20121203
pkgrel=1
pkgdesc="A minimalist FIFO and filesystem-based IRC client"
arch=(i686 x86_64)
url="http://wmii.de/index.php/WMII/ii"
license=('MIT')
depends=('glibc')
makedepends=('git')
replaces=('ii-hg')
provides=('ii')
conflicts=('ii')
_gitroot='git://git.suckless.org/ii'
_gitname=ii


build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
    sed -i "s|%CFLAGS%|$CFLAGS|g" $_gitname-build/config.mk
    sed -i "s|%LDFLAGS%|$LDFLAGS|g" $_gitname-build/config.mk

    make -C $srcdir/$_gitname-build
}

package() {
    make -C $srcdir/$_gitname-build DESTDIR="$pkgdir" PREFIX=/usr install

    install -Dm644 $srcdir/$_gitname-build/LICENSE "$pkgdir/usr/share/licenses/ii"

    # make install sets permissions to 775...
    chmod 755 "$pkgdir/usr/bin/ii"
}
