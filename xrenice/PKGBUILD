# Contributor: fnord0 <fnord0 AT riseup DOT net>

pkgname=xrenice
pkgver=20130822
pkgrel=2
pkgdesc="Utility alters the scheduling priority by its X resource (choose window by cursor (like xkill or xprop) to change priority). GUI renice analog (X11). "
arch=('i686' 'x86_64')
url=("http://github.com/firebbs/xrenice")
license=('GPL')
provides=('')
makedepends=('git')
_gitroot=("https://github.com/firebbs/xrenice.git")
_gitname=("xrenice")



build() {
  cd ${srcdir}

 ## Git checkout
  if [ -d ${srcdir}/${_gitname} ] ; then
    msg "Git checkout:  Updating existing tree"
    cd ${_gitname} && git pull origin
    msg "Git checkout:  Tree has been updated"
  else
    msg "Git checkout:  Retrieving sources"
    git clone ${_gitroot}
  fi
  msg "Checkout completed"

 cd "$srcdir/$_gitname"
  autoreconf -fi
  ./configure --prefix=/usr
  make
}
package() {
	cd "$srcdir/$_gitname"
    make install DESTDIR="$pkgdir"
}
