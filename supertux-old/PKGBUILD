# Maintainer: Max Bruckner
pkgname=supertux-old
pkgver=0.1.3
pkgrel=4
pkgdesc="Jump and run game inspired by Super Mario Bros. This is the Milestone 1 release."
arch=('i686' 'x86_64' 'armv6h')
url="http://supertux.lethargik.org"
license=('GPL2')
depends=('sdl_mixer' 'sdl_image')
source=(http://download.berlios.de/supertux/supertux-0.1.3.tar.bz2)
md5sums=('f2fc288459f33d5cd8f645fbca737a63')

build() {
  cd "$srcdir/supertux-0.1.3"
  ./configure --prefix="$pkgdir/usr"
  sed -i -e 's/Menu:://g' src/menu.h    #fix build error
  sed -i -e 's/supertux.png/supertux-old.png/g' supertux.desktop    #prevent conflict with supertux2
  make
}


package() {
  cd "$srcdir/supertux-0.1.3"
  make install
  mv $pkgdir/usr/share/pixmaps/supertux.png $pkgdir/usr/share/pixmaps/supertux-old.png  #prevent conflict with supertux2
}
