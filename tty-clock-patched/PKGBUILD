# Contributor: Christian Gie√üen <cgie@informatik.uni-kiel.de>

pkgname=tty-clock-patched
pkgver=20130306
pkgrel=1
pkgdesc="Analog clock in ncurses without frames and with bold color support"
arch=('i686' 'x86_64')
url="http://github.com/cgie/tty-clock"
license=('Unknown')
depends=('ncurses')
makedepends=('git')
source=()
md5sums=()

_gitroot="git://github.com/cgie/tty-clock.git"
_gitname="tty-clock"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  make || return 1
  install -d $pkgdir/usr/bin
  install -m 755 $srcdir/$_gitname-build/tty-clock $pkgdir/usr/bin/tty-clock
} 
