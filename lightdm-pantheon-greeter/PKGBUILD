#Mantainer: M0Rf30
#Contributor: faidoc
pkgname=lightdm-pantheon-greeter
pkgver=0.1
pkgrel=3
pkgdesc="LightDM greeter from the ElementaryOS team written in Vala "
arch=('i686' 'x86_64')
url="https://launchpad.net/pantheon-greeter"
license=('GPL')
groups=('lightdm')
depends=('granite-bzr' 'libindicator3' 'clutter-gtk' 'lightdm')
makedepends=('cmake' 'vala')
provides=('pantheon-greeter')
install=${pkgname}.install
source=("http://ppa.launchpad.net/elementary-os/daily/ubuntu/pool/main/p/pantheon-greeter/pantheon-greeter_$pkgver-0~r129+pkg13~raring1.tar.gz")

build(){
  cd "$srcdir"/recipe*
  [ -d build ] && rm -rf build
  mkdir build
  cd build
  CFLAGS="$CFLAGS -lm -Wno-deprecated-declarations"
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr
  make ${MAKEFLAGS}
}

package(){
	cd "${srcdir}"/recipe*
	cd build
	make DESTDIR="${pkgdir}" install
}

md5sums=('3a487456a5d9ff69c98b88bb463e80fa')
