# Contributor: Brice Maron <brice bmaron net>
pkgname=merkaartor
pkgver=0.17.2
pkgrel=2
pkgdesc="An editor for the OpenStreetMap project"
arch=('i686' 'x86_64')
url="http://www.merkaartor.org/"
license=('GPL2')
depends=('qt>=4.6' 'libxslt' 'libxml2' 'exiv2' 'proj')
optdepends=('gpsd' 'inkscape')
makedepends=('boost')
conflicts=('merkaartor-svn')
source=("http://www.merkaartor.be/attachments/download/253/merkaartor-${pkgver}.tar.bz2"
	"${pkgname}.install")
md5sums=('44c49f73efa589a455bb9d3d0a284d09'
         '45ab05125b7409da2768c18182818bb0')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  lrelease ./src/src.pro
  qmake Merkaartor.pro PREFIX="/usr" \
      NODEBUG=1 RELEASE=1 \
      GEOIMAGE=1 
  make || return 1
  make INSTALL_ROOT="${pkgdir}" install
}
