pkgname=cantata
pkgver=0.7.1
pkgdesc="cantata is a (yet another!) client for the music player daemon (MPD)."
pkgrel=1
arch=('i686' 'x86_64')
url="http://kde-apps.org/content/show.php/Cantata?content=147733&PHPSESSID=a7fe7dc0cebfbf155699356fce7e7c7b"
license=(GPL)
makedepends=('cmake' 'automoc4')
provides=('cantata')
conflicts=('cantata-qt')
depends=('kdelibs' 'libmtp' 'mpg123' 'taglib' 'ffmpeg')
optdepends=('speex: replaygain support')
install=${pkgname}.install
source=("http://cantata.googlecode.com/files/${pkgname}-${pkgver}.tar.bz2")
md5sums=('d1043d2834617dbefb76658c0bfd67ca')

build(){	
  cd $srcdir/${pkgname}-${pkgver}
  mkdir build && cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr ..
  make
  make DESTDIR=${pkgdir} install
} 
