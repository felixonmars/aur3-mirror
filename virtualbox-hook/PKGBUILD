# Maintainer: Alucryd <alucryd at gmail dot com>
# Greatly inspired from catalyst-hook by Vi0L0
pkgname=virtualbox-hook
pkgver=1.0
pkgrel=2
pkgdesc="mkinitcpio hook to compile the virtualbox modules"
url="https://www.virtualbox.org/"
arch=('any')
license=('GPL3')
depends=('virtualbox-source')
conflicts=('mkinitcpio-vbox')
install=${pkgname}.install
source=("vbox")
md5sums=('c58257136ab0d4b794e906d0423469cb')

package() {
  install -m755 -d "${pkgdir}/lib/initcpio/install"
  install -m644 "${srcdir}/vbox" "${pkgdir}/lib/initcpio/install/vbox"
}
