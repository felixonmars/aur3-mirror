# Maintainer: TDY <tdy@gmx.com>

pkgname=ttf-hanazono
pkgver=20110516
pkgrel=1
pkgdesc="A Japanese Kanji font"
arch=('any')
url="http://fonts.jp/hanazono/"
license=('custom')
depends=('fontconfig' 'xorg-font-utils')
install=ttf.install
source=(http://fonts.jp/hanazono/hanazono-$pkgver.zip)
md5sums=('05c6b9d5fbc92ed7b120764afc5ad2ed')

build() {
  cd "$srcdir"
  install -Dm644 HanaMinA.ttf "$pkgdir/usr/share/fonts/TTF/HanaMinA.ttf"
  install -Dm644 HanaMinB.ttf "$pkgdir/usr/share/fonts/TTF/HanaMinB.ttf"
  install -Dm644 LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
