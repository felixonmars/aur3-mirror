# Contributor: Sebastian Benvenuti (santodelaespada) <sebastianbenvenuti@gmail.com>

pkgname=osx-aluminium-icontheme
pkgver=1.2
pkgrel=2
pkgdesc="Mac OSX Aluminium icon theme"
url="http://3rik.free.fr/Linux/Themes/"
license=('GPL')
arch=(any)
source=(http://3rik.free.fr/Linux/Themes/Xfce/OSX_Aluminium-${pkgver}.tar.bz2)
md5sums=('a9d24ef9f2809f71813e588148a11c2f')
destdir="${pkgdir}/usr/share/icons"

build() {
	cd "${srcdir}/OSX_Aluminium/128x128/apps/"

	ln -fs gnome-session-hibernate.png xfsm-hibernate.png
	ln -fs gnome-session-halt.png system-shutdown.png
	ln -fs system-config-securitylevel.png system-log-out.png
	mv gnome-session-reboot.png old.png; mv grsync.png gnome-session-reboot.png; mv old.png grsync.png
	ln -fs gnome-session-reboot.png xfsm-reboot.png
	ln -fs gnometris.png gnome-quadrapassel.png
	ln -fs abiword.png abiword_48.png
	ln -fs gnome-network-preferences.png preferences-system-network.png
	ln -fs gnome-session-suspend.png xfsm-suspend.png
	ln -fs gnome-monitor.png xfce4-taskmanager.png

	mkdir -p $destdir
	cd $srcdir
	chmod -R +r *
	cp -R OSX_Aluminium $destdir
}