# Maintainer: Phillip Smith <fukawi2@NO-SPAM.gmail.com>
# http://github.com/fukawi2/aur-packages

pkgname=pgsql-backup
pkgver=0.9.7
pkgrel=2
pkgdesc="Automatic rolling backups for PostgreSQL"
arch=('any')
url="http://fukawi2.nl/index.php?page=code-pgsql-backup"
license=('GPL')
depends=('tar' 'coreutils' 'gzip' 'postgresql-client')
backup=("etc/$pkgname/options.conf")
optdepends=('bzip2: better compression of backups')
install="$pkgname.install"
source=("https://github.com/fukawi2/pgsql-backup/raw/1803094cf4a348fdabfcd849a5a6ef76c9f1ba09/pgsql-backup"
        "https://github.com/fukawi2/pgsql-backup/raw/1803094cf4a348fdabfcd849a5a6ef76c9f1ba09/options.conf.default")
md5sums=('7c33712ce5bc427b32eae382a52636b9'
         '36eb3324b1bf56e5c3e51932488bdecd')

package() {
	install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname
	install -Dm600 options.conf.default $pkgdir/etc/$pkgname/options.conf
}

# vim:set ts=2 sw=2 et:
