# Maintainer: Peter Sitton <foxxy at foxdogstudios com>
# Past maintainer: Laszlo Papp <djszapi2 at gmail com>

pkgname=vim-vibrantink
pkgver=1.3
_scriptid=10117
pkgrel=3
pkgdesc="A Vim port of Justin Palmer's VibrantInk theme for TextMate"
arch=(i686 x86_64)
url='http://www.vim.org/scripts/script.php?script_id=1794'
license=('custom')
depends=(vim)
groups=('vim-plugins')
install=vimdoc.install

source=(
    ${pkgname}::http://www.vim.org/scripts/download_script.php?src_id=${_scriptid}
    license.txt
)

md5sums=(
    'da8b6deb4e0e9d4ff80cb83ffa7faf25'
    'efbd5986e691ce8c876fb86e8f5961ea'
)

build() {
    install -Dm755 ${srcdir}/${pkgname} ${pkgdir}/usr/share/vim/vim74/colors/vibrantink.vim && \
    install -Dm755 ${srcdir}/license.txt ${pkgdir}/usr/share/licenses/${pkgname}/license.txt
}

