depends=('perl')
makedepends=('perl-test-fatal>=0.003')
url='http://search.cpan.org/dist/Role-Tiny'
source=('http://search.cpan.org/CPAN/authors/id/M/MS/MSTROUT/Role-Tiny-1.002005.tar.gz')
