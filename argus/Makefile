PERL=/usr/bin/perl
SENDMAIL=
QPAGE=
FPING=/usr/sbin/fping
FPING6=
DATABASE=DB_File
HAVE_GD=0
AUTH_FILE=web_auth_file.pl
UPGRADE=
INSTALL_BIN=../../pkg/opt/argus/bin
INSTALL_SBIN=../../pkg/opt/argus/sbin
INSTALL_CGI=../../pkg/opt/argus/cgi-bin
INSTALL_LIB=../../pkg/opt/argus/lib
INSTALL_DATA=../../pkg/opt/argus/data
#### End of Configure section
